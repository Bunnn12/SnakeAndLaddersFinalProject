<Window x:Class="SnakeAndLaddersFinalProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakeAndLaddersFinalProject"
        xmlns:glob="clr-namespace:SnakeAndLaddersFinalProject.Globalization"
       
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Button x:Name="btnSettings" Content="{Binding [btnSettingsText], Source={x:Static glob:LocalizationManager.Current}}" HorizontalAlignment="Left" Margin="27,29,0,0" VerticalAlignment="Top" Height="26" Width="86"/>
        <Button x:Name="btnCreateMatch" Content="{Binding [btnCreateMatchText], Source={x:Static glob:LocalizationManager.Current}}" HorizontalAlignment="Center" Margin="0,125,0,0" VerticalAlignment="Top" Height="44" Width="216"/>
        <Button x:Name="btnJoinMatch" Content="{Binding [btnJoinMatchText], Source={x:Static glob:LocalizationManager.Current}}" HorizontalAlignment="Center" Margin="0,241,0,0" VerticalAlignment="Top" Height="41" Width="216"/>
        <Label x:Name="lblCoins" Content="{Binding [lblCoinsText], Source={x:Static glob:LocalizationManager.Current}}" HorizontalAlignment="Left" Margin="143,29,0,0" VerticalAlignment="Top" Width="102"/>
        <Button x:Name="btnFriends" Content="{Binding [btnFriendsText], Source={x:Static glob:LocalizationManager.Current}}" HorizontalAlignment="Left" Margin="27,378,0,0" VerticalAlignment="Top" Height="22" Width="86"/>
        <Button x:Name="btnInventory" Content="{Binding [btnInventoryText], Source={x:Static glob:LocalizationManager.Current}}" HorizontalAlignment="Left" Margin="143,378,0,0" VerticalAlignment="Top" Height="22" Width="80"/>
        <Button x:Name="btnShop" Content="{Binding [btnShopText], Source={x:Static glob:LocalizationManager.Current}}" HorizontalAlignment="Left" Margin="249,378,0,0" VerticalAlignment="Top" Height="22" Width="90"/>
        <Button x:Name="btnMainWIndow" Content="{Binding [btnMainWindowText], Source={x:Static glob:LocalizationManager.Current}}" HorizontalAlignment="Left" Margin="372,378,0,0" VerticalAlignment="Top" Height="22" Width="104"/>
        <Button x:Name="btnSkins" Content="{Binding [btnSkinsText], Source={x:Static glob:LocalizationManager.Current}}" HorizontalAlignment="Left" Margin="508,378,0,0" VerticalAlignment="Top" Height="22" Width="100"/>
        <Button x:Name="btnProfile" Content="{Binding [btnProfileText], Source={x:Static glob:LocalizationManager.Current}}" HorizontalAlignment="Left" Margin="665,378,0,0" VerticalAlignment="Top" Height="22" Width="92"/>

    </Grid>
</Window>
