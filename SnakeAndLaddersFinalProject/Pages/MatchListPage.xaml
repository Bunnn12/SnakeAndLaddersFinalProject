<Page x:Class="SnakeAndLaddersFinalProject.Pages.MatchListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:language="clr-namespace:SnakeAndLaddersFinalProject.Properties.Langs"
      mc:Ignorable="d"
      d:DesignHeight="720"
      d:DesignWidth="1280"
      Title="MatchListPage"
      Background="Transparent">

    <Page.Resources>
        <Storyboard x:Key="MainPageVideoStoryboard"
                    RepeatBehavior="Forever">
            <MediaTimeline
                Source="pack://siteoforigin:,,,/Assets/Videos/MainPageVideo.mp4"
                Storyboard.TargetName="VideoBg" />
        </Storyboard>
    </Page.Resources>

    <Grid Background="Transparent">

        <!-- FONDO VIDEO -->
        <MediaElement x:Name="VideoBg"
                      IsMuted="True"
                      Stretch="UniformToFill"
                      IsHitTestVisible="False"
                      Panel.ZIndex="-1"
                      LoadedBehavior="Manual"
                      UnloadedBehavior="Manual">
            <MediaElement.Triggers>
                <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                    <BeginStoryboard Storyboard="{StaticResource MainPageVideoStoryboard}" />
                </EventTrigger>
            </MediaElement.Triggers>
        </MediaElement>

        <!-- TARJETA -->
        <Border Margin="24"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                MaxWidth="900"
                CornerRadius="16"
                Padding="24">
            <Border.Background>
                <SolidColorBrush Color="#FF000000"
                                 Opacity="0.50" />
            </Border.Background>

            <Border.Effect>
                <DropShadowEffect BlurRadius="18"
                                  ShadowDepth="0"
                                  Opacity="0.55" />
            </Border.Effect>

            <!-- CONTENIDO SIN SCROLLVIEWER EXTERNO -->
            <Grid Margin="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- título -->
                    <RowDefinition Height="Auto"/>
                    <!-- barra superior -->
                    <RowDefinition Height="Auto"/>
                    <!-- buscar -->
                    <RowDefinition Height="*"/>
                    <!-- lista -->
                    <RowDefinition Height="Auto"/>
                    <!-- barra inferior -->
                </Grid.RowDefinitions>

                <!-- Título -->
                <TextBlock x:Name="lblTitle"
                           Grid.Row="0"
                           Text="{x:Static language:Lang.lblMatchListTitle}"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Margin="0,6,0,12"
                           Foreground="White"
                           HorizontalAlignment="Center" />

                <!-- Barra superior -->
                <Grid Grid.Row="1"
                      Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Button x:Name="btnBack"
                            Grid.Column="0"
                            Content="{x:Static language:Lang.btnBackText}"
                            Width="127"
                            Height="30"
                            Margin="0,0,8,0"
                            Click="Back" />

                    <Grid Grid.Column="1" />

                    <Button x:Name="btnSettings"
                            Grid.Column="2"
                            Content="{x:Static language:Lang.btnSettingsText}"
                            Width="121"
                            Height="30"
                            Click="Settings" />
                </Grid>

                <!-- Buscar por código -->
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,12">
                    <Label x:Name="lblFindMatch"
                           Content="{x:Static language:Lang.lblFindMatchText}"
                           VerticalAlignment="Center"
                           Margin="0,0,8,0"
                           Foreground="White" />
                    <TextBox x:Name="txtFindMatch"
                             Width="220"
                             Height="28"
                             VerticalAlignment="Center"
                             Margin="0,0,8,0"
                             Background="#22000000"
                             BorderBrush="#DDDDDD"
                             Foreground="White" />
                    <Button x:Name="btnJoinByCode"
                            Content="{x:Static language:Lang.btnJoinMatchText}"
                            Width="140"
                            Height="30"
                            Click="JoinByCode" />
                </StackPanel>

                <!-- LISTA DE PARTIDAS -->
                <!-- LISTA DE PARTIDAS (estilo original) -->
                <Grid Grid.Row="3" Margin="0,0,0,12">
                    <DataGrid x:Name="tvMatchList"
              AutoGenerateColumns="False"
              IsReadOnly="True"
              SelectionMode="Single"
              ItemsSource="{Binding PublicLobbies}"
              MouseDoubleClick="TvMatchListMouseDoubleClick">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Código"
                                Binding="{Binding CodigoPartida}"
                                Width="*" />
                            <DataGridTextColumn Header="Host"
                                Binding="{Binding HostUserName}"
                                Width="*" />
                            <DataGridTextColumn Header="Jugadores"
                                Binding="{Binding CurrentPlayers}" />
                            <DataGridTextColumn Header="Dificultad"
                                Binding="{Binding Difficulty}"
                                Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>


                <!-- Barra inferior -->
                <StackPanel Grid.Row="4"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Page>
