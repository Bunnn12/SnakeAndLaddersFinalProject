<Page x:Class="SnakeAndLaddersFinalProject.Pages.MatchListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:language="clr-namespace:SnakeAndLaddersFinalProject.Properties.Langs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MatchListPage">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- barra superior -->
            <RowDefinition Height="Auto"/>
            <!-- buscar por código -->
            <RowDefinition Height="*"/>
            <!-- lista -->
            <RowDefinition Height="Auto"/>
            <!-- barra inferior -->
        </Grid.RowDefinitions>

        <!-- Barra superior: título + botones -->
        <Grid Grid.Row="0" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btnBack"
                    Grid.Column="0"
                    Content="{x:Static language:Lang.btnBackText}"
                    Width="127"
                    Height="30"
                    Margin="0,0,8,0"
                    Click="BtnBack_Click"/>

            <Label x:Name="lblMatchList"
                   Grid.Column="1"
                   Content="{x:Static language:Lang.lblMatchListTitle}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>

            <Button x:Name="btnSettings"
                    Grid.Column="2"
                    Content="{x:Static language:Lang.btnSettingsText}"
                    Width="121"
                    Height="30"
                    Click="BtnSettings_Click"/>
        </Grid>

        <!-- Buscar por código -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,12">
            <Label x:Name="lblFindMatch"
                   Content="{x:Static language:Lang.lblFindMatchText}"
                   VerticalAlignment="Center"
                   Margin="0,0,8,0"/>
            <TextBox x:Name="txtFindMatch"
                     Width="220"
                     Height="28"
                     VerticalAlignment="Center"
                     Margin="0,0,8,0"/>
            <Button x:Name="btnJoinByCode"
                    Content="{x:Static language:Lang.btnJoinMatchText}"
                    Width="140"
                    Height="30"
                    Click="BtnJoinByCode_Click"/>
        </StackPanel>

        <!-- Lista de partidas públicas -->
        <Grid Grid.Row="2" Margin="0,0,0,12">
            <DataGrid x:Name="tvMatchList"
          AutoGenerateColumns="False"
          IsReadOnly="True"
          SelectionMode="Single"
          ItemsSource="{Binding PublicLobbies}"
          MouseDoubleClick="TvMatchListMouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Código"
                            Binding="{Binding CodigoPartida}"
                            Width="*" />
                    <DataGridTextColumn Header="Host"
                            Binding="{Binding HostUserName}"
                            Width="*" />
                    <DataGridTextColumn Header="Jugadores"
                            Binding="{Binding CurrentPlayers}"  />
                    <DataGridTextColumn Header="Dificultad"
                            Binding="{Binding Difficulty}"
                            Width="*" />
                </DataGrid.Columns>
            </DataGrid>

        </Grid>

        <!-- Barra inferior: navegación secundaria -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,0">
            <Button x:Name="btnFriends"
                    Content="{x:Static language:Lang.btnFriendsText}"
                    Width="115"
                    Height="30"
                    Margin="0,0,8,0"
                    Click="BtnFriends_Click"/>
            <Button x:Name="btnShop"
                    Content="{x:Static language:Lang.btnShopText}"
                    Width="106"
                    Height="30"
                    Margin="0,0,8,0"
                    Click="BtnShop_Click"/>
            <Button x:Name="btnInventory"
                    Content="{x:Static language:Lang.btnInventoryText}"
                    Width="107"
                    Height="30"
                    Margin="0,0,8,0"
                    Click="BtnInventory_Click"/>
            <Button x:Name="btnSkins"
                    Content="{x:Static language:Lang.btnSkinsText}"
                    Width="105"
                    Height="30"
                    Margin="0,0,8,0"
                    Click="BtnSkins_Click"/>
            <Button x:Name="btnProfile"
                    Content="{x:Static language:Lang.btnProfileText}"
                    Width="103"
                    Height="30"
                    Click="BtnProfile_Click"/>
        </StackPanel>
    </Grid>
</Page>
