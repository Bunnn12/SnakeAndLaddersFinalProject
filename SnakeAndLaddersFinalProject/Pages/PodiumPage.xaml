<Page x:Class="SnakeAndLaddersFinalProject.Pages.PodiumPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignWidth="960"
      d:DesignHeight="540"
      Title="PodiumPage">

    <Grid Background="#002347">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0"
                   Margin="0,24,0,16"
                   HorizontalAlignment="Center"
                   Text="{Binding Title}"
                   FontSize="32"
                   FontWeight="Bold"
                   Foreground="White" />

        <!-- Ganador -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,24">
            <TextBlock Text="Ganador:"
                       Margin="0,0,8,0"
                       FontSize="20"
                       Foreground="White" />
            <TextBlock Text="{Binding WinnerName}"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="Gold" />
        </StackPanel>

        <!-- Podio visual -->
        <Border Grid.Row="2"
                Margin="40,0,40,0"
                CornerRadius="12"
                Background="#00152B"
                BorderBrush="#335577"
                BorderThickness="1">
            <Grid Margin="24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- 2do lugar (izquierda) -->
                <StackPanel Grid.Column="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Margin="0,0,0,24">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SecondPlace}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <Border Width="110"
                            Height="110"
                            CornerRadius="55"
                            Background="#00152B"
                            BorderBrush="#335577"
                            BorderThickness="2"
                            Margin="0,0,0,8">
                        <Image Source="{Binding SecondPlace.SkinImagePath}"
                               Stretch="UniformToFill"
                               Margin="8" />
                    </Border>

                    <Border Width="120"
                            Height="60"
                            CornerRadius="12"
                            Background="#002546">
                        <StackPanel VerticalAlignment="Center"
                                    HorizontalAlignment="Center">
                            <TextBlock Text="#2"
                                       HorizontalAlignment="Center"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="White" />
                            <TextBlock Text="{Binding SecondPlace.DisplayName}"
                                       HorizontalAlignment="Center"
                                       FontSize="14"
                                       Foreground="White" />
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- 1er lugar (centro, más alto) -->
                <StackPanel Grid.Column="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Margin="0,0,0,24">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding FirstPlace}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <Border Width="130"
                            Height="130"
                            CornerRadius="65"
                            Background="#00152B"
                            BorderBrush="Gold"
                            BorderThickness="3"
                            Margin="0,0,0,8">
                        <Image Source="{Binding FirstPlace.SkinImagePath}"
                               Stretch="UniformToFill"
                               Margin="8" />
                    </Border>

                    <Border Width="140"
                            Height="80"
                            CornerRadius="12"
                            Background="#334400">
                        <StackPanel VerticalAlignment="Center"
                                    HorizontalAlignment="Center">
                            <TextBlock Text="#1"
                                       HorizontalAlignment="Center"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       Foreground="White" />
                            <TextBlock Text="{Binding FirstPlace.DisplayName}"
                                       HorizontalAlignment="Center"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="Gold" />
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- 3er lugar (derecha) -->
                <StackPanel Grid.Column="2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Margin="0,0,0,24">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ThirdPlace}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <Border Width="100"
                            Height="100"
                            CornerRadius="50"
                            Background="#00152B"
                            BorderBrush="#335577"
                            BorderThickness="2"
                            Margin="0,0,0,8">
                        <Image Source="{Binding ThirdPlace.SkinImagePath}"
                               Stretch="UniformToFill"
                               Margin="8" />
                    </Border>

                    <Border Width="120"
                            Height="50"
                            CornerRadius="12"
                            Background="#002546">
                        <StackPanel VerticalAlignment="Center"
                                    HorizontalAlignment="Center">
                            <TextBlock Text="#3"
                                       HorizontalAlignment="Center"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="White" />
                            <TextBlock Text="{Binding ThirdPlace.DisplayName}"
                                       HorizontalAlignment="Center"
                                       FontSize="13"
                                       Foreground="White" />
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Botón continuar -->
        <Button Grid.Row="3"
                Content="Continuar"
                Width="150"
                Height="40"
                Margin="0,24,0,24"
                HorizontalAlignment="Center"
                Command="{Binding CloseCommand}" />
    </Grid>
</Page>
