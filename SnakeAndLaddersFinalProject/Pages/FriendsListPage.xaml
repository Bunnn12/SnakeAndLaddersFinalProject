<Page x:Class="SnakeAndLaddersFinalProject.Pages.FriendsListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:language="clr-namespace:SnakeAndLaddersFinalProject.Properties.Langs"
      mc:Ignorable="d"
      Title="FriendsListPage"
      d:DesignWidth="1280"
      d:DesignHeight="720"
      SnapsToDevicePixels="True"
      UseLayoutRounding="True"
      TextOptions.TextRenderingMode="Aliased"
      Background="Transparent">

    <Page.Resources>

        <!-- Background -->
        <ImageBrush x:Key="RankingBackgroundBrush"
                    ImageSource="/Assets/Images/Backgrounds/RankingBackground.png"
                    Stretch="UniformToFill"
                    AlignmentX="Center"
                    AlignmentY="Center"
                    RenderOptions.BitmapScalingMode="NearestNeighbor" />

        <!-- Shadow -->
        <DropShadowEffect x:Key="ShadowSoft"
                          BlurRadius="10"
                          ShadowDepth="0"
                          Direction="270"
                          Opacity="0.6"
                          Color="#22000000" />

        <!-- Wood palette -->
        <SolidColorBrush x:Key="BrushBoardBackground" Color="#F7C76B" />
        <SolidColorBrush x:Key="BrushBoardBorder"     Color="#9B4C24" />
        <SolidColorBrush x:Key="BrushBoardInner"      Color="#FEE1A9" />
        <SolidColorBrush x:Key="BrushBoardInnerBorder" Color="#D0893A" />

        <!-- Grid colors -->
        <SolidColorBrush x:Key="BrushGridHeader"      Color="#E37A2B" />
        <SolidColorBrush x:Key="BrushGridHeaderText"  Color="#321309" />
        <SolidColorBrush x:Key="BrushGridRowNormal"       Color="#FEE7BC" />
        <SolidColorBrush x:Key="BrushGridRowAlternating"  Color="#FBD9A0" />

        <!-- Text -->
        <SolidColorBrush x:Key="BrushHeaderText" Color="#FFFDF2" />
        <SolidColorBrush x:Key="BrushFooterText" Color="#FFFDF2" />
        <SolidColorBrush x:Key="BrushWoodDark"   Color="#5C3721" />

        <!-- Title -->
        <Style x:Key="LblRankingTitle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource BrushHeaderText}" />
            <Setter Property="FontFamily" Value="Impact" />
            <Setter Property="FontSize" Value="48" />
            <Setter Property="TextWrapping" Value="NoWrap" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Effect" Value="{StaticResource ShadowSoft}" />
        </Style>

        <!-- Back button -->
        <Style x:Key="BtnBackRanking" TargetType="Button">
            <Setter Property="Width" Value="80" />
            <Setter Property="Height" Value="80" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>

        <!-- Icon button -->
        <Style x:Key="BtnIcon" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Effect" Value="{StaticResource ShadowSoft}" />
            <Setter Property="ToolTipService.ShowDuration" Value="6000" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ScrollBar -->
        <Style TargetType="ScrollBar">
            <Setter Property="Width" Value="12" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="Transparent">
                            <Border Background="#F7C76B" CornerRadius="4">
                                <Track x:Name="PART_Track"
                                       Orientation="{TemplateBinding Orientation}"
                                       IsDirectionReversed="true">
                                    <Track.DecreaseRepeatButton>
                                        <RepeatButton Visibility="Collapsed" />
                                    </Track.DecreaseRepeatButton>
                                    <Track.IncreaseRepeatButton>
                                        <RepeatButton Visibility="Collapsed" />
                                    </Track.IncreaseRepeatButton>
                                    <Track.Thumb>
                                        <Thumb Background="#B56524"
                                               BorderBrush="#7A3A12"
                                               BorderThickness="1">
                                            <Thumb.Template>
                                                <ControlTemplate TargetType="Thumb">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="4" />
                                                </ControlTemplate>
                                            </Thumb.Template>
                                        </Thumb>
                                    </Track.Thumb>
                                </Track>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Orientation" Value="Horizontal">
                                <Setter Property="Height" Value="12" />
                                <Setter Property="Width"  Value="Auto" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid base -->
        <Style x:Key="RankingDataGridStyle" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False" />
            <Setter Property="HeadersVisibility" Value="Column" />
            <Setter Property="CanUserAddRows" Value="False" />
            <Setter Property="CanUserDeleteRows" Value="False" />
            <Setter Property="CanUserResizeRows" Value="False" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="GridLinesVisibility" Value="Horizontal" />
            <Setter Property="RowHeaderWidth" Value="0" />
            <Setter Property="SelectionMode" Value="Single" />
            <Setter Property="SelectionUnit" Value="FullRow" />
            <Setter Property="AlternationCount" Value="2" />
            <Setter Property="FontFamily" Value="Bahnschrift SemiBold" />
            <Setter Property="FontSize" Value="22" />
            <Setter Property="RowBackground" Value="{StaticResource BrushGridRowNormal}" />
            <Setter Property="AlternatingRowBackground" Value="{StaticResource BrushGridRowAlternating}" />
            <Setter Property="HorizontalGridLinesBrush" Value="#33000000" />
            <Setter Property="VerticalGridLinesBrush" Value="#00000000" />
            <Setter Property="ColumnHeaderHeight" Value="56" />
            <Setter Property="RowHeight" Value="52" />
            <Setter Property="Foreground" Value="#321309" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="{StaticResource BrushGridHeader}" />
                        <Setter Property="Foreground" Value="{StaticResource BrushGridHeaderText}" />
                        <Setter Property="FontFamily" Value="Bahnschrift SemiBold" />
                        <Setter Property="FontSize" Value="22" />
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                        <Setter Property="BorderBrush" Value="{StaticResource BrushBoardInnerBorder}" />
                        <Setter Property="BorderThickness" Value="0,0,0,2" />
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="Padding" Value="0" />
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#FFD67A2B" />
                                <Setter Property="Foreground" Value="#321309" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Centered cell text -->
        <Style x:Key="CenterCellStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontFamily" Value="Bahnschrift SemiBold" />
            <Setter Property="FontSize" Value="22" />
        </Style>

        <!-- Buttons -->
        <FontFamily x:Key="Font.RankingMain">Bahnschrift SemiBold</FontFamily>

        <Style x:Key="PrimaryActionButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="260" />
            <Setter Property="Height" Value="52" />
            <Setter Property="FontFamily" Value="{StaticResource Font.RankingMain}" />
            <Setter Property="FontSize" Value="22" />
            <Setter Property="Foreground" Value="#321309" />
            <Setter Property="Background" Value="#E37A2B" />
            <Setter Property="BorderBrush" Value="#D0893A" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Effect" Value="{StaticResource ShadowSoft}" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style x:Key="SecondaryActionButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource PrimaryActionButtonStyle}">
            <Setter Property="Background" Value="#FBD9A0" />
            <Setter Property="BorderBrush" Value="#D0893A" />
        </Style>

    </Page.Resources>

    <Grid Background="{StaticResource RankingBackgroundBrush}">
        <Viewbox Stretch="Uniform" StretchDirection="Both">
            <Grid Width="1280" Height="720" Background="Transparent" Margin="24">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Grid.Row="0" Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="btnBack"
                            Grid.Column="0"
                            Style="{StaticResource BtnBackRanking}"
                            ToolTip="{x:Static language:Lang.btnBackText}"
                            Click="Back">
                        <Image Source="/Assets/Images/Icons/BackIcon.png"
                               Width="48"
                               Height="48"
                               Stretch="Fill"
                               RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                    </Button>

                    <Border Grid.Column="1"
                            CornerRadius="10"
                            BorderBrush="{StaticResource BrushWoodDark}"
                            BorderThickness="4"
                            Padding="40,8"
                            HorizontalAlignment="Center"
                            Effect="{StaticResource ShadowSoft}"
                            Background="#FF59320B">
                        <TextBlock Text="{x:Static language:Lang.lblFriendsListTitle}"
                                   d:Text="Friends list"
                                   Style="{StaticResource LblRankingTitle}"
                                   HorizontalAlignment="Center"
                                   FontFamily="{StaticResource Font.M04B}"
                                   FontWeight="Bold"
                                   FontSize="36"/>
                    </Border>
                </Grid>

                <!-- Content -->
                <Grid Grid.Row="1"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center">
                    <Border CornerRadius="0"
                            Width="1000"
                            Height="520"
                            Background="{StaticResource BrushBoardBackground}"
                            BorderBrush="{StaticResource BrushBoardBorder}"
                            BorderThickness="10"
                            Padding="10"
                            Effect="{StaticResource ShadowSoft}">
                        <Border CornerRadius="0"
                                Background="{StaticResource BrushBoardInner}"
                                BorderBrush="{StaticResource BrushBoardInnerBorder}"
                                BorderThickness="4"
                                Padding="12">

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="12" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!-- Friends grid -->
                                <DataGrid x:Name="tvFriends"
                                          Grid.Row="0"
                                          Style="{StaticResource RankingDataGridStyle}"
                                          MinRowHeight="52"
                                          SelectionMode="Single"
                                          SelectionUnit="FullRow"
                                          PreviewKeyDown="TvFriendsPreviewKeyDown">

                                    <DataGrid.RowStyle>
                                        <Style TargetType="DataGridRow">
                                            <EventSetter Event="MouseDoubleClick"
                                                         Handler="TvFriendsRowDoubleClick"/>
                                        </Style>
                                    </DataGrid.RowStyle>

                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="{x:Static language:Lang.txtUsernameText}"
                                                            Binding="{Binding FriendUserName}"
                                                            Width="*"
                                                            ElementStyle="{StaticResource CenterCellStyle}" />

                                        <!-- Columna de opciones (tres puntitos) -->
                                        <DataGridTemplateColumn Width="60"
                        IsReadOnly="True">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button x:Name="btnFriendMenu"
                    Style="{StaticResource BtnIcon}"
                    Click="FriendMenu"
                    ToolTip="poner tooltip, opciones amigos">
                                                        <Button.ContextMenu>
                                                            <ContextMenu>
                                                                <MenuItem Header="{x:Static language:Lang.lblProfileStatsTitle}"
                  Click="ViewStats" />
                                                                <MenuItem Header="{x:Static language:Lang.btnUnfriendText}"
                  Click="Unfriend" />
                                                            </ContextMenu>
                                                        </Button.ContextMenu>


                                                        <!-- Tres puntos HORIZONTALES -->
                                                        <TextBlock Text="⋯"
                           FontSize="26"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                                                    </Button>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>


                                    </DataGrid.Columns>
                                </DataGrid>

                                <!-- Bottom actions -->
                                <StackPanel Grid.Row="2"
                                            Orientation="Horizontal"
                                            HorizontalAlignment="Center"
                                            Margin="0,8,0,0">
                                    <Button x:Name="btnAddFriends"
                                            Content="{x:Static language:Lang.btnAddFriendText}"
                                            Style="{StaticResource PrimaryActionButtonStyle}"
                                            Margin="6"
                                            Click="AddFriends"/>
                                    <Button x:Name="btnFriendRequests"
                                            Content="{x:Static language:Lang.btnFriendRequestsText}"
                                            Style="{StaticResource SecondaryActionButtonStyle}"
                                            Margin="6"
                                            Click="FriendRequests"/>
                                </StackPanel>
                            </Grid>

                        </Border>
                    </Border>
                </Grid>

                <!-- Bottom bar -->
                <Grid Grid.Row="2" Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="246*" />
                        <ColumnDefinition Width="201*" />
                        <ColumnDefinition Width="13*" />
                        <ColumnDefinition Width="0*" />
                        <ColumnDefinition Width="259*" />
                        <ColumnDefinition Width="0*" />
                        <ColumnDefinition Width="10*" />
                        <ColumnDefinition Width="11*" />
                        <ColumnDefinition Width="246*" />
                        <ColumnDefinition Width="246*" />
                    </Grid.ColumnDefinitions>

                    <Button x:Name="btnShop"
                            Grid.Column="1"
                            Margin="8,-24,8,0"
                            Style="{StaticResource BtnIcon}"
                            ToolTip="{x:Static language:Lang.btnShopText}"/>

                    <Button x:Name="btnInventory"
                            Grid.Column="4"
                            Margin="57,-23,39,0"
                            Style="{StaticResource BtnIcon}"
                            ToolTip="{x:Static language:Lang.btnInventoryText}"/>

                    <Button x:Name="btnSkins"
                            Grid.Column="7"
                            Grid.ColumnSpan="2"
                            Margin="10,-24,0,0"
                            Style="{StaticResource BtnIcon}"
                            ToolTip="{x:Static language:Lang.btnSkinsText}"/>
                </Grid>

            </Grid>
        </Viewbox>
    </Grid>
</Page>
