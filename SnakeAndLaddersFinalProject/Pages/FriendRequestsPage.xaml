<Page x:Class="SnakeAndLaddersFinalProject.Pages.FriendRequestsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:language="clr-namespace:SnakeAndLaddersFinalProject.Properties.Langs"
      mc:Ignorable="d"
      Title="FriendRequestsPage"
      d:DesignWidth="1280"
      d:DesignHeight="720"
      SnapsToDevicePixels="True"
      UseLayoutRounding="True"
      TextOptions.TextRenderingMode="Aliased"
      Background="Transparent">

    <Page.Resources>

        <!-- Fondo tipo Ranking -->
        <ImageBrush x:Key="RankingBackgroundBrush"
                    ImageSource="/Assets/Images/Backgrounds/RankingBackground.png"
                    Stretch="UniformToFill"
                    AlignmentX="Center"
                    AlignmentY="Center"
                    RenderOptions.BitmapScalingMode="NearestNeighbor" />

        <!-- Sombra -->
        <DropShadowEffect x:Key="ShadowSoft"
                          BlurRadius="10"
                          ShadowDepth="0"
                          Direction="270"
                          Opacity="0.6"
                          Color="#22000000" />

        <!-- Paleta madera / tabla -->
        <SolidColorBrush x:Key="BrushBoardBackground" Color="#F7C76B" />
        <SolidColorBrush x:Key="BrushBoardBorder"     Color="#9B4C24" />
        <SolidColorBrush x:Key="BrushBoardInner"      Color="#FEE1A9" />
        <SolidColorBrush x:Key="BrushBoardInnerBorder" Color="#D0893A" />

        <!-- Encabezados tabla -->
        <SolidColorBrush x:Key="BrushGridHeader"      Color="#E37A2B" />
        <SolidColorBrush x:Key="BrushGridHeaderText"  Color="#321309" />

        <!-- Filas -->
        <SolidColorBrush x:Key="BrushGridRowNormal"       Color="#FEE7BC" />
        <SolidColorBrush x:Key="BrushGridRowAlternating"  Color="#FBD9A0" />

        <!-- Texto y madera oscura -->
        <SolidColorBrush x:Key="BrushHeaderText" Color="#FFFDF2" />
        <SolidColorBrush x:Key="BrushFooterText" Color="#FFFDF2" />
        <SolidColorBrush x:Key="BrushWoodDark"   Color="#5C3721" />

        <!-- Título -->
        <Style x:Key="LblRankingTitle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource BrushHeaderText}" />
            <Setter Property="FontFamily" Value="Impact" />
            <Setter Property="FontSize" Value="48" />
            <Setter Property="TextWrapping" Value="NoWrap" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Effect" Value="{StaticResource ShadowSoft}" />
        </Style>

        <!-- Botón Back -->
        <Style x:Key="BtnBackRanking" TargetType="Button">
            <Setter Property="Width" Value="80" />
            <Setter Property="Height" Value="80" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>

        <!-- Botón icono Settings -->
        <Style x:Key="BtnIcon" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Effect" Value="{StaticResource ShadowSoft}" />
            <Setter Property="ToolTipService.ShowDuration" Value="6000" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid estilo Ranking -->
        <Style x:Key="RankingDataGridStyle" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False" />
            <Setter Property="HeadersVisibility" Value="Column" />
            <Setter Property="CanUserAddRows" Value="False" />
            <Setter Property="CanUserDeleteRows" Value="False" />
            <Setter Property="CanUserResizeRows" Value="False" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="GridLinesVisibility" Value="Horizontal" />
            <Setter Property="RowHeaderWidth" Value="0" />
            <Setter Property="SelectionMode" Value="Single" />
            <Setter Property="SelectionUnit" Value="FullRow" />
            <Setter Property="AlternationCount" Value="2" />
            <Setter Property="FontFamily" Value="Bahnschrift SemiBold" />
            <Setter Property="FontSize" Value="22" />
            <Setter Property="RowBackground" Value="{StaticResource BrushGridRowNormal}" />
            <Setter Property="AlternatingRowBackground" Value="{StaticResource BrushGridRowAlternating}" />
            <Setter Property="HorizontalGridLinesBrush" Value="#33000000" />
            <Setter Property="VerticalGridLinesBrush" Value="#00000000" />
            <Setter Property="ColumnHeaderHeight" Value="56" />
            <Setter Property="RowHeight" Value="52" />
            <Setter Property="Foreground" Value="#321309" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="{StaticResource BrushGridHeader}" />
                        <Setter Property="Foreground" Value="{StaticResource BrushGridHeaderText}" />
                        <Setter Property="FontFamily" Value="Bahnschrift SemiBold" />
                        <Setter Property="FontSize" Value="22" />
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                        <Setter Property="BorderBrush" Value="{StaticResource BrushBoardInnerBorder}" />
                        <Setter Property="BorderThickness" Value="0,0,0,2" />
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Celdas centradas -->
        <Style x:Key="CenterCellStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontFamily" Value="Bahnschrift SemiBold" />
            <Setter Property="FontSize" Value="22" />
        </Style>

        <!-- ==================== Tabs "bonitas" estilo tablón ==================== -->
        <!-- Colores de pestañas -->
        <SolidColorBrush x:Key="BrushTabNormal"     Color="#FBD9A0" />
        <SolidColorBrush x:Key="BrushTabHover"      Color="#F7C76B" />
        <SolidColorBrush x:Key="BrushTabSelected"   Color="#E37A2B" />
        <SolidColorBrush x:Key="BrushTabBorder"     Color="#D0893A" />
        <SolidColorBrush x:Key="BrushTabText"       Color="#321309" />

        <!-- Estilo de TabItem (pestañas más grandes y con color) -->
        <Style x:Key="WoodTabItemStyle" TargetType="TabItem">
            <Setter Property="FontFamily" Value="Bahnschrift SemiBold"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="Foreground" Value="{StaticResource BrushTabText}"/>
            <Setter Property="Padding" Value="32,14"/>
            <!-- tamaño de la pestaña -->
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Background" Value="{StaticResource BrushTabNormal}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BrushTabBorder}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8,8,0,0"   
                            SnapsToDevicePixels="True">
                            <ContentPresenter x:Name="ContentSite"
                                              ContentSource="Header"
                                              Margin="0"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource BrushTabSelected}"/>
                                <Setter TargetName="Bd" Property="Effect" Value="{StaticResource ShadowSoft}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource BrushTabHover}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo del TabControl: barra superior con fondo del inner-board -->
        <Style x:Key="WoodTabControlStyle" TargetType="TabControl">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid ClipToBounds="True">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Tira de pestañas -->
                            <Border Grid.Row="0"
                                    Background="{StaticResource BrushBoardInner}"
                                    BorderBrush="{StaticResource BrushBoardInnerBorder}"
                                    BorderThickness="0,0,0,2"
                                    CornerRadius="6,6,0,0"
                                    Padding="8">
                                <TabPanel x:Name="HeaderPanel"
                                          IsItemsHost="True"
                                          Background="Transparent"
                                          Margin="4,0,0,0"
                                          SnapsToDevicePixels="True"/>
                            </Border>

                            <!-- Contenido -->
                            <Border Grid.Row="1"
                                    Background="Transparent"
                                    Padding="0,12,0,0">
                                <ContentPresenter x:Name="PART_SelectedContentHost"
                                                  Margin="0"
                                                  ContentSource="SelectedContent"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- ==================== /Tabs ==================== -->

    </Page.Resources>

    <Grid Background="{StaticResource RankingBackgroundBrush}">
        <Viewbox Stretch="Uniform" StretchDirection="Both">
            <Grid Width="1280" Height="720" Background="Transparent" Margin="24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- CABECERA -->
                <Grid Grid.Row="0" Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Back -->
                    <Button x:Name="btnBack"
                            Grid.Column="0"
                            Style="{StaticResource BtnBackRanking}"
                            ToolTip="{x:Static language:Lang.btnBackText}" Click="Back">
                        <Image Source="/Assets/Images/Icons/BackIcon.png"
                               Width="48" Height="48"
                               Stretch="Fill"
                               RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                    </Button>

                    <!-- Banner título -->
                    <Border Grid.Column="1"
                            CornerRadius="10"
                            BorderBrush="{StaticResource BrushWoodDark}"
                            BorderThickness="4"
                            Padding="40,8"
                            HorizontalAlignment="Center"
                            Effect="{StaticResource ShadowSoft}"
                            Background="#FF59320B">
                        <TextBlock Text="{x:Static language:Lang.lblFriendRequestsTitle}"
                                   d:Text="Friend Requests"
                                   Style="{StaticResource LblRankingTitle}"
                                   HorizontalAlignment="Center"
                                   FontFamily="{StaticResource Font.M04B}"
                                   FontWeight="Bold"
                                   FontSize="36"/>
                    </Border>

                    <!-- Settings -->
                </Grid>

                <!-- CONTENIDO PRINCIPAL -->
                <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Border CornerRadius="0"
                            Width="1000"
                            Height="520"
                            Background="{StaticResource BrushBoardBackground}"
                            BorderBrush="{StaticResource BrushBoardBorder}"
                            BorderThickness="10"
                            Padding="10"
                            Effect="{StaticResource ShadowSoft}">
                        <Border CornerRadius="0"
                                Background="{StaticResource BrushBoardInner}"
                                BorderBrush="{StaticResource BrushBoardInnerBorder}"
                                BorderThickness="4"
                                Padding="16">

                            <TabControl Style="{StaticResource WoodTabControlStyle}"
                                        ItemContainerStyle="{StaticResource WoodTabItemStyle}"
                                        TabStripPlacement="Top"
                                        SnapsToDevicePixels="True">
                                <!-- Recibidas -->
                                <TabItem Header="{x:Static language:Lang.lblIncomingRequests}" Margin="0,0,-57,0">
                                    <DataGrid x:Name="tvIncoming"
                                              Style="{StaticResource RankingDataGridStyle}"
                                              AutoGenerateColumns="False"
                                              IsReadOnly="True"
                                              CanUserAddRows="False"
                                              MinRowHeight="52">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="{x:Static language:Lang.txtUsernameText}"
                                                                Binding="{Binding RequesterUserName}"
                                                                Width="*"
                                                                ElementStyle="{StaticResource CenterCellStyle}" />
                                            <DataGridTemplateColumn Header="{x:Static language:Lang.btnAcceptText}" Width="160">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Button Content="{x:Static language:Lang.btnAcceptText}"
                                                                Padding="8,4"
                                                                Click="AcceptRequest"/>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTemplateColumn Header="{x:Static language:Lang.btnRejectText}" Width="160">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Button Content="{x:Static language:Lang.btnRejectText}"
                                                                Padding="8,4"
                                                                Click="RejectRequest"/>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </TabItem>

                                <!-- Enviadas -->
                                <TabItem Header="{x:Static language:Lang.lblOutgoingRequests}" Margin="62,0,-137,0">
                                    <DataGrid x:Name="tvOutgoing"
                                              Style="{StaticResource RankingDataGridStyle}"
                                              AutoGenerateColumns="False"
                                              IsReadOnly="True"
                                              CanUserAddRows="False"
                                              MinRowHeight="52">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="{x:Static language:Lang.txtUsernameText}"
                                                                Binding="{Binding TargetUserName}"
                                                                Width="*"
                                                                ElementStyle="{StaticResource CenterCellStyle}" />
                                            <DataGridTemplateColumn Header="{x:Static language:Lang.btnCancelText}" Width="160">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Button Content="{x:Static language:Lang.btnCancelText}"
                                                                Padding="8,4"
                                                                Click="CancelRequest"/>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </TabItem>
                            </TabControl>

                        </Border>
                    </Border>
                </Grid>

            </Grid>
        </Viewbox>
    </Grid>
</Page>
