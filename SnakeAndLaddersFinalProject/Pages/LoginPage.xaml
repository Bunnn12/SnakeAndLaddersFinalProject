<Page x:Class="SnakeAndLaddersFinalProject.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:language="clr-namespace:SnakeAndLaddersFinalProject.Properties.Langs"
      mc:Ignorable="d"
      d:DesignHeight="768" d:DesignWidth="1152"
      Title="LoginPage"
      SnapsToDevicePixels="True"
      TextOptions.TextRenderingMode="Aliased">

    <!-- ====== Recursos ====== -->
    <Page.Resources>
        <!-- Paleta -->
        <SolidColorBrush x:Key="Clr.Amber" Color="#F2C230"/>
        <SolidColorBrush x:Key="Clr.AmberDark" Color="#B77B18"/>
        <SolidColorBrush x:Key="Clr.Teal" Color="#1C7E78"/>
        <SolidColorBrush x:Key="Clr.TealShadow" Color="#0E4C49"/>
        <SolidColorBrush x:Key="Clr.TextLight" Color="#FFF8F0"/>
        <SolidColorBrush x:Key="Clr.BgInput" Color="#3B2417"/>
        <SolidColorBrush x:Key="Clr.BorderInput" Color="#E1B547"/>

        <!-- Título -->
        <Style x:Key="TitleLabel" TargetType="Label">
            <Setter Property="FontFamily" Value="{StaticResource Font.M04}"/>
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="Foreground" Value="{StaticResource Clr.Amber}"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <!-- Etiquetas -->
        <Style x:Key="FormLabel" TargetType="Label">
            <Setter Property="FontFamily" Value="{StaticResource Font.MinecraftStandard}"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="{StaticResource Clr.TextLight}"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <!-- Entrada texto -->
        <Style x:Key="FormTextBox" TargetType="TextBox">
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="{StaticResource Clr.TextLight}"/>
            <Setter Property="Background" Value="{StaticResource Clr.BgInput}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Clr.BorderInput}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="CaretBrush" Value="{StaticResource Clr.TextLight}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Bd" CornerRadius="3"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#FBE18C"/>
                                <Setter TargetName="Bd" Property="BorderThickness" Value="3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Password -->
        <Style x:Key="FormPasswordBox" TargetType="PasswordBox">
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="{StaticResource Clr.TextLight}"/>
            <Setter Property="Background" Value="{StaticResource Clr.BgInput}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Clr.BorderInput}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border x:Name="Bd" CornerRadius="3"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#FBE18C"/>
                                <Setter TargetName="Bd" Property="BorderThickness" Value="3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Botón ámbar -->
        <Style x:Key="BtnAmber" TargetType="Button">
            <Setter Property="FontFamily" Value="{StaticResource Font.M04}"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="Foreground" Value="#2B1A10"/>
            <Setter Property="Background" Value="{StaticResource Clr.Amber}"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="Bg" Background="{TemplateBinding Background}" CornerRadius="6"/>
                            <Border Margin="0,6,6,0" CornerRadius="6"
                                    Background="{StaticResource Clr.AmberDark}" Opacity="0.35"/>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bg" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform X="3" Y="3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Botón teal -->
        <Style x:Key="BtnTeal" TargetType="Button" BasedOn="{StaticResource BtnAmber}">
            <Setter Property="Background" Value="{StaticResource Clr.Teal}"/>
            <Setter Property="Foreground" Value="#FFF8F0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="Bg" Background="{TemplateBinding Background}" CornerRadius="6"/>
                            <Border Margin="0,6,6,0" CornerRadius="6"
                                    Background="{StaticResource Clr.TealShadow}" Opacity="0.6"/>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bg" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform X="3" Y="3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Link (solo texto) -->
        <Style x:Key="BtnLink" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="{StaticResource Clr.TextLight}"/>
            <Setter Property="FontFamily" Value="{StaticResource Font.MinecraftStandard}"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <TextBlock x:Name="Txt" Text="{TemplateBinding Content}"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Txt" Property="TextDecorations" Value="Underline"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <!-- ====== Layout ====== -->
    <Canvas x:Name="LayoutRoot"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="Aliased">

        <!-- Título (afuera) -->
        <Label x:Name="lblTitleLogin"
         Style="{StaticResource TitleLabel}"
         Content="{x:Static language:Lang.btnLoginText}"
         Width="720"
         Canvas.Left="34"
         HorizontalContentAlignment="Center" HorizontalAlignment="Left" Canvas.Top="8" VerticalAlignment="Center"/>

        <!-- Settings (afuera) -->
        <Button x:Name="btnSettings"
          Style="{StaticResource BtnFlat}"
          Content="{x:Static language:Lang.btnSettingsText}"
          Width="166" Height="69" FontSize="20"
          Canvas.Left="587" RenderTransformOrigin="0.999,0.626" Canvas.Top="-3"/>

        <!-- Marco (Border con imagen de fondo) -->
        <Border
          Width="720" Height="468"
          Padding="110,84,110,96" HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Left="34" Canvas.Top="8">
            <Border.Background>
                <ImageBrush
        ImageSource="pack://application:,,,/SnakeAndLaddersFinalProject;component/Assets/Images/Backgrounds/margen%20dorado.png"
        Stretch="Fill"
        RenderOptions.BitmapScalingMode="NearestNeighbor"/>
            </Border.Background>

            <!-- Interior del marco (tú acomodas con Left/Top) -->
            <Canvas x:Name="InnerCanvas">
                <!-- Username -->
                <Label x:Name="lblUsername"
             Style="{StaticResource FormLabel}" FontSize="12"
             Content="{x:Static language:Lang.txtUsernameText}"
             Canvas.Left="35" Canvas.Top="5"/>
                <TextBox x:Name="txtUsername"
               Style="{StaticResource FormTextBox}"
               Width="430" Height="38"
               MaxLength="50" TabIndex="0"
               Canvas.Left="35" Canvas.Top="43" HorizontalAlignment="Left" VerticalAlignment="Top"/>

                <!-- Password -->
                <Label x:Name="lblPassword"
             Style="{StaticResource FormLabel}" FontSize="12"
             Content="{x:Static language:Lang.pwdPasswordText}"
             Canvas.Left="35" Canvas.Top="87"/>
                <PasswordBox x:Name="pwdPassword"
                   Style="{StaticResource FormPasswordBox}"
                   Width="430" Height="38"
                   MaxLength="64" TabIndex="1"
                   Canvas.Left="35" Canvas.Top="122" HorizontalAlignment="Left" VerticalAlignment="Top"/>

                <!-- Botones principales (se mantienen Amber / Teal) -->
                <Button x:Name="btnLogin"
              Style="{StaticResource BtnAmber}"
              Content="{x:Static language:Lang.btnLoginText}"
              Width="200" Height="54"
              Click="BtnLogin_Click" TabIndex="2"
              Canvas.Left="10" Canvas.Top="178" FontSize="16"/>
                <Button x:Name="btnPlayAsGuest"
              Style="{StaticResource BtnTeal}"
              Content="{x:Static language:Lang.btnPlayAsGuestText}"
              Width="238" Height="54"
              TabIndex="3"
              Canvas.Left="252" Canvas.Top="178" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Click="BtnPlayAsGuest_Click"/>

                <!-- Links (solo texto) -->
                <Button x:Name="btnForgottenPassword"
              Style="{StaticResource BtnLink}"
              Content="{x:Static language:Lang.btnForgottenPasswordText}"
              TabIndex="4"
              Canvas.Left="59" Canvas.Top="256" FontSize="11"/>
                <Button x:Name="btnSignUp"
              Style="{StaticResource BtnLink}"
              Content="{x:Static language:Lang.btnSignUpText}"
              Click="BtnSignUp_Click" TabIndex="5"
              Canvas.Left="382" Canvas.Top="254" FontSize="11"/>
            </Canvas>
        </Border>
    </Canvas>
</Page>
