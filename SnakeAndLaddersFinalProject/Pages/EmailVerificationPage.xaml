<Page x:Class="SnakeAndLaddersFinalProject.Pages.EmailVerificationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SnakeAndLaddersFinalProject.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EmailVerificationPage">

    <Grid>
        <Label x:Name="lblEmailVerificationTitle" Content="Email verification" HorizontalAlignment="Center" Margin="0,44,0,0" VerticalAlignment="Top" Height="42" Width="344" FontSize="18"/>
        <TextBox x:Name="txtCodeSended" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200" Height="32" Margin="0,204,0,0"/>
        <Label x:Name="lblInsertCode" Content="Insert the code" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" Margin="0,170,0,0" Height="29"/>
        <Label x:Name="lblVerificationMessage" Content="A verification code has been sended" HorizontalAlignment="Center" Margin="0,100,0,0" VerticalAlignment="Top" Width="288"/>
        <Button x:Name="btnVerificateCode" Content="Verificate" HorizontalAlignment="Center" Margin="0,296,0,0" VerticalAlignment="Top" Height="33" Width="200" Click="BtnVerificateCode_Click"/>
    </Grid>
</Page>
