<Page x:Class="SnakeAndLaddersFinalProject.Pages.ProfileStatsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:language="clr-namespace:SnakeAndLaddersFinalProject.Properties.Langs"
      Title="ProfileStatsPage"
      Background="White"
      Loaded="PageLoaded">

    <Grid x:Name="rootGrid" Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Contenido -->
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- Botón back -->
            <Button x:Name="btnBack"
                    Grid.Column="0"
                    Width="80"
                    Height="80"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Cursor="Hand"
                    Click="BtnBack_Click">
                <Image Source="/Assets/Images/Icons/BackIcon.png"
                       Width="31"
                       Height="31"
                       Stretch="Fill"
                       RenderOptions.BitmapScalingMode="NearestNeighbor" />
            </Button>

            <!-- Título (se rellena desde la propiedad StatsTitle) -->
            <TextBlock Grid.Column="1"
                       Text="{x:Static language:Lang.lblProfileStatsTitle}"
                       FontSize="24"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center" />
        </Grid>

        <!-- CONTENIDO -->
        <ScrollViewer Grid.Row="1"
                      Margin="0,16,0,0"
                      VerticalScrollBarVisibility="Auto">
            <Border Background="#FFFFFFFF"
                    BorderBrush="#FFDDDDDD"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="24">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="32"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- COLUMNA AVATAR + USERNAME -->
                    <StackPanel Grid.Column="0"
                                Width="220"
                                HorizontalAlignment="Left">
                        <Ellipse Width="160"
                                 Height="160"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 Stroke="#FFCCCCCC"
                                 StrokeThickness="2">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="{Binding AvatarId,
                                                                  Converter={StaticResource AvatarIdToPathConverter},
                                                                  FallbackValue=/Assets/Images/Icons/A0013.jpg,
                                                                  TargetNullValue=/Assets/Images/Icons/A0013.jpg}"
                                            Stretch="UniformToFill" />
                            </Ellipse.Fill>
                        </Ellipse>

                        <TextBlock Margin="0,12,0,0"
                                   Text="{Binding Username}"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   TextAlignment="Center" />
                    </StackPanel>

                    <!-- COLUMNA ESTADÍSTICAS -->
                    <Grid Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Título sección -->
                        <TextBlock Grid.Row="0"
                                   Text="{x:Static language:Lang.lblStatsSectionTitle}"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,4" />

                        <!-- Partidas jugadas -->
                        <Grid Grid.Row="2" Margin="0,4,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="220"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{x:Static language:Lang.lblMatchesPlayed}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>
                            <TextBlock Grid.Column="1"
                                       Text="{Binding MatchesPlayed}"
                                       VerticalAlignment="Center" />
                        </Grid>

                        <!-- Partidas ganadas -->
                        <Grid Grid.Row="3" Margin="0,4,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="220"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{x:Static language:Lang.lblMatchesWon}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>
                            <TextBlock Grid.Column="1"
                                       Text="{Binding MatchesWon}"
                                       VerticalAlignment="Center" />
                        </Grid>

                        <!-- Partidas perdidas -->
                        <Grid Grid.Row="4" Margin="0,4,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="220"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{x:Static language:Lang.lblMatchesLost}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>
                            <TextBlock Grid.Column="1"
                                       Text="{Binding MatchesLost}"
                                       VerticalAlignment="Center" />
                        </Grid>

                        <!-- Porcentaje de victorias -->
                        <Grid Grid.Row="5" Margin="0,4,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="220"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{x:Static language:Lang.lblWinPercentage}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>
                            <TextBlock Grid.Column="1"
                                       VerticalAlignment="Center"
                                       Text="{Binding WinPercentage, StringFormat='{}{0:0.##} %'}" />
                        </Grid>

                        <!-- Monedas actuales -->
                        <Grid Grid.Row="6" Margin="0,4,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="220"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{x:Static language:Lang.lblCurrentCoins}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>
                            <TextBlock Grid.Column="1"
                                       Text="{Binding Coins}"
                                       VerticalAlignment="Center" />
                        </Grid>

                        <!-- Máximo de monedas -->
                        <Grid Grid.Row="7" Margin="0,4,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="220"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{x:Static language:Lang.lblMaxCoinsEver}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>
                            <TextBlock Grid.Column="1"
                                       Text="{Binding MaxCoinsEver}"
                                       VerticalAlignment="Center" />
                        </Grid>

                        <!-- Posición en el Top 50 -->
                        <Grid Grid.Row="8" Margin="0,4,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="220"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{x:Static language:Lang.lblRankingTop50Position}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>
                            <TextBlock Grid.Column="1"
                                       VerticalAlignment="Center"
                                       Text="{Binding RankingPosition, TargetNullValue=-}" />
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
        </ScrollViewer>
    </Grid>
</Page>
