<Page x:Class="SnakeAndLaddersFinalProject.Pages.ProfileStatsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:language="clr-namespace:SnakeAndLaddersFinalProject.Properties.Langs"
      mc:Ignorable="d"
      d:DesignWidth="1280"
      d:DesignHeight="720"
      Title="ProfileStatsPage"
      Background="Transparent"
      SnapsToDevicePixels="True"
      UseLayoutRounding="True"
      Loaded="PageLoaded">

    <Page.Resources>
        <!-- Sombra suave -->
        <DropShadowEffect x:Key="ShadowSoft"
                          BlurRadius="18"
                          ShadowDepth="0"
                          Opacity="0.55" />

        <!-- Storyboard video fondo -->
        <Storyboard x:Key="ProfileStatsVideoStoryboard"
                    RepeatBehavior="Forever">
            <MediaTimeline
                Source="pack://siteoforigin:,,,/Assets/Videos/MainPageVideo.mp4"
                Storyboard.TargetName="VideoBg" />
        </Storyboard>
    </Page.Resources>

    <Grid Background="Transparent">

        <!-- VIDEO DE FONDO -->
        <MediaElement x:Name="VideoBg"
                      IsMuted="True"
                      Stretch="UniformToFill"
                      IsHitTestVisible="False"
                      Panel.ZIndex="-1"
                      LoadedBehavior="Manual"
                      UnloadedBehavior="Manual">
            <MediaElement.Triggers>
                <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                    <BeginStoryboard Storyboard="{StaticResource ProfileStatsVideoStoryboard}" />
                </EventTrigger>
            </MediaElement.Triggers>
        </MediaElement>

        <!-- VIEWBOX RESPONSIVO (base 1280x720, igual que ProfilePage) -->
        <Viewbox Stretch="Uniform"
                 StretchDirection="Both">
            <Grid Width="1280"
                  Height="720"
                  Background="Transparent">

                <!-- TARJETA NEGRA TIPO MATCH SETTINGS (mismas medidas que ProfilePage) -->
                <Border Margin="24"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        MaxWidth="980"
                        CornerRadius="18"
                        Padding="24">
                    <Border.Background>
                        <SolidColorBrush Color="#FF000000" Opacity="0.55" />
                    </Border.Background>
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="18"
                                          ShadowDepth="0"
                                          Opacity="0.55" />
                    </Border.Effect>

                    <!-- CONTENIDO -->
                    <Grid x:Name="rootGrid"
                          TextElement.Foreground="White">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- HEADER (mismo que ProfilePage, solo cambia el texto) -->
                        <Grid Grid.Row="0"
                              Margin="0,0,0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <!-- Botón back -->
                            <Button x:Name="btnBack"
                                    Grid.Column="0"
                                    Width="56"
                                    Height="56"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    Cursor="Hand"
                                    Click="BtnBack_Click"
                                    ToolTip="{x:Static language:Lang.btnBackText}">
                                <Image Source="/Assets/Images/Icons/BackIcon.png"
                                       Width="32"
                                       Height="32"
                                       Stretch="Fill"
                                       RenderOptions.BitmapScalingMode="NearestNeighbor" />
                            </Button>

                            <!-- Título stats -->
                            <TextBlock Grid.Column="1"
                                       Text="{x:Static language:Lang.lblProfileStatsTitle}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                        </Grid>

                        <!-- CUERPO PRINCIPAL -->
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!-- PANEL CREMA TIPO PIXEL-VENTANA (mismas medidas que ProfilePage) -->
                            <Border Grid.Row="0"
                                    CornerRadius="14"
                                    BorderThickness="3"
                                    BorderBrush="#FFDA8C7A"
                                    Padding="18"
                                    SnapsToDevicePixels="True">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#FFFEE2C8" Offset="0" />
                                        <GradientStop Color="#FFFBD5B5" Offset="1" />
                                    </LinearGradientBrush>
                                </Border.Background>

                                <!-- SIN SCROLL INTERNO, MISMO BLOQUE QUE EN PROFILEPAGE -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="280" />
                                        <ColumnDefinition Width="24" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <!-- COLUMNA AVATAR + USERNAME (mismas posiciones que ProfilePage) -->
                                    <StackPanel Grid.Column="0"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center">
                                        <Ellipse Width="180"
                                                 Height="180"
                                                 Stroke="#FF63343B"
                                                 StrokeThickness="4">
                                            <Ellipse.Fill>
                                                <ImageBrush ImageSource="{Binding AvatarId,
                                                      Converter={StaticResource AvatarIdToPathConverter},
                                                      FallbackValue=/Assets/Images/Icons/A0013.jpg,
                                                      TargetNullValue=/Assets/Images/Icons/A0013.jpg}"
                                                            Stretch="UniformToFill" />
                                            </Ellipse.Fill>
                                        </Ellipse>

                                        <TextBlock Margin="0,12,0,0"
                                                   Text="{Binding Username}"
                                                   FontSize="20"
                                                   FontWeight="SemiBold"
                                                   Foreground="#5B2722"
                                                   TextAlignment="Center" />
                                    </StackPanel>

                                    <!-- COLUMNA ESTADÍSTICAS -->
                                    <Grid Grid.Column="2"
                                          VerticalAlignment="Center">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <!-- título sección -->
                                            <RowDefinition Height="8" />
                                            <RowDefinition Height="Auto" />
                                            <!-- MatchesPlayed -->
                                            <RowDefinition Height="Auto" />
                                            <!-- MatchesWon -->
                                            <RowDefinition Height="Auto" />
                                            <!-- MatchesLost -->
                                            <RowDefinition Height="Auto" />
                                            <!-- WinRate -->
                                            <RowDefinition Height="Auto" />
                                            <!-- CurrentCoins -->
                                            <RowDefinition Height="Auto" />
                                            <!-- RankingPosition -->
                                        </Grid.RowDefinitions>

                                        <!-- Título sección -->
                                        <TextBlock Grid.Row="0"
                                                   Text="{x:Static language:Lang.lblStatsSectionTitle}"
                                                   FontSize="20"
                                                   FontWeight="Bold"
                                                   Foreground="#5B2722"
                                                   Margin="0,0,0,4" />

                                        <!-- Partidas jugadas -->
                                        <Grid Grid.Row="2"
                                              Margin="0,4,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="260" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="{x:Static language:Lang.lblMatchesPlayed}"
                                                       VerticalAlignment="Center"
                                                       Foreground="#5B2722"
                                                       FontSize="17"
                                                       Margin="0,0,8,0" />
                                            <Border Grid.Column="1"
                                                    CornerRadius="8"
                                                    Background="#FFFBE0C8"
                                                    BorderBrush="#FFDA8C7A"
                                                    BorderThickness="2"
                                                    Padding="8,4">
                                                <TextBlock Text="{Binding MatchesPlayed}"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Center"
                                                           Foreground="#5B2722"
                                                           FontSize="17" />
                                            </Border>
                                        </Grid>

                                        <!-- Partidas ganadas -->
                                        <Grid Grid.Row="3"
                                              Margin="0,4,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="260" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="{x:Static language:Lang.lblMatchesWon}"
                                                       VerticalAlignment="Center"
                                                       Foreground="#5B2722"
                                                       FontSize="17"
                                                       Margin="0,0,8,0" />
                                            <Border Grid.Column="1"
                                                    CornerRadius="8"
                                                    Background="#FFFBE0C8"
                                                    BorderBrush="#FFDA8C7A"
                                                    BorderThickness="2"
                                                    Padding="8,4">
                                                <TextBlock Text="{Binding MatchesWon}"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Center"
                                                           Foreground="#5B2722"
                                                           FontSize="17" />
                                            </Border>
                                        </Grid>

                                        <!-- Partidas perdidas -->
                                        <Grid Grid.Row="4"
                                              Margin="0,4,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="260" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="{x:Static language:Lang.lblMatchesLost}"
                                                       VerticalAlignment="Center"
                                                       Foreground="#5B2722"
                                                       FontSize="17"
                                                       Margin="0,0,8,0" />
                                            <Border Grid.Column="1"
                                                    CornerRadius="8"
                                                    Background="#FFFBE0C8"
                                                    BorderBrush="#FFDA8C7A"
                                                    BorderThickness="2"
                                                    Padding="8,4">
                                                <TextBlock Text="{Binding MatchesLost}"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Center"
                                                           Foreground="#5B2722"
                                                           FontSize="17" />
                                            </Border>
                                        </Grid>

                                        <!-- Win rate -->
                                        <Grid Grid.Row="5"
                                              Margin="0,4,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="260" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="{x:Static language:Lang.lblWinPercentage}"
                                                       VerticalAlignment="Center"
                                                       Foreground="#5B2722"
                                                       FontSize="17"
                                                       Margin="0,0,8,0" />
                                            <Border Grid.Column="1"
                                                    CornerRadius="8"
                                                    Background="#FFFBE0C8"
                                                    BorderBrush="#FFDA8C7A"
                                                    BorderThickness="2"
                                                    Padding="8,4">
                                                <TextBlock VerticalAlignment="Center"
                                                           HorizontalAlignment="Center"
                                                           Foreground="#5B2722"
                                                           FontSize="17"
                                                           Text="{Binding WinPercentage, StringFormat='{}{0:0.##} %'}" />
                                            </Border>
                                        </Grid>

                                        <!-- Monedas actuales -->
                                        <Grid Grid.Row="6"
                                              Margin="0,4,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="260" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="{x:Static language:Lang.lblCurrentCoins}"
                                                       VerticalAlignment="Center"
                                                       Foreground="#5B2722"
                                                       FontSize="17"
                                                       Margin="0,0,8,0" />
                                            <Border Grid.Column="1"
                                                    CornerRadius="8"
                                                    Background="#FFFBE0C8"
                                                    BorderBrush="#FFDA8C7A"
                                                    BorderThickness="2"
                                                    Padding="8,4">
                                                <TextBlock Text="{Binding Coins}"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Center"
                                                           Foreground="#5B2722"
                                                           FontSize="17" />
                                            </Border>
                                        </Grid>

                                        <!-- Posición en el Top 50 -->
                                        <Grid Grid.Row="7"
                                              Margin="0,4,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="260" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="{x:Static language:Lang.lblRankingTop50Position}"
                                                       VerticalAlignment="Center"
                                                       Foreground="#5B2722"
                                                       FontSize="17"
                                                       Margin="0,0,8,0" />
                                            <Border Grid.Column="1"
                                                    CornerRadius="8"
                                                    Background="#FFFBE0C8"
                                                    BorderBrush="#FFDA8C7A"
                                                    BorderThickness="2"
                                                    Padding="8,4">
                                                <TextBlock VerticalAlignment="Center"
                                                           HorizontalAlignment="Center"
                                                           Foreground="#5B2722"
                                                           FontSize="17"
                                                           Text="{Binding RankingPosition, TargetNullValue=-}" />
                                            </Border>
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>

            </Grid>
        </Viewbox>
    </Grid>
</Page>
