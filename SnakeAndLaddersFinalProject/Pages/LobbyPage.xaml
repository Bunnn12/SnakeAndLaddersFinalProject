<Page x:Class="SnakeAndLaddersFinalProject.Pages.LobbyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:language="clr-namespace:SnakeAndLaddersFinalProject.Properties.Langs"
      xmlns:vm="clr-namespace:SnakeAndLaddersFinalProject.ViewModels;assembly=SnakeAndLaddersFinalProject"
      mc:Ignorable="d"
      d:DesignWidth="1280"
      d:DesignHeight="720"
      Title="LobbyPage"
      Background="Transparent">

    <Page.Resources>

        <BooleanToVisibilityConverter x:Key="BoolToVisibility" />

        <DropShadowEffect x:Key="ShadowSoft"
                          BlurRadius="18"
                          ShadowDepth="0"
                          Opacity="0.55" />

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Margin" Value="0,0,8,0" />
            <Setter Property="MinWidth" Value="140" />
            <Setter Property="MinHeight" Value="40" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Background" Value="#FF444444" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#FF777777" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>

        <Style x:Key="MemberActionsButtonBase" TargetType="Button">
            <Setter Property="Width" Value="32" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Margin" Value="8,0,0,0" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>

        <Storyboard x:Key="LobbyBackgroundVideoStoryboard"
                    RepeatBehavior="Forever">
            <MediaTimeline
                Source="pack://siteoforigin:,,,/Assets/Videos/MainPageVideo.mp4"
                Storyboard.TargetName="VideoBg" />
        </Storyboard>

    </Page.Resources>

    <Grid Background="Transparent">

        <MediaElement x:Name="VideoBg"
                      IsMuted="True"
                      Stretch="UniformToFill"
                      IsHitTestVisible="False"
                      Panel.ZIndex="-1"
                      LoadedBehavior="Manual"
                      UnloadedBehavior="Manual">
            <MediaElement.Triggers>
                <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                    <BeginStoryboard Storyboard="{StaticResource LobbyBackgroundVideoStoryboard}" />
                </EventTrigger>
            </MediaElement.Triggers>
        </MediaElement>

        <Viewbox Stretch="Uniform"
                 StretchDirection="Both">
            <Grid Width="1280"
                  Height="720"
                  Background="Transparent">

                <Border Margin="32"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        CornerRadius="16"
                        Padding="24">
                    <Border.Background>
                        <SolidColorBrush Color="#000000" Opacity="0.55" />
                    </Border.Background>
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="18"
                                          ShadowDepth="0"
                                          Opacity="0.55" />
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- Título -->
                        <Grid Grid.Row="0"
                              Margin="0,0,0,16">
                            <TextBlock Text="{x:Static language:Lang.lblLobby}"
                                       FontSize="32"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="White" />
                        </Grid>

                        <!-- Body -->
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!-- Lista de miembros -->
                            <ScrollViewer Grid.Row="0"
                                          VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding Members}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Padding="10"
                                                    Margin="0,6"
                                                    CornerRadius="8"
                                                    BorderBrush="#88FFFFFF"
                                                    BorderThickness="1"
                                                    Background="#66000000">

                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Estrella host -->
                                                    <TextBlock Grid.Column="0"
                                                               Text="★"
                                                               Margin="0,0,8,0"
                                                               Foreground="Gold"
                                                               FontSize="18"
                                                               Visibility="{Binding IsHost, Converter={StaticResource BoolToVisibility}}" />

                                                    <!-- Info usuario -->
                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="{Binding UserName}"
                                                                   FontWeight="Bold"
                                                                   Foreground="White"
                                                                   FontSize="16" />
                                                        <TextBlock Text="{Binding JoinedAt, StringFormat='{}{0:HH:mm}'}"
                                                                   Opacity="0.8"
                                                                   FontSize="12"
                                                                   Foreground="White" />
                                                    </StackPanel>

                                                    <!-- Botón tres puntitos alineado a la derecha -->
                                                    <Button Grid.Column="2"
                                                            HorizontalAlignment="Right"
                                                            Style="{StaticResource MemberActionsButtonBase}"
                                                            Tag="{Binding}"
                                                            Click="OnLobbyMemberActionsButtonClick">

                                                        <Button.ContextMenu>
                                                            <ContextMenu>
                                                                <MenuItem Header="{x:Static language:Lang.btnReportPlayerText}"
                                                                          Tag="Report"
                                                                          Click="ReportPlayerMenuItem" />
                                                                <MenuItem Header="{x:Static language:Lang.LobbyKickPlayerMenuText}"
                                                                           Tag="Kick"
                                                                           Click="KickPlayerMenuItem" />

                                                            </ContextMenu>
                                                        </Button.ContextMenu>

                                                        <TextBlock Text="⋮"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center" />
                                                    </Button>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>

                            <!-- Acciones -->
                            <StackPanel Grid.Row="1"
                                        Orientation="Horizontal"
                                        Margin="0,12,0,0">
                                <Button Style="{StaticResource ActionButton}"
                                        Content="{x:Static language:Lang.btnStartMatchText}"
                                        Command="{Binding StartMatchCommand}"
                                        IsEnabled="{Binding CanStartMatch}"
                                        Click="StartMatch" />

                                <Button Style="{StaticResource ActionButton}"
                                        Content="{x:Static language:Lang.btnExitMatchText}"
                                        Command="{Binding LeaveLobbyCommand}"
                                        Click="LeaveLobby" />

                                <Button Style="{StaticResource ActionButton}"
                                        Content="Invitar amigos"
                                        Click="OpenMatchInvitation" />

                                <Button Style="{StaticResource ActionButton}"
                                        Content="Copiar enlace"
                                        Command="{Binding CopyInviteLinkCommand}" />

                                <Button Style="{StaticResource ActionButton}"
                                        Content="{x:Static language:Lang.chatTittle}"
                                        Width="120"
                                        Click="OpenChat" />
                            </StackPanel>

                            <!-- Status -->
                            <TextBlock Grid.Row="2"
                                       Text="{Binding StatusText}"
                                       Opacity="0.9"
                                       Margin="0,8,0,0"
                                       Foreground="White"
                                       FontSize="14" />
                        </Grid>
                    </Grid>
                </Border>

            </Grid>
        </Viewbox>

    </Grid>
</Page>
