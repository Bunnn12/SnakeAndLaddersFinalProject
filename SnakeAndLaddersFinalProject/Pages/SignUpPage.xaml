<Page x:Class="SnakeAndLaddersFinalProject.Pages.SignUpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:SnakeAndLaddersFinalProject.Pages"
      xmlns:language="clr-namespace:SnakeAndLaddersFinalProject.Properties.Langs"
      mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800" Title="SignUpPage"
      SnapsToDevicePixels="True" TextOptions.TextRenderingMode="Aliased">

    <Page.Resources>

        <Style x:Key="TitleLabel" TargetType="Label">
            <Setter Property="FontFamily" Value="{StaticResource Font.M04}"/>
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="Foreground" Value="#F2C230"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <!-- Label de formulario (misma tipografía que Inventory) -->
        <Style x:Key="FormLabel" TargetType="Label">
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#FFF8F0"/>
        </Style>

        <!-- TextBox sin borde azul; hover/focus personalizados -->
        <Style x:Key="FormTextBox" TargetType="TextBox">
            <!-- base -->
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#FFF8F0"/>
            <Setter Property="Background" Value="#3B2417"/>
            <!-- Café 700 -->
            <Setter Property="BorderBrush" Value="#F2C230"/>
            <!-- Amarillo -->
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <!-- quita adorno azul -->
            <!-- template para controlar colores -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#F28C28"/>
                                <!-- Naranja -->
                            </Trigger>
                            <!-- Focus (sustituye el azul) -->
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#FBE18C"/>
                                <!-- Amarillo claro -->
                                <Setter TargetName="Bd" Property="BorderThickness" Value="3"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- PasswordBox con el mismo comportamiento -->
        <Style x:Key="FormPasswordBox" TargetType="PasswordBox">
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#FFF8F0"/>
            <Setter Property="Background" Value="#3B2417"/>
            <Setter Property="BorderBrush" Value="#F2C230"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#F28C28"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#FBE18C"/>
                                <Setter TargetName="Bd" Property="BorderThickness" Value="3"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <!-- Cartel café de fondo (debajo de todo) -->
        <Image Source="/Pages/littleBackground.png"
               HorizontalAlignment="Center" VerticalAlignment="Top"
               Width="840" Height="488"
               Stretch="Fill"
               RenderOptions.BitmapScalingMode="NearestNeighbor"
               IsHitTestVisible="False"
               Panel.ZIndex="0"/>

        <!-- Contenido encima -->
        <Grid Panel.ZIndex="1">
            <!-- Botones del marco superior (usan tu BtnFlat global) -->
            <Button x:Name="btnBack" Style="{StaticResource BtnFlat}"
                    Content="{x:Static language:Lang.btnBackText}"
                    HorizontalAlignment="Left" Margin="10,7,0,0" VerticalAlignment="Top"
                    Width="166" Height="72" Click="BtnBack_Click" FontSize="20"/>

            <Button x:Name="btnSettings" Style="{StaticResource BtnFlat}"
                    Content="{x:Static language:Lang.btnSettingsText}"
                    HorizontalAlignment="Right" Margin="0,5,0,0" VerticalAlignment="Top"
                    Width="166" Height="69" FontSize="20"/>

            <!-- Título -->
            <Label x:Name="lblTitleSignUp" Style="{StaticResource TitleLabel}"
                   Content="{x:Static language:Lang.btnSignUpText}"
                   HorizontalAlignment="Left" Margin="268,16,0,0" VerticalAlignment="Top" FontSize="38" Foreground="#FFF2C230"/>

            <!-- Formulario -->
            <!-- Fila 1 -->
            <Label Style="{StaticResource FormLabel}" Content="{x:Static language:Lang.txtNameOfUserText}"
                   HorizontalAlignment="Left" Margin="136,109,0,0" VerticalAlignment="Top" FontSize="20"/>
            <TextBox x:Name="txtNameOfUser" Style="{StaticResource FormTextBox}"
                     HorizontalAlignment="Left" Margin="136,147,0,0" VerticalAlignment="Top"
                     Width="180" Height="32"/>

            <Label Style="{StaticResource FormLabel}" Content="{x:Static language:Lang.txtLastNameOfUserText}"
                   HorizontalAlignment="Left" Margin="459,109,0,0" VerticalAlignment="Top" FontSize="20"/>
            <TextBox x:Name="txtLastname" Style="{StaticResource FormTextBox}"
                     HorizontalAlignment="Left" Margin="459,147,0,0" VerticalAlignment="Top"
                     Width="170" Height="32"/>

            <!-- Fila 2 -->
            <Label Style="{StaticResource FormLabel}" Content="{x:Static language:Lang.txtUsernameText}"
                   HorizontalAlignment="Left" Margin="136,192,0,0" VerticalAlignment="Top" FontSize="20"/>
            <TextBox x:Name="txtUsername" Style="{StaticResource FormTextBox}"
                     HorizontalAlignment="Left" Margin="136,230,0,0" VerticalAlignment="Top"
                     Width="180" Height="32"/>

            <Label Style="{StaticResource FormLabel}" Content="{x:Static language:Lang.pwdPasswordText}"
                   HorizontalAlignment="Left" Margin="459,187,0,0" VerticalAlignment="Top" FontSize="20"/>
            <PasswordBox x:Name="pwdPassword" Style="{StaticResource FormPasswordBox}"
                         HorizontalAlignment="Left" Margin="459,230,0,0" VerticalAlignment="Top"
                         Width="170" Height="32"/>

            <!-- Email a lo ancho -->
            <Label Style="{StaticResource FormLabel}" Content="{x:Static language:Lang.txtRegEmailText}"
                   HorizontalAlignment="Center" Margin="0,267,0,0" VerticalAlignment="Top" FontSize="20"/>
            <TextBox x:Name="txtEmail" Style="{StaticResource FormTextBox}"
                     HorizontalAlignment="Left" Margin="258,305,0,0" VerticalAlignment="Top"
                     Width="280" Height="34"/>

            <!-- Botón principal -->
            <Button x:Name="btnSignUp" Style="{StaticResource BtnFlat}"
                    Content="{x:Static language:Lang.btnSignUpText}"
                    HorizontalAlignment="Center" Margin="0,344,0,0" VerticalAlignment="Top"
                    Width="188" Height="50" Click="BtnSignUp_Click" FontSize="20"/>
        </Grid>
    </Grid>
</Page>
