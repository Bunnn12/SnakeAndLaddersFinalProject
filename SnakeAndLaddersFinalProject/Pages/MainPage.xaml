<Page x:Class="SnakeAndLaddersFinalProject.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:SnakeAndLaddersFinalProject.Pages"
      xmlns:language="clr-namespace:SnakeAndLaddersFinalProject.Properties.Langs"
      xmlns:util="clr-namespace:SnakeAndLaddersFinalProject.Utilities"
      xmlns:auth="clr-namespace:SnakeAndLaddersFinalProject.Authentication"
      mc:Ignorable="d"
      Title="MainPage"
      d:DesignWidth="1280"
      d:DesignHeight="720"
      SnapsToDevicePixels="True"
      UseLayoutRounding="True"
      TextOptions.TextRenderingMode="Aliased"
      Background="Transparent"
      util:PageBackground.Key="MainVideo">

    <Page.Resources>


        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

        <!-- Colores -->
        <SolidColorBrush x:Key="BrushCafe900" Color="#23130C" />
        <SolidColorBrush x:Key="BrushCafe700" Color="#3B2417" />
        <SolidColorBrush x:Key="BrushCafe500" Color="#5A3A26" />

        <SolidColorBrush x:Key="BrushAmarillo" Color="#F2C230" />
        <SolidColorBrush x:Key="BrushNaranja" Color="#F28C28" />
        <SolidColorBrush x:Key="BrushVerde"   Color="#2E7D32" />
        <SolidColorBrush x:Key="BrushBlancoSuave" Color="#FFF8F0" />

        <!-- (opcional) Gradiente de fondo general -->
        <LinearGradientBrush x:Key="BgCafe" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#23130C" Offset="0" />
            <GradientStop Color="#3B2417" Offset="0.55" />
            <GradientStop Color="#5A3A26" Offset="1" />
        </LinearGradientBrush>

        <!-- ImageBrush para botones -->
        <ImageBrush x:Key="IB.BtnMain"
                    ImageSource="/Assets/Images/BotonImg.png"
                    Stretch="Fill"
                    AlignmentX="Center"
                    AlignmentY="Center"
                    RenderOptions.BitmapScalingMode="NearestNeighbor"
                    ViewboxUnits="RelativeToBoundingBox"
                    Viewbox="0.083,0.083,0.834,0.834" />

        <ImageBrush x:Key="IB.BtnFlat"
                    ImageSource="/Assets/Images/BotonImg.png"
                    Stretch="Fill"
                    AlignmentX="Center"
                    AlignmentY="Center"
                    RenderOptions.BitmapScalingMode="NearestNeighbor"
                    ViewboxUnits="RelativeToBoundingBox"
                    Viewbox="0.083,0.083,0.834,0.834" />

        <!-- Sombra sin desplazamiento -->
        <DropShadowEffect x:Key="ShadowSoft"
                          BlurRadius="8"
                          ShadowDepth="0"
                          Direction="270"
                          Opacity="0.35"
                          Color="#000000" />

        <!-- Label HUD -->
        <Style x:Key="LblHud" TargetType="Label">
            <Setter Property="Foreground" Value="{StaticResource BrushBlancoSuave}" />
            <Setter Property="FontFamily" Value="{StaticResource Font.M04}" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Background" Value="#20000000" />
            <Setter Property="Padding" Value="10,4" />
            <Setter Property="BorderBrush" Value="#40FFFFFF" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Label">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ===== Botón de menú: fondo imagen ===== -->
        <Style x:Key="BtnMenu" TargetType="Button">
            <Setter Property="FontFamily" Value="{StaticResource Font.M04}" />
            <Setter Property="FontSize" Value="24" />
            <Setter Property="Foreground" Value="{StaticResource BrushBlancoSuave}" />
            <Setter Property="Background" Value="{StaticResource IB.BtnMain}" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Height" Value="90" />
            <Setter Property="Padding" Value="16,14" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid SnapsToDevicePixels="True"
                              ClipToBounds="False">
                            <Border CornerRadius="18"
                                    Margin="0"
                                    Background="Transparent"
                                    Effect="{StaticResource ShadowSoft}" />
                            <Border x:Name="Bg"
                                    CornerRadius="18"
                                    Margin="0"
                                    Background="{TemplateBinding Background}" />
                            <ContentPresenter x:Name="ContentSite"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"
                                              TextElement.Foreground="{TemplateBinding Foreground}">
                                <ContentPresenter.RenderTransform>
                                    <TranslateTransform X="-8" />
                                </ContentPresenter.RenderTransform>
                            </ContentPresenter>
                            <Polygon x:Name="Pointer"
                                     Points="0,12 16,6 0,0"
                                     Fill="{StaticResource BrushAmarillo}"
                                     Stroke="{StaticResource BrushAmarillo}"
                                     StrokeThickness="1.2"
                                     Opacity="0"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Center"
                                     Margin="60,0,0,0"
                                     Panel.ZIndex="2" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Pointer"
                                        Property="Opacity"
                                        Value="1" />
                                <Setter Property="Foreground"
                                        Value="{StaticResource BrushAmarillo}" />
                                <Setter TargetName="ContentSite"
                                        Property="TextElement.Foreground"
                                        Value="{StaticResource BrushAmarillo}" />
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Pointer"
                                        Property="Opacity"
                                        Value="1" />
                                <Setter Property="Foreground"
                                        Value="{StaticResource BrushVerde}" />
                                <Setter TargetName="ContentSite"
                                        Property="TextElement.Foreground"
                                        Value="{StaticResource BrushVerde}" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bg"
                                        Property="Opacity"
                                        Value="0.9" />
                                <Setter Property="Foreground"
                                        Value="{StaticResource BrushNaranja}" />
                                <Setter TargetName="ContentSite"
                                        Property="TextElement.Foreground"
                                        Value="{StaticResource BrushNaranja}" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ===== Botón plano ===== -->
        <Style x:Key="BtnFlat" TargetType="Button">
            <Setter Property="FontFamily" Value="Consolas" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Foreground" Value="{StaticResource BrushBlancoSuave}" />
            <Setter Property="Background" Value="{StaticResource IB.BtnFlat}" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="16,14" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border CornerRadius="12"
                                    Margin="0"
                                    Background="Transparent"
                                    Effect="{StaticResource ShadowSoft}" />
                            <Border x:Name="Bg"
                                    CornerRadius="12"
                                    Margin="0"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter x:Name="ContentSite"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  TextElement.Foreground="{TemplateBinding Foreground}" />
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground"
                                        Value="{StaticResource BrushAmarillo}" />
                                <Setter TargetName="ContentSite"
                                        Property="TextElement.Foreground"
                                        Value="{StaticResource BrushAmarillo}" />
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter Property="Foreground"
                                        Value="{StaticResource BrushVerde}" />
                                <Setter TargetName="ContentSite"
                                        Property="TextElement.Foreground"
                                        Value="{StaticResource BrushVerde}" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bg"
                                        Property="Opacity"
                                        Value="0.9" />
                                <Setter Property="Foreground"
                                        Value="{StaticResource BrushNaranja}" />
                                <Setter TargetName="ContentSite"
                                        Property="TextElement.Foreground"
                                        Value="{StaticResource BrushNaranja}" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ===== Storyboard con MediaTimeline: loop infinito ===== -->
        <Storyboard x:Key="MainPageVideoStoryboard"
                    RepeatBehavior="Forever">
            <MediaTimeline Source="pack://siteoforigin:,,,/Assets/Videos/MainPageVideo.mp4"
                           Storyboard.TargetName="VideoBg" />
        </Storyboard>

    </Page.Resources>

    <!-- ===== LAYOUT RESPONSIVO ===== -->
    <Grid Background="Transparent">

        <!-- Video a pantalla completa, sin bordes negros -->
        <MediaElement x:Name="VideoBg"
                      IsMuted="True"
                      Stretch="UniformToFill"
                      IsHitTestVisible="False"
                      Panel.ZIndex="-1"
                      LoadedBehavior="Manual"
                      UnloadedBehavior="Manual">
            <MediaElement.Triggers>
                <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                    <BeginStoryboard Storyboard="{StaticResource MainPageVideoStoryboard}" />
                </EventTrigger>
            </MediaElement.Triggers>
        </MediaElement>

        <!-- Viewbox para escalar el HUD y botones -->
        <Viewbox Stretch="Uniform"
                 StretchDirection="Both">
            <!-- Lienzo base 1280x720 -->
            <Grid Width="1280"
                  Height="720"
                  Background="Transparent">

                <Grid Margin="24">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Cabecera -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Button x:Name="btnBack"
                                Grid.Column="0"
                                Width="140"
                                Margin="0,0,0,10"
                                BorderBrush="{x:Null}">
                            <Button.Background>
                                <ImageBrush />
                            </Button.Background>
                            <Image Height="49"
                                   Width="62"
                                   Source="/Assets/Images/Icons/BackIcon.png"
                                   Stretch="Fill" />
                        </Button>

                        <Label x:Name="lblCoins"
       Grid.Column="1"
       Style="{StaticResource LblHud}">
                            <StackPanel Orientation="Horizontal"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
                                <Image Source="/Assets/Images/Icons/CoinsIcon.png"
               Width="32"
               Height="32"
               Stretch="Uniform"
               RenderOptions.BitmapScalingMode="NearestNeighbor"
               Margin="0,0,8,0" />
                                <TextBlock Text="{Binding Coins}"
                   FontFamily="{StaticResource Font.M04}"
                   FontSize="20"
                   VerticalAlignment="Center" />
                            </StackPanel>
                        </Label>

                        <Button x:Name="btnSettings"
                                Grid.Column="2"
                                Width="160"
                                Background="{x:Null}"
                                BorderBrush="{x:Null}">
                            <Image Height="43"
                                   Width="47"
                                   Source="/Assets/Images/Icons/SettingsIcon.png"
                                   Stretch="Fill" />
                        </Button>
                    </Grid>

                    <!-- Centro: crear/unirse/código centrados -->
                    <StackPanel Grid.Row="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Width="650"
                                Margin="0">
                        <Button x:Name="btnCreateMatch"
                                Style="{StaticResource BtnMenu}"
                                Height="191"
                                Margin="0,0,0,12"
                                Width="618"
                                Content="{x:Static language:Lang.btnCreateMatchText}"
                                Click="CreateMatch" />

                        <Button x:Name="btnJoinMatch"
                                Style="{StaticResource BtnMenu}"
                                Height="195"
                                Margin="0,0,0,16"
                                Width="634"
                                Content="{x:Static language:Lang.btnJoinMatchText}"
                                Click="JoinMatch" />
                        <TextBox x:Name="txtJoinCode"
                                 Width="417"
                                 Height="37"
                                 />

                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,4"/>
                        <StackPanel Height="52"/>
                    </StackPanel>

                    <!-- Inferior -->
                    <Grid Grid.Row="2"
                          Margin="0,20,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="246*" />
                            <ColumnDefinition Width="201*" />
                            <ColumnDefinition Width="13*" />
                            <ColumnDefinition Width="0*" />
                            <ColumnDefinition Width="259*" />
                            <ColumnDefinition Width="0*" />
                            <ColumnDefinition Width="10*" />
                            <ColumnDefinition Width="11*" />
                            <ColumnDefinition Width="246*" />
                            <ColumnDefinition Width="246*" />
                        </Grid.ColumnDefinitions>

                        <Button x:Name="btnFriends"
                        Grid.Column="0"
                        Margin="0,-24,8,0"
                        Style="{StaticResource BtnIcon}"
                        ToolTip="{x:Static language:Lang.lblFriendsListTitle}"
                        Click="BtnFriends_Click">
                        <Image Width="120"
                           Height="80"
                           Source="/Assets/Images/Icons/FriendsIcon.png"
                           Stretch="Uniform"
                           RenderOptions.BitmapScalingMode="NearestNeighbor" />
                        </Button>


                        <Button x:Name="btnShop"
                                Grid.Column="1"
                                Margin="8,-24,8,0"
                                Style="{StaticResource BtnIcon}"
                                ToolTip="{x:Static language:Lang.btnShopText}">
                            <Image Width="96"
                                   Height="76"
                                   Source="/Assets/Images/Icons/StoreIcon.png"
                                   Stretch="Uniform"
                                   RenderOptions.BitmapScalingMode="NearestNeighbor" />
                        </Button>

                        <Button x:Name="btnInventory"
                                Grid.Column="4"
                                Margin="57,-23,39,0"
                                Style="{StaticResource BtnIcon}"
                                ToolTip="{x:Static language:Lang.btnInventoryText}">
                            <Image Width="177"
                                   Height="80"
                                   Source="/Assets/Images/Icons/InventoryIcon.png"
                                   Stretch="Uniform"
                                   RenderOptions.BitmapScalingMode="NearestNeighbor" />
                        </Button>

                        <Button x:Name="btnSkins"
                                Grid.Column="7"
                                Grid.ColumnSpan="2"
                                Margin="10,-24,0,0"
                                Style="{StaticResource BtnIcon}"
                                ToolTip="{x:Static language:Lang.btnSkinsText}">
                            <Image Width="122"
                                   Height="78"
                                   Source="/Assets/Images/Icons/SkinIcon.png"
                                   Stretch="Uniform"
                                   RenderOptions.BitmapScalingMode="NearestNeighbor" />
                        </Button>


                        <Button x:Name="btnProfile"
                            Grid.Column="9"
                            Margin="8,-24,8,0"
                            Style="{StaticResource BtnIcon}"
                            ToolTip="{x:Static language:Lang.btnProfileText}"
                            Click="BtnProfile_Click">
                            <Ellipse Width="88"
                             Height="88"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             Stroke="#FFFFFFFF"
                             StrokeThickness="2">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="{Binding Source={x:Static auth:SessionContext.Current},
                                              Path=ProfilePhotoId,
                                              Converter={StaticResource AvatarIdToPathConverter},
                                              FallbackValue=/Assets/Images/Icons/A0013.jpg,
                                              TargetNullValue=/Assets/Images/Icons/A0013.jpg}"
                                 Stretch="UniformToFill" />
                                </Ellipse.Fill>
                            </Ellipse>
                        </Button>


                    </Grid>
                </Grid>


                <Button x:Name="btnRanking"
                    Style="{StaticResource BtnIcon}"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Margin="32,0,0,0"
                    ToolTip="{x:Static language:Lang.btnRankingText}"
                    Click="BtnRanking_Click">
                    <Image Width="138"
                       Height="109"
                       Source="/Assets/Images/Icons/RankingIcon.png"
                       Stretch="Uniform"
                       RenderOptions.BitmapScalingMode="NearestNeighbor" />
                </Button>

                <Grid>
                    <TextBlock Text="Codigo:"
                                       FontFamily="{StaticResource Font.M04}"
                                       FontSize="24"
                                       Foreground="{StaticResource BrushBlancoSuave}" Margin="433,483,197,196" />
                </Grid>
            </Grid>
        </Viewbox>
    </Grid>
</Page>
