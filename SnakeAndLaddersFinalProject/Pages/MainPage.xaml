<Page x:Class="SnakeAndLaddersFinalProject.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:language="clr-namespace:SnakeAndLaddersFinalProject.Properties.Langs"
      mc:Ignorable="d"
      d:DesignWidth="1280" d:DesignHeight="720"
      Title="MainPage"
      SnapsToDevicePixels="True" UseLayoutRounding="True"
      TextOptions.TextRenderingMode="Aliased">

    <!-- ===== PALETA (todo en BRUSH) ===== -->
    <Page.Resources>
        <!-- Brushes base -->
        <SolidColorBrush x:Key="BrushCafe900" Color="#23130C"/>
        <SolidColorBrush x:Key="BrushCafe700" Color="#3B2417"/>
        <SolidColorBrush x:Key="BrushCafe500" Color="#5A3A26"/>

        <SolidColorBrush x:Key="BrushAmarillo" Color="#F2C230"/>
        <SolidColorBrush x:Key="BrushNaranja" Color="#F28C28"/>
        <SolidColorBrush x:Key="BrushVerde"   Color="#2E7D32"/>
        <SolidColorBrush x:Key="BrushBlancoSuave" Color="#FFF8F0"/>

        <!-- Fondo café en degradado (usa hex en GradientStop porque aquí sí se requiere Color) -->
        <LinearGradientBrush x:Key="BgCafe" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#23130C" Offset="0"/>
            <GradientStop Color="#3B2417" Offset="0.55"/>
            <GradientStop Color="#5A3A26" Offset="1"/>
        </LinearGradientBrush>

        <!-- Botón principal del menú -->
        <Style x:Key="BtnMenu" TargetType="Button">
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="Foreground" Value="{StaticResource BrushBlancoSuave}"/>
            <Setter Property="Background" Value="#1A000000"/>
            <Setter Property="BorderBrush" Value="{StaticResource BrushNaranja}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="18,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="28"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Indicador -->
                            <Polygon x:Name="Pointer"
                                     Points="6,12 22,6 6,0"
                                     Fill="{StaticResource BrushAmarillo}"
                                     Stroke="{StaticResource BrushNaranja}"
                                     StrokeThickness="1.5"
                                     Opacity="0"
                                     VerticalAlignment="Center" Margin="4,0,2,0"/>

                            <!-- Fondo -->
                            <Border Grid.ColumnSpan="2" CornerRadius="4"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"/>

                            <!-- Contenido -->
                            <ContentPresenter Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Pointer" Property="Opacity" Value="1"/>
                                <Setter Property="BorderBrush" Value="{StaticResource BrushAmarillo}"/>
                                <Setter Property="Foreground" Value="{StaticResource BrushAmarillo}"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Pointer" Property="Opacity" Value="1"/>
                                <Setter Property="BorderBrush" Value="{StaticResource BrushVerde}"/>
                                <Setter Property="Foreground" Value="{StaticResource BrushVerde}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#33000000"/>
                                <Setter Property="BorderBrush" Value="{StaticResource BrushNaranja}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Botón plano para cabecera/inferior -->
        <Style x:Key="BtnFlat" TargetType="Button">
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="{StaticResource BrushBlancoSuave}"/>
            <Setter Property="Background" Value="#16000000"/>
            <Setter Property="BorderBrush" Value="#40FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource BrushAmarillo}"/>
                                <Setter Property="Foreground" Value="{StaticResource BrushAmarillo}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource BrushNaranja}"/>
                                <Setter Property="Foreground" Value="{StaticResource BrushNaranja}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Label con borde redondeado (via Template) -->
        <Style x:Key="LblHud" TargetType="Label">
            <Setter Property="Foreground" Value="{StaticResource BrushBlancoSuave}"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Background" Value="#20000000"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="BorderBrush" Value="#40FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Label">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <!-- ===== LAYOUT ===== -->
    <Grid Background="{StaticResource BgCafe}">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Cabecera -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="btnBack" Grid.Column="0" Style="{StaticResource BtnFlat}" Width="140" Height="34"
                        Content="BACK"/>

                <Label x:Name="lblCoins" Grid.Column="1" Style="{StaticResource LblHud}"
                       Content="{x:Static language:Lang.lblCoinsText}" />

                <Button x:Name="btnSettings" Grid.Column="2" Style="{StaticResource BtnFlat}" Width="160" Height="34"
                        Content="{x:Static language:Lang.btnSettingsText}"/>
            </Grid>

            <!-- Centro -->
            <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="360">
                <Button x:Name="btnCreateMatch"
                        Style="{StaticResource BtnMenu}"
                        Height="56" Margin="0,0,0,16"
                        Content="{x:Static language:Lang.btnCreateMatchText}"/>
                <Button x:Name="btnJoinMatch"
                        Style="{StaticResource BtnMenu}"
                        Height="56"
                        Content="{x:Static language:Lang.btnJoinMatchText}"/>
            </StackPanel>

            <!-- Inferior -->
            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button x:Name="btnFriends"   Grid.Column="0" Style="{StaticResource BtnFlat}"
                        Content="{x:Static language:Lang.lblFriendsListTitle}" Height="34" />
                <Button x:Name="btnShop"      Grid.Column="1" Style="{StaticResource BtnFlat}"
                        Content="{x:Static language:Lang.btnShopText}" Height="34" />
                <Button x:Name="btnInventory" Grid.Column="2" Style="{StaticResource BtnFlat}"
                        Content="{x:Static language:Lang.btnInventoryText}" Height="34" />
                <Button x:Name="btnSkins"     Grid.Column="3" Style="{StaticResource BtnFlat}"
                        Content="{x:Static language:Lang.btnSkinsText}" Height="34" />
                <Button x:Name="btnProfile"   Grid.Column="4" Style="{StaticResource BtnFlat}"
                        Content="{x:Static language:Lang.btnProfileText}" Height="34" />
            </Grid>
        </Grid>

        <!-- Ranking lateral -->
        <Button x:Name="btnRanking"
                Style="{StaticResource BtnFlat}"
                Content="RANKING"
                Width="140" Height="40"
                HorizontalAlignment="Left" VerticalAlignment="Center"
                Margin="32,0,0,0"/>
    </Grid>
</Page>
