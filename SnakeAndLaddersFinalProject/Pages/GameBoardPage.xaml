<Page x:Class="SnakeAndLaddersFinalProject.Pages.GameBoardPage"
      x:Name="GameBoardPageRoot"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:conv="clr-namespace:SnakeAndLaddersFinalProject.Converters"
      xmlns:vmModels="clr-namespace:SnakeAndLaddersFinalProject.ViewModels.Models"
      xmlns:utils="clr-namespace:SnakeAndLaddersFinalProject.Utilities"
      xmlns:controls="clr-namespace:SnakeAndLaddersFinalProject.Controls"
      mc:Ignorable="d"
      d:DesignWidth="1280"
      d:DesignHeight="720"
      Title="GameBoardPage"
      Background="Transparent">

    <Page.Resources>

        <!-- Converters serpiente / escalera -->
        <conv:IsSnakeToColorConverter x:Key="IsSnakeToColorConverter" />
        <conv:IsSnakeToStyleConverter x:Key="IsSnakeToStyleConverter" />
        <conv:SnakeHeadOffsetConverter x:Key="SnakeHeadOffsetConverter" />
        <conv:SnakeCurveGeometryConverter x:Key="SnakeCurveGeometryConverter" />
        <conv:LadderGeometryConverter x:Key="LadderGeometryConverter" />

        <!-- Converter avatarId -> pack URI -->
        <utils:AvatarIdToPathConverter x:Key="AvatarIdToPathConverter" />

        <!-- Color por jugador -->
        <conv:PlayerColorConverter x:Key="PlayerColorConverter" />

        <Thickness x:Key="CellMargin">2</Thickness>

        <!-- PALETA / TARJETA DEL TABLERO -->
        <LinearGradientBrush x:Key="BrushBoardCardBackground"
                             StartPoint="0,0"
                             EndPoint="0,1">
            <GradientStop Color="#B0221810" Offset="0.0" />
            <GradientStop Color="#E03B2313" Offset="1.0" />
        </LinearGradientBrush>

        <SolidColorBrush x:Key="BrushBoardCardBorder"
                         Color="#FFD9A066" />

        <SolidColorBrush x:Key="BrushFooterBackground"
                         Color="#80131313" />

        <SolidColorBrush x:Key="BrushFooterBorder"
                         Color="#FFEBE0C8" />

        <!-- Fondos celdas -->
        <LinearGradientBrush x:Key="BrushBoardCellBackgroundLight"
                             StartPoint="0,0"
                             EndPoint="1,1">
            <GradientStop Color="#F7E0AD" Offset="0.0" />
            <GradientStop Color="#E9C97F" Offset="0.5" />
            <GradientStop Color="#CEA456" Offset="1.0" />
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="BrushBoardCellBackgroundDark"
                             StartPoint="0,0"
                             EndPoint="1,1">
            <GradientStop Color="#D2A25C" Offset="0.0" />
            <GradientStop Color="#B17B38" Offset="0.5" />
            <GradientStop Color="#8C541F" Offset="1.0" />
        </LinearGradientBrush>

        <SolidColorBrush x:Key="BrushBoardCellBorder"
                         Color="#8B5A2B" />

        <!-- BONUS (verde) -->
        <LinearGradientBrush x:Key="BrushBoardCellBonus"
                             StartPoint="0,0"
                             EndPoint="1,1">
            <GradientStop Color="#C6F6D5" Offset="0.0" />
            <GradientStop Color="#68D391" Offset="0.5" />
            <GradientStop Color="#2F855A" Offset="1.0" />
        </LinearGradientBrush>

        <!-- TRAMPA (rojo) -->
        <LinearGradientBrush x:Key="BrushBoardCellTrap"
                             StartPoint="0,0"
                             EndPoint="1,1">
            <GradientStop Color="#FED7D7" Offset="0.0" />
            <GradientStop Color="#FC8181" Offset="0.5" />
            <GradientStop Color="#C53030" Offset="1.0" />
        </LinearGradientBrush>

        <!-- TELEPORT (morado) -->
        <LinearGradientBrush x:Key="BrushBoardCellTeleport"
                             StartPoint="0,0"
                             EndPoint="1,1">
            <GradientStop Color="#E9D8FD" Offset="0.0" />
            <GradientStop Color="#9F7AEA" Offset="0.5" />
            <GradientStop Color="#553C9A" Offset="1.0" />
        </LinearGradientBrush>

        <!-- ICONOS ESPECIALES -->
        <BitmapImage x:Key="DiceIconSource"
                     UriSource="/Assets/Images/Icons/DieIcon.png" />
        <BitmapImage x:Key="MessageIconSource"
                     UriSource="/Assets/Images/Icons/MessageIcon.png" />
        <BitmapImage x:Key="ItemIconSource"
                     UriSource="/Assets/Images/Icons/ItemIcon.png" />

        <!-- ICONOS CASILLAS INICIO/FINAL -->
        <BitmapImage x:Key="FinalCellIconSource"
                     UriSource="/Assets/Images/Icons/FinalCellIcon.png" />
        <BitmapImage x:Key="StartCellIconSource"
                     UriSource="/Assets/Images/Icons/StartCellIcon.png" />

        <!-- Estilo de casilla -->
        <Style x:Key="BoardCellStyle"
               TargetType="Border">
            <Setter Property="Width" Value="64" />
            <Setter Property="Height" Value="64" />
            <Setter Property="Margin" Value="{StaticResource CellMargin}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="{StaticResource BrushBoardCellBorder}" />
            <Setter Property="Background" Value="{StaticResource BrushBoardCellBackgroundLight}" />
            <Setter Property="SnapsToDevicePixels" Value="True" />

            <Style.Triggers>
                <DataTrigger Binding="{Binding IsDark}" Value="True">
                    <Setter Property="Background"
                            Value="{StaticResource BrushBoardCellBackgroundDark}" />
                </DataTrigger>

                <DataTrigger Binding="{Binding IsBonus}" Value="True">
                    <Setter Property="Background"
                            Value="{StaticResource BrushBoardCellBonus}" />
                </DataTrigger>

                <DataTrigger Binding="{Binding IsTrap}" Value="True">
                    <Setter Property="Background"
                            Value="{StaticResource BrushBoardCellTrap}" />
                </DataTrigger>

                <DataTrigger Binding="{Binding IsTeleport}" Value="True">
                    <Setter Property="Background"
                            Value="{StaticResource BrushBoardCellTeleport}" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Slot de inventario jugadores -->
        <Style x:Key="InventorySlotStyle"
               TargetType="Border">
            <Setter Property="Width" Value="40" />
            <Setter Property="Height" Value="40" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="BorderThickness" Value="1.5" />
            <Setter Property="BorderBrush" Value="#FFE3C08C" />
            <Setter Property="Background" Value="#33000000" />
            <Setter Property="Margin" Value="4,0" />
        </Style>

        <!-- Botón de dado para jugadores (usa DiceAnimator.CurrentFrame) -->
        <Style x:Key="CornerPlayerDiceButtonStyle"
               TargetType="Button">
            <Setter Property="Width" Value="72" />
            <Setter Property="Height" Value="72" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="12"
                                Background="#33000000">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2"
                                                  BlurRadius="6"
                                                  Opacity="0.6" />
                            </Border.Effect>

                            <Grid>

                                <!-- Dado estático (no turno) -->
                                <Image x:Name="StaticDiceImage"
                                       Stretch="Uniform"
                                       RenderOptions.BitmapScalingMode="NearestNeighbor"
                                       Source="{StaticResource DiceIconSource}">
                                    <Image.Style>
                                        <Style TargetType="Image">
                                            <Setter Property="Opacity" Value="1" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsCurrentTurn}"
                                                             Value="True">
                                                    <Setter Property="Opacity" Value="0" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                </Image>

                                <!-- Dado animado (solo turno actual) -->
                                <Image x:Name="AnimatedDiceImage"
                                       Stretch="Uniform"
                                       RenderOptions.BitmapScalingMode="NearestNeighbor"
                                       Source="{Binding DataContext.DiceAnimator.CurrentFrame,
                                                        RelativeSource={RelativeSource AncestorType=Page}}">
                                    <Image.Style>
                                        <Style TargetType="Image">
                                            <Setter Property="Opacity" Value="0" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsCurrentTurn}"
                                                             Value="True">
                                                    <Setter Property="Opacity" Value="1" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                    <Image.LayoutTransform>
                                        <ScaleTransform ScaleX="1"
                                                        ScaleY="1" />
                                    </Image.LayoutTransform>
                                </Image>

                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="AnimatedDiceImage"
                                        Property="LayoutTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.05"
                                                        ScaleY="1.05" />
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="StaticDiceImage"
                                        Property="LayoutTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.05"
                                                        ScaleY="1.05" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- Click -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="AnimatedDiceImage"
                                        Property="LayoutTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95"
                                                        ScaleY="0.95" />
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="StaticDiceImage"
                                        Property="LayoutTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95"
                                                        ScaleY="0.95" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- Deshabilitado -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Plantilla de casilla -->
        <DataTemplate x:Key="BoardCellTemplate">
            <Border Style="{StaticResource BoardCellStyle}">
                <Grid>

                    <!-- Número de casilla -->
                    <TextBlock Text="{Binding Index}"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Bottom"
                               Margin="0,0,6,4"
                               Foreground="#3B2313"
                               FontSize="12"
                               FontWeight="Bold"
                               TextOptions.TextRenderingMode="Aliased"
                               TextOptions.TextFormattingMode="Display" />

                    <!-- BONUS -->
                    <Image Width="60"
                           Height="60"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Source="{StaticResource DiceIconSource}">
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsBonus}" Value="True">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>

                    <!-- TRAMPA -->
                    <Image Width="60"
                           Height="60"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Source="{StaticResource ItemIconSource}">
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsTrap}" Value="True">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>

                    <!-- TELEPORT -->
                    <Image Width="60"
                           Height="60"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Source="{StaticResource MessageIconSource}">
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsTeleport}" Value="True">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>

                    <!-- CASILLA INICIAL -->
                    <Image Width="65"
                           Height="65"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Source="{StaticResource StartCellIconSource}">
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsStart}" Value="True">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>

                    <!-- CASILLA FINAL -->
                    <Image Width="65"
                           Height="65"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Source="{StaticResource FinalCellIconSource}">
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsFinal}" Value="True">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>

                </Grid>
            </Border>
        </DataTemplate>

        <!-- Template jugador normal -->
        <DataTemplate x:Key="CornerPlayerTemplate"
                      DataType="{x:Type vmModels:LobbyMemberViewModel}">
            <StackPanel Orientation="Vertical"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                <!-- Avatar clickeable para seleccionar target -->
                <Button Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding DataContext.SelectTargetUserCommand,
                                          Source={x:Reference GameBoardPageRoot}}"
                        CommandParameter="{Binding UserId}">
                    <Grid Width="112"
                          Height="112"
                          Margin="4">
                        <Border CornerRadius="12"
                                Background="#22000000">
                            <Image Source="{Binding SkinImagePath}"
                                   Stretch="Uniform"
                                   Margin="4" />
                        </Border>

                        <!-- Aro de color -->
                        <Grid Width="44"
                              Height="44"
                              HorizontalAlignment="Right"
                              VerticalAlignment="Bottom"
                              Margin="0,0,-4,-4">
                            <Ellipse Stroke="{Binding UserId,
                                                      Converter={StaticResource PlayerColorConverter}}"
                                     StrokeThickness="3" />
                            <Ellipse Margin="3">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="{Binding AvatarId,
                                                  Converter={StaticResource AvatarIdToPathConverter}}"
                                                Stretch="UniformToFill" />
                                </Ellipse.Fill>
                            </Ellipse>
                        </Grid>
                    </Grid>
                </Button>

                <!-- Nombre -->
                <TextBlock Text="{Binding UserName}"
                           Margin="0,4,0,0"
                           HorizontalAlignment="Center"
                           Foreground="White"
                           FontSize="14"
                           FontWeight="Bold"
                           TextTrimming="CharacterEllipsis" />

                <!-- Texto de efectos -->
                <TextBlock Text="{Binding EffectsText}"
                           Margin="0,2,0,0"
                           HorizontalAlignment="Center"
                           Foreground="#FFEFE2C4"
                           FontSize="11"
                           TextWrapping="Wrap"
                           TextTrimming="CharacterEllipsis" />

                <!-- Dado solo visual -->
                <Button Style="{StaticResource CornerPlayerDiceButtonStyle}"
                        Margin="0,6,0,6"
                        IsEnabled="False" />
            </StackPanel>
        </DataTemplate>

        <!-- Template jugador LOCAL -->
        <DataTemplate x:Key="LocalCornerPlayerTemplate"
                      DataType="{x:Type vmModels:LobbyMemberViewModel}">
            <StackPanel Orientation="Vertical"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                <!-- Avatar clickeable para seleccionar target -->
                <Button Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding DataContext.SelectTargetUserCommand,
                                          Source={x:Reference GameBoardPageRoot}}"
                        CommandParameter="{Binding UserId}">
                    <Grid Width="112"
                          Height="112"
                          Margin="4">
                        <Border CornerRadius="12"
                                Background="#22000000">
                            <Image Source="{Binding SkinImagePath}"
                                   Stretch="Uniform"
                                   Margin="4" />
                        </Border>

                        <!-- Aro de color -->
                        <Grid Width="44"
                              Height="44"
                              HorizontalAlignment="Right"
                              VerticalAlignment="Bottom"
                              Margin="0,0,-4,-4">
                            <Ellipse Stroke="{Binding UserId,
                                                      Converter={StaticResource PlayerColorConverter}}"
                                     StrokeThickness="3" />
                            <Ellipse Margin="3">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="{Binding AvatarId,
                                                  Converter={StaticResource AvatarIdToPathConverter}}"
                                                Stretch="UniformToFill" />
                                </Ellipse.Fill>
                            </Ellipse>
                        </Grid>
                    </Grid>
                </Button>

                <!-- Nombre -->
                <TextBlock Text="{Binding UserName}"
                           Margin="0,4,0,0"
                           HorizontalAlignment="Center"
                           Foreground="White"
                           FontSize="14"
                           FontWeight="Bold"
                           TextTrimming="CharacterEllipsis" />

                <!-- Texto de efectos -->
                <TextBlock Text="{Binding EffectsText}"
                           Margin="0,2,0,0"
                           HorizontalAlignment="Center"
                           Foreground="#FFEFE2C4"
                           FontSize="11"
                           TextWrapping="Wrap"
                           TextTrimming="CharacterEllipsis" />

                <!-- Dado clickeable del jugador local -->
                <Button Style="{StaticResource CornerPlayerDiceButtonStyle}"
                        Margin="0,6,0,6"
                        Command="{Binding DataContext.RollDiceCommand,
                                          Source={x:Reference GameBoardPageRoot}}" />

                <!-- Inventario local: ítems -->
                <StackPanel Orientation="Horizontal"
                            Margin="0,8,0,0"
                            HorizontalAlignment="Center">

                    <!-- SLOT 1 ITEM -->
                    <Button Width="64"
                            Height="48"
                            Background="Transparent"
                            BorderBrush="#F5F1C5"
                            BorderThickness="2"
                            Command="{Binding DataContext.UseItemFromSlot1Command,
                                              Source={x:Reference GameBoardPageRoot}}">
                        <Grid>
                            <Image Source="{Binding DataContext.Inventory.Slot1Item.IconPath,
                                                    Source={x:Reference GameBoardPageRoot}}"
                                   Stretch="Uniform"
                                   Margin="4" />
                            <TextBlock Text="{Binding DataContext.Inventory.Slot1Item.Quantity,
                                                      Source={x:Reference GameBoardPageRoot},
                                                      StringFormat=x{0}}"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Bottom"
                                       Margin="2"
                                       Foreground="#F5F1C5"
                                       FontSize="12"
                                       FontWeight="Bold" />
                        </Grid>
                    </Button>

                    <!-- SLOT 2 ITEM -->
                    <Button Width="64"
                            Height="48"
                            Margin="4,0,0,0"
                            Background="Transparent"
                            BorderBrush="#F5F1C5"
                            BorderThickness="2"
                            Command="{Binding DataContext.UseItemFromSlot2Command,
                                              Source={x:Reference GameBoardPageRoot}}">
                        <Grid>
                            <Image Source="{Binding DataContext.Inventory.Slot2Item.IconPath,
                                                    Source={x:Reference GameBoardPageRoot}}"
                                   Stretch="Uniform"
                                   Margin="4" />
                            <TextBlock Text="{Binding DataContext.Inventory.Slot2Item.Quantity,
                                                      Source={x:Reference GameBoardPageRoot},
                                                      StringFormat=x{0}}"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Bottom"
                                       Margin="2"
                                       Foreground="#F5F1C5"
                                       FontSize="12"
                                       FontWeight="Bold" />
                        </Grid>
                    </Button>

                    <!-- SLOT 3 ITEM -->
                    <Button Width="64"
                            Height="48"
                            Margin="4,0,0,0"
                            Background="Transparent"
                            BorderBrush="#F5F1C5"
                            BorderThickness="2"
                            Command="{Binding DataContext.UseItemFromSlot3Command,
                                              Source={x:Reference GameBoardPageRoot}}">
                        <Grid>
                            <Image Source="{Binding DataContext.Inventory.Slot3Item.IconPath,
                                                    Source={x:Reference GameBoardPageRoot}}"
                                   Stretch="Uniform"
                                   Margin="4" />
                            <TextBlock Text="{Binding DataContext.Inventory.Slot3Item.Quantity,
                                                      Source={x:Reference GameBoardPageRoot},
                                                      StringFormat=x{0}}"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Bottom"
                                       Margin="2"
                                       Foreground="#F5F1C5"
                                       FontSize="12"
                                       FontWeight="Bold" />
                        </Grid>
                    </Button>

                </StackPanel>

                <!-- NUEVO: barra de dados equipados -->
                <StackPanel Orientation="Horizontal"
                            Margin="0,6,0,0"
                            HorizontalAlignment="Center">

                    <!-- SLOT 1 DADO -->
                    <Button Width="52"
                            Height="42"
                            Background="Transparent"
                            BorderBrush="#EED9A066"
                            BorderThickness="2"
                            Command="{Binding DataContext.SelectDiceSlot1Command,
                                              Source={x:Reference GameBoardPageRoot}}">
                        <Grid>
                            <Image Source="{Binding DataContext.Inventory.Slot1Dice.IconPath,
                                                    Source={x:Reference GameBoardPageRoot}}"
                                   Stretch="Uniform"
                                   Margin="4" />
                            <TextBlock Text="{Binding DataContext.Inventory.Slot1Dice.Quantity,
                                                      Source={x:Reference GameBoardPageRoot},
                                                      StringFormat=x{0}}"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Bottom"
                                       Margin="2"
                                       Foreground="#F5F1C5"
                                       FontSize="11"
                                       FontWeight="Bold" />
                        </Grid>
                    </Button>

                    <!-- SLOT 2 DADO -->
                    <Button Width="52"
                            Height="42"
                            Margin="4,0,0,0"
                            Background="Transparent"
                            BorderBrush="#EED9A066"
                            BorderThickness="2"
                            Command="{Binding DataContext.SelectDiceSlot2Command,
                                              Source={x:Reference GameBoardPageRoot}}">
                        <Grid>
                            <Image Source="{Binding DataContext.Inventory.Slot2Dice.IconPath,
                                                    Source={x:Reference GameBoardPageRoot}}"
                                   Stretch="Uniform"
                                   Margin="4" />
                            <TextBlock Text="{Binding DataContext.Inventory.Slot2Dice.Quantity,
                                                      Source={x:Reference GameBoardPageRoot},
                                                      StringFormat=x{0}}"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Bottom"
                                       Margin="2"
                                       Foreground="#F5F1C5"
                                       FontSize="11"
                                       FontWeight="Bold" />
                        </Grid>
                    </Button>

                </StackPanel>

            </StackPanel>
        </DataTemplate>

    </Page.Resources>

    <!-- Atajos de teclado para usar ítems -->
    <Page.InputBindings>
        <KeyBinding Key="A"
                    Command="{Binding UseItemFromSlot1Command}" />
        <KeyBinding Key="B"
                    Command="{Binding UseItemFromSlot2Command}" />
        <KeyBinding Key="C"
                    Command="{Binding UseItemFromSlot3Command}" />
        <!-- Cancelar selección de ítem -->
        <KeyBinding Key="Escape"
                    Command="{Binding CancelItemUseCommand}" />
    </Page.InputBindings>

    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Barra superior -->
        <Grid Grid.Row="0"
              Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal"
                        Grid.Column="0">
                <TextBlock Text="Snakes &amp; Ladders"
                           Foreground="White"
                           FontSize="20"
                           FontWeight="Bold" />
                <TextBlock Text="  -  Game Board"
                           Foreground="White"
                           FontSize="16"
                           Margin="8,0,0,0" />
            </StackPanel>
        </Grid>

        <!-- Tablero -->
        <Viewbox Grid.Row="1"
                 Margin="16"
                 Stretch="Uniform"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center">
            <Border Background="{StaticResource BrushBoardCardBackground}"
                    BorderBrush="{StaticResource BrushBoardCardBorder}"
                    BorderThickness="2"
                    CornerRadius="22"
                    Padding="18">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="4"
                                      BlurRadius="16"
                                      Opacity="0.7" />
                </Border.Effect>

                <Grid>

                    <!-- Celdas -->
                    <ItemsControl ItemsSource="{Binding Cells}"
                                  ItemTemplate="{StaticResource BoardCellTemplate}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="{Binding Rows}"
                                             Columns="{Binding Columns}" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>

                    <!-- Serpientes y escaleras -->
                    <ItemsControl ItemsSource="{Binding Connections}"
                                  IsHitTestVisible="False"
                                  Panel.ZIndex="10">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas Width="{Binding Columns}"
                                        Height="{Binding Rows}">
                                    <Canvas.LayoutTransform>
                                        <ScaleTransform ScaleX="64"
                                                        ScaleY="64" />
                                    </Canvas.LayoutTransform>
                                </Canvas>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Canvas>

                                    <!-- Serpientes -->
                                    <Path StrokeThickness="0.15"
                                          Stroke="{Binding IsLadder,
                                                           Converter={StaticResource IsSnakeToColorConverter}}"
                                          StrokeDashArray="{Binding IsLadder,
                                                                    Converter={StaticResource IsSnakeToStyleConverter}}"
                                          StrokeStartLineCap="Round"
                                          StrokeEndLineCap="Round"
                                          StrokeLineJoin="Round"
                                          Opacity="0.95">
                                        <Path.Effect>
                                            <DropShadowEffect ShadowDepth="0"
                                                              BlurRadius="0.18"
                                                              Opacity="0.6" />
                                        </Path.Effect>
                                        <Path.Style>
                                            <Style TargetType="Path">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsLadder}" Value="False">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Path.Style>
                                        <Path.Data>
                                            <MultiBinding Converter="{StaticResource SnakeCurveGeometryConverter}">
                                                <Binding Path="StartX" />
                                                <Binding Path="StartY" />
                                                <Binding Path="EndX" />
                                                <Binding Path="EndY" />
                                                <Binding Path="IsLadder" />
                                            </MultiBinding>
                                        </Path.Data>
                                    </Path>

                                    <!-- Escaleras -->
                                    <Path StrokeThickness="0.11"
                                          Stroke="#85462D"
                                          StrokeStartLineCap="Round"
                                          StrokeEndLineCap="Round"
                                          StrokeLineJoin="Round"
                                          Opacity="0.95">
                                        <Path.Effect>
                                            <DropShadowEffect ShadowDepth="0"
                                                              BlurRadius="0.20"
                                                              Opacity="0.5" />
                                        </Path.Effect>
                                        <Path.Style>
                                            <Style TargetType="Path">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsLadder}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Path.Style>
                                        <Path.Data>
                                            <MultiBinding Converter="{StaticResource LadderGeometryConverter}">
                                                <Binding Path="StartX" />
                                                <Binding Path="StartY" />
                                                <Binding Path="EndX" />
                                                <Binding Path="EndY" />
                                            </MultiBinding>
                                        </Path.Data>
                                    </Path>

                                    <!-- Cabeza serpiente -->
                                    <Ellipse Width="0.40"
                                             Height="0.40"
                                             Fill="#49a067"
                                             Stroke="#49a067"
                                             StrokeThickness="0.04"
                                             Canvas.Left="{Binding StartX,
                                                                   Converter={StaticResource SnakeHeadOffsetConverter}}"
                                             Canvas.Top="{Binding StartY,
                                                                Converter={StaticResource SnakeHeadOffsetConverter}}">
                                        <Ellipse.Style>
                                            <Style TargetType="Ellipse">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsLadder}" Value="False">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Ellipse.Style>
                                    </Ellipse>

                                </Canvas>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- TOKENS -->
                    <ItemsControl ItemsSource="{Binding PlayerTokens}"
                                  Panel.ZIndex="30">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas Width="{Binding Columns}"
                                        Height="{Binding Rows}">
                                    <Canvas.LayoutTransform>
                                        <ScaleTransform ScaleX="64"
                                                        ScaleY="64" />
                                    </Canvas.LayoutTransform>
                                </Canvas>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemContainerStyle>
                            <Style TargetType="ContentPresenter">
                                <Setter Property="Canvas.Left"
                                        Value="{Binding X}" />
                                <Setter Property="Canvas.Top"
                                        Value="{Binding Y}" />
                            </Style>
                        </ItemsControl.ItemContainerStyle>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type vmModels:PlayerTokenViewModel}">
                                <Grid Width="0.7"
                                      Height="0.7">
                                    <Grid.RenderTransform>
                                        <TranslateTransform Y="{Binding VerticalOffset}" />
                                    </Grid.RenderTransform>

                                    <Border CornerRadius="0.15"
                                            BorderThickness="0.06"
                                            BorderBrush="{Binding UserId,
                                                                  Converter={StaticResource PlayerColorConverter}}">
                                        <Border.Background>
                                            <ImageBrush ImageSource="{Binding TokenImagePath}"
                                                        Stretch="UniformToFill" />
                                        </Border.Background>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </Grid>
            </Border>
        </Viewbox>

        <!-- Footer con notificación de ítems y botón Cancelar -->
        <Grid Grid.Row="2"
              Margin="16,0,16,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Background="{StaticResource BrushFooterBackground}"
                    BorderBrush="{StaticResource BrushFooterBorder}"
                    CornerRadius="14"
                    BorderThickness="1"
                    Padding="10,6">
                <TextBlock Text="{Binding LastItemNotification,
                                          FallbackValue=Game in progress – roll the dice to move your token.}"
                           Foreground="#FFEFE2C4"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap" />
            </Border>

            <Button Grid.Column="1"
                    Margin="8,0,0,0"
                    Padding="12,4"
                    VerticalAlignment="Center"
                    Content="Cancelar ítem"
                    Command="{Binding CancelItemUseCommand}"
                    IsEnabled="{Binding IsTargetSelectionActive}" />
        </Grid>

        <!-- TIMER CENTRAL -->
        <Grid Grid.RowSpan="3"
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              Panel.ZIndex="80"
              IsHitTestVisible="False">
            <Border Padding="12,8"
                    CornerRadius="16"
                    Background="#CC000000"
                    BorderBrush="#FFE3C08C"
                    BorderThickness="2">
                <StackPanel Orientation="Vertical"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBlock Text="Tiempo de turno"
                               Foreground="#FFEFE2C4"
                               FontSize="14"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,4" />
                    <TextBlock Text="{Binding TurnTimerText}"
                               Foreground="#FFFCE6B5"
                               FontSize="32"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               MinWidth="100" />
                </StackPanel>
            </Border>
        </Grid>

        <!-- Esquinas jugadores -->

        <!-- TopLeft -->
        <ContentControl Content="{Binding CornerPlayers.TopLeftPlayer}"
                               
                        Grid.RowSpan="3"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="16"
                        Panel.ZIndex="50">
            <ContentControl.Style>
                <Style TargetType="ContentControl">
                    <Setter Property="ContentTemplate"
                            Value="{StaticResource CornerPlayerTemplate}" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Content.IsLocalPlayer,
                                                       RelativeSource={RelativeSource Self}}"
                                     Value="True">
                            <Setter Property="ContentTemplate"
                                    Value="{StaticResource LocalCornerPlayerTemplate}" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ContentControl.Style>
        </ContentControl>

        <!-- TopRight -->
        <ContentControl Content="{Binding CornerPlayers.TopRightPlayer}"
                        Grid.RowSpan="3"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="16"
                        Panel.ZIndex="50">
            <ContentControl.Style>
                <Style TargetType="ContentControl">
                    <Setter Property="ContentTemplate"
                            Value="{StaticResource CornerPlayerTemplate}" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Content.IsLocalPlayer,
                                                       RelativeSource={RelativeSource Self}}"
                                     Value="True">
                            <Setter Property="ContentTemplate"
                                    Value="{StaticResource LocalCornerPlayerTemplate}" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ContentControl.Style>
        </ContentControl>

        <!-- BottomLeft -->
        <ContentControl Content="{Binding CornerPlayers.BottomLeftPlayer}"
                        Grid.RowSpan="3"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        Margin="16"
                        Panel.ZIndex="50">
            <ContentControl.Style>
                <Style TargetType="ContentControl">
                    <Setter Property="ContentTemplate"
                            Value="{StaticResource CornerPlayerTemplate}" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Content.IsLocalPlayer,
                                                       RelativeSource={RelativeSource Self}}"
                                     Value="True">
                            <Setter Property="ContentTemplate"
                                    Value="{StaticResource LocalCornerPlayerTemplate}" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ContentControl.Style>
        </ContentControl>

        <!-- BottomRight -->
        <ContentControl Content="{Binding CornerPlayers.BottomRightPlayer}"
                        Grid.RowSpan="3"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Margin="16"
                        Panel.ZIndex="50">
            <ContentControl.Style>
                <Style TargetType="ContentControl">
                    <Setter Property="ContentTemplate"
                            Value="{StaticResource CornerPlayerTemplate}" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Content.IsLocalPlayer,
                                                       RelativeSource={RelativeSource Self}}"
                                     Value="True">
                            <Setter Property="ContentTemplate"
                                    Value="{StaticResource LocalCornerPlayerTemplate}" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ContentControl.Style>
        </ContentControl>

    </Grid>
</Page>
