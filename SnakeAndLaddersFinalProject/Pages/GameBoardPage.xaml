<Page x:Class="SnakeAndLaddersFinalProject.Pages.GameBoardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:conv="clr-namespace:SnakeAndLaddersFinalProject.Converters"
      xmlns:vmModels="clr-namespace:SnakeAndLaddersFinalProject.ViewModels.Models"
      xmlns:utils="clr-namespace:SnakeAndLaddersFinalProject.Utilities"
      mc:Ignorable="d"
      d:DesignWidth="1280"
      d:DesignHeight="720"
      Title="GameBoardPage"
      Background="Transparent">

    <Page.Resources>

        <!-- Converters serpiente / escalera -->
        <conv:IsSnakeToColorConverter x:Key="IsSnakeToColorConverter" />
        <conv:IsSnakeToStyleConverter x:Key="IsSnakeToStyleConverter" />
        <conv:SnakeHeadOffsetConverter x:Key="SnakeHeadOffsetConverter" />
        <conv:SnakeCurveGeometryConverter x:Key="SnakeCurveGeometryConverter" />
        <conv:LadderGeometryConverter x:Key="LadderGeometryConverter" />

        <!-- Converter avatarId -> pack URI -->
        <utils:AvatarIdToPathConverter x:Key="AvatarIdToPathConverter" />

        <!-- Color por jugador -->
        <conv:PlayerColorConverter x:Key="PlayerColorConverter" />

        <Thickness x:Key="CellMargin">2</Thickness>

        <!-- PALETA / TARJETA DEL TABLERO -->
        <LinearGradientBrush x:Key="BrushBoardCardBackground"
                             StartPoint="0,0"
                             EndPoint="0,1">
            <GradientStop Color="#B0221810" Offset="0.0" />
            <GradientStop Color="#E03B2313" Offset="1.0" />
        </LinearGradientBrush>

        <SolidColorBrush x:Key="BrushBoardCardBorder"
                         Color="#FFD9A066" />

        <SolidColorBrush x:Key="BrushFooterBackground"
                         Color="#80131313" />

        <SolidColorBrush x:Key="BrushFooterBorder"
                         Color="#FFEBE0C8" />

        <!-- Fondos celdas -->
        <LinearGradientBrush x:Key="BrushBoardCellBackgroundLight"
                             StartPoint="0,0"
                             EndPoint="1,1">
            <GradientStop Color="#F7E0AD" Offset="0.0" />
            <GradientStop Color="#E9C97F" Offset="0.5" />
            <GradientStop Color="#CEA456" Offset="1.0" />
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="BrushBoardCellBackgroundDark"
                             StartPoint="0,0"
                             EndPoint="1,1">
            <GradientStop Color="#D2A25C" Offset="0.0" />
            <GradientStop Color="#B17B38" Offset="0.5" />
            <GradientStop Color="#8C541F" Offset="1.0" />
        </LinearGradientBrush>

        <SolidColorBrush x:Key="BrushBoardCellBorder"
                         Color="#8B5A2B" />

        <!-- BONUS (verde) -->
        <LinearGradientBrush x:Key="BrushBoardCellBonus"
                             StartPoint="0,0"
                             EndPoint="1,1">
            <GradientStop Color="#C6F6D5" Offset="0.0" />
            <GradientStop Color="#68D391" Offset="0.5" />
            <GradientStop Color="#2F855A" Offset="1.0" />
        </LinearGradientBrush>

        <!-- TRAMPA (rojo) -->
        <LinearGradientBrush x:Key="BrushBoardCellTrap"
                             StartPoint="0,0"
                             EndPoint="1,1">
            <GradientStop Color="#FED7D7" Offset="0.0" />
            <GradientStop Color="#FC8181" Offset="0.5" />
            <GradientStop Color="#C53030" Offset="1.0" />
        </LinearGradientBrush>

        <!-- TELEPORT (morado) -->
        <LinearGradientBrush x:Key="BrushBoardCellTeleport"
                             StartPoint="0,0"
                             EndPoint="1,1">
            <GradientStop Color="#E9D8FD" Offset="0.0" />
            <GradientStop Color="#9F7AEA" Offset="0.5" />
            <GradientStop Color="#553C9A" Offset="1.0" />
        </LinearGradientBrush>

        <!-- ICONOS ESPECIALES -->
        <BitmapImage x:Key="DiceIconSource"
                     UriSource="/Assets/Images/Icons/DieIcon.png" />
        <BitmapImage x:Key="MessageIconSource"
                     UriSource="/Assets/Images/Icons/MessageIcon.png" />
        <BitmapImage x:Key="ItemIconSource"
                     UriSource="/Assets/Images/Icons/ItemIcon.png" />

        <!-- ICONOS CASILLAS INICIO/FINAL -->
        <BitmapImage x:Key="FinalCellIconSource"
                     UriSource="/Assets/Images/Icons/FinalCellIcon.png" />
        <BitmapImage x:Key="StartCellIconSource"
                     UriSource="/Assets/Images/Icons/StartCellIcon.png" />

        <!-- Estilo de casilla -->
        <Style x:Key="BoardCellStyle"
               TargetType="Border">
            <Setter Property="Width" Value="64" />
            <Setter Property="Height" Value="64" />
            <Setter Property="Margin" Value="{StaticResource CellMargin}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="{StaticResource BrushBoardCellBorder}" />
            <Setter Property="Background" Value="{StaticResource BrushBoardCellBackgroundLight}" />
            <Setter Property="SnapsToDevicePixels" Value="True" />

            <Style.Triggers>
                <DataTrigger Binding="{Binding IsDark}" Value="True">
                    <Setter Property="Background"
                            Value="{StaticResource BrushBoardCellBackgroundDark}" />
                </DataTrigger>

                <DataTrigger Binding="{Binding IsBonus}" Value="True">
                    <Setter Property="Background"
                            Value="{StaticResource BrushBoardCellBonus}" />
                </DataTrigger>

                <DataTrigger Binding="{Binding IsTrap}" Value="True">
                    <Setter Property="Background"
                            Value="{StaticResource BrushBoardCellTrap}" />
                </DataTrigger>

                <DataTrigger Binding="{Binding IsTeleport}" Value="True">
                    <Setter Property="Background"
                            Value="{StaticResource BrushBoardCellTeleport}" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Slot de inventario jugadores -->
        <Style x:Key="InventorySlotStyle"
               TargetType="Border">
            <Setter Property="Width" Value="40" />
            <Setter Property="Height" Value="40" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="BorderThickness" Value="1.5" />
            <Setter Property="BorderBrush" Value="#FFE3C08C" />
            <Setter Property="Background" Value="#33000000" />
            <Setter Property="Margin" Value="4,0" />
        </Style>

        <!-- Botón de dado para jugadores -->
        <!-- Botón de dado para jugadores (usa DiceAnimator.CurrentFrame) -->
        <Style x:Key="CornerPlayerDiceButtonStyle"
       TargetType="Button">
            <Setter Property="Width" Value="72" />
            <Setter Property="Height" Value="72" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="12"
                        Background="#33000000">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2"
                                          BlurRadius="6"
                                          Opacity="0.6" />
                            </Border.Effect>

                            <Grid>
                                <!-- Dado animado -->
                                <Image x:Name="DiceImage"
                               Stretch="Uniform"
                               RenderOptions.BitmapScalingMode="NearestNeighbor"
                               Source="{Binding DataContext.DiceAnimator.CurrentFrame,
                                        RelativeSource={RelativeSource AncestorType=Page}}">
                                    <Image.LayoutTransform>
                                        <!-- escala base -->
                                        <ScaleTransform ScaleX="1"
                                                ScaleY="1" />
                                    </Image.LayoutTransform>
                                </Image>
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <!-- Hover: un poco más grande -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="DiceImage"
                                Property="LayoutTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.05"
                                                ScaleY="1.05" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- Click: un poco más pequeño -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="DiceImage"
                                Property="LayoutTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95"
                                                ScaleY="0.95" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- Deshabilitado -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <!-- Plantilla de casilla (sin tokens dentro) -->
        <DataTemplate x:Key="BoardCellTemplate">
            <Border Style="{StaticResource BoardCellStyle}">
                <Grid>

                    <!-- Número de casilla -->
                    <TextBlock Text="{Binding Index}"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Bottom"
                               Margin="0,0,6,4"
                               Foreground="#3B2313"
                               FontFamily="{StaticResource Font.PixelatedDisplay}"
                               FontSize="12"
                               FontWeight="Bold"
                               TextOptions.TextRenderingMode="Aliased"
                               TextOptions.TextFormattingMode="Display" />

                    <!-- BONUS (verde) -->
                    <Image Width="60"
                           Height="60"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Source="{StaticResource DiceIconSource}">
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsBonus}" Value="True">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>

                    <!-- TRAMPA (rojo) -->
                    <Image Width="60"
                           Height="60"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Source="{StaticResource ItemIconSource}">
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsTrap}" Value="True">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>

                    <!-- TELEPORT (morado) -->
                    <Image Width="60"
                           Height="60"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Source="{StaticResource MessageIconSource}">
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsTeleport}" Value="True">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>

                    <!-- CASILLA INICIAL -->
                    <Image Width="65"
                           Height="65"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Source="{StaticResource StartCellIconSource}">
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsStart}" Value="True">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>

                    <!-- CASILLA FINAL -->
                    <Image Width="65"
                           Height="65"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Source="{StaticResource FinalCellIconSource}">
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsFinal}" Value="True">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>

                </Grid>
            </Border>
        </DataTemplate>

        <!-- Template para jugador en esquina (con aro de color, botón y slots) -->
        <DataTemplate x:Key="CornerPlayerTemplate"
                      DataType="{x:Type vmModels:LobbyMemberViewModel}">
            <StackPanel Orientation="Vertical"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                <!-- Avatar grande -->
                <Grid Width="112"
                      Height="112"
                      Margin="4">
                    <Border CornerRadius="12"
                            Background="#22000000">
                        <Image Source="{Binding SkinImagePath}"
                               Stretch="Uniform"
                               Margin="4" />
                    </Border>

                    <!-- Aro de color alrededor del avatar -->
                    <Grid Width="44"
                          Height="44"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Bottom"
                          Margin="0,0,-4,-4">
                        <Ellipse Stroke="{Binding UserId,
                                                  Converter={StaticResource PlayerColorConverter}}"
                                 StrokeThickness="3" />
                        <Ellipse Margin="3">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="{Binding AvatarId,
                                              Converter={StaticResource AvatarIdToPathConverter}}"
                                            Stretch="UniformToFill" />
                            </Ellipse.Fill>
                        </Ellipse>
                    </Grid>
                </Grid>

                <!-- Nombre -->
                <TextBlock Text="{Binding UserName}"
                           Margin="0,4,0,0"
                           HorizontalAlignment="Center"
                           Foreground="White"
                           FontSize="14"
                           FontWeight="Bold"
                           TextTrimming="CharacterEllipsis" />

                
                <!-- Botón Roll dice (usa el dado animado del estilo) -->
                <Button Style="{StaticResource CornerPlayerDiceButtonStyle}"
        Margin="0,6,0,6"
        Command="{Binding DataContext.RollDiceCommand,
                          RelativeSource={RelativeSource AncestorType=Page}}" />


                <!-- Inventario: 4 slots -->
                <UniformGrid Rows="1"
                             Columns="4"
                             HorizontalAlignment="Center">
                    <Border Style="{StaticResource InventorySlotStyle}" />
                    <Border Style="{StaticResource InventorySlotStyle}" />
                    <Border Style="{StaticResource InventorySlotStyle}" />
                    <Border Style="{StaticResource InventorySlotStyle}" />
                </UniformGrid>
            </StackPanel>
        </DataTemplate>

    </Page.Resources>

    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Barra superior -->
        <Grid Grid.Row="0"
              Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal"
                        Grid.Column="0">
                <TextBlock Text="Snakes &amp; Ladders"
                           Foreground="White"
                           FontSize="20"
                           FontWeight="Bold" />
                <TextBlock Text="  -  Game Board"
                           Foreground="White"
                           FontSize="16"
                           Margin="8,0,0,0" />
            </StackPanel>

            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">
                <Button Style="{StaticResource CornerPlayerDiceButtonStyle}"
        Command="{Binding RollDiceCommand}" />

            </StackPanel>
        </Grid>

        <!-- Tablero dentro de tarjeta decorativa -->
        <Viewbox Grid.Row="1"
                 Margin="16"
                 Stretch="Uniform"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center">
            <Border Background="{StaticResource BrushBoardCardBackground}"
                    BorderBrush="{StaticResource BrushBoardCardBorder}"
                    BorderThickness="2"
                    CornerRadius="22"
                    Padding="18">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="4"
                                      BlurRadius="16"
                                      Opacity="0.7" />
                </Border.Effect>

                <Grid>

                    <!-- Celdas -->
                    <ItemsControl ItemsSource="{Binding Cells}"
                                  ItemTemplate="{StaticResource BoardCellTemplate}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="{Binding Rows}"
                                             Columns="{Binding Columns}" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>

                    <!-- Serpientes y escaleras -->
                    <ItemsControl ItemsSource="{Binding Connections}"
                                  IsHitTestVisible="False"
                                  Panel.ZIndex="10">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas Width="{Binding Columns}"
                                        Height="{Binding Rows}">
                                    <Canvas.LayoutTransform>
                                        <ScaleTransform ScaleX="64"
                                                        ScaleY="64" />
                                    </Canvas.LayoutTransform>
                                </Canvas>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Canvas>

                                    <!-- Serpientes -->
                                    <Path StrokeThickness="0.15"
                                          Stroke="{Binding IsLadder,
                                                           Converter={StaticResource IsSnakeToColorConverter}}"
                                          StrokeDashArray="{Binding IsLadder,
                                                                    Converter={StaticResource IsSnakeToStyleConverter}}"
                                          StrokeStartLineCap="Round"
                                          StrokeEndLineCap="Round"
                                          StrokeLineJoin="Round"
                                          Opacity="0.95">
                                        <Path.Effect>
                                            <DropShadowEffect ShadowDepth="0"
                                                              BlurRadius="0.18"
                                                              Opacity="0.6" />
                                        </Path.Effect>
                                        <Path.Style>
                                            <Style TargetType="Path">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsLadder}" Value="False">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Path.Style>
                                        <Path.Data>
                                            <MultiBinding Converter="{StaticResource SnakeCurveGeometryConverter}">
                                                <Binding Path="StartX" />
                                                <Binding Path="StartY" />
                                                <Binding Path="EndX" />
                                                <Binding Path="EndY" />
                                                <Binding Path="IsLadder" />
                                            </MultiBinding>
                                        </Path.Data>
                                    </Path>

                                    <!-- Escaleras -->
                                    <Path StrokeThickness="0.11"
                                          Stroke="#85462D"
                                          StrokeStartLineCap="Round"
                                          StrokeEndLineCap="Round"
                                          StrokeLineJoin="Round"
                                          Opacity="0.95">
                                        <Path.Effect>
                                            <DropShadowEffect ShadowDepth="0"
                                                              BlurRadius="0.20"
                                                              Opacity="0.5" />
                                        </Path.Effect>
                                        <Path.Style>
                                            <Style TargetType="Path">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsLadder}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Path.Style>
                                        <Path.Data>
                                            <MultiBinding Converter="{StaticResource LadderGeometryConverter}">
                                                <Binding Path="StartX" />
                                                <Binding Path="StartY" />
                                                <Binding Path="EndX" />
                                                <Binding Path="EndY" />
                                            </MultiBinding>
                                        </Path.Data>
                                    </Path>

                                    <!-- Cabeza serpiente -->
                                    <Ellipse Width="0.40"
                                             Height="0.40"
                                             Fill="#49a067"
                                             Stroke="#49a067"
                                             StrokeThickness="0.04"
                                             Canvas.Left="{Binding StartX,
                                                                   Converter={StaticResource SnakeHeadOffsetConverter}}"
                                             Canvas.Top="{Binding StartY,
                                                                Converter={StaticResource SnakeHeadOffsetConverter}}">
                                        <Ellipse.Style>
                                            <Style TargetType="Ellipse">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsLadder}" Value="False">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Ellipse.Style>
                                    </Ellipse>

                                </Canvas>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- TOKENS en canvas global -->
                    <ItemsControl ItemsSource="{Binding PlayerTokens}"
                                  Panel.ZIndex="30">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas Width="{Binding Columns}"
                                        Height="{Binding Rows}">
                                    <Canvas.LayoutTransform>
                                        <ScaleTransform ScaleX="64"
                                                        ScaleY="64" />
                                    </Canvas.LayoutTransform>
                                </Canvas>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <!-- Canvas.Left/Top -->
                        <ItemsControl.ItemContainerStyle>
                            <Style TargetType="ContentPresenter">
                                <Setter Property="Canvas.Left"
                                        Value="{Binding X}" />
                                <Setter Property="Canvas.Top"
                                        Value="{Binding Y}" />
                            </Style>
                        </ItemsControl.ItemContainerStyle>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type vmModels:PlayerTokenViewModel}">
                                <Grid Width="0.7"
                                      Height="0.7">
                                    <Grid.RenderTransform>
                                        <TranslateTransform Y="{Binding VerticalOffset}" />
                                    </Grid.RenderTransform>

                                    <Border CornerRadius="0.15"
                                            BorderThickness="0.06"
                                            BorderBrush="{Binding UserId,
                                                                  Converter={StaticResource PlayerColorConverter}}">
                                        <Border.Background>
                                            <ImageBrush ImageSource="{Binding TokenImagePath}"
                                                        Stretch="UniformToFill" />
                                        </Border.Background>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </Grid>
            </Border>
        </Viewbox>

        <!-- Footer -->
        <Grid Grid.Row="2"
              Margin="16,0,16,16">
            <Border Background="{StaticResource BrushFooterBackground}"
                    BorderBrush="{StaticResource BrushFooterBorder}"
                    CornerRadius="14"
                    BorderThickness="1"
                    Padding="10,6">
                <TextBlock Text="Game in progress – roll the dice to move your token."
                           Foreground="#FFEFE2C4"
                           FontSize="14"
                           HorizontalAlignment="Center" />
            </Border>
        </Grid>

        <!-- Esquinas jugadores -->
        <ContentControl Content="{Binding CornerPlayers.TopLeftPlayer}"
                        ContentTemplate="{StaticResource CornerPlayerTemplate}"
                        Grid.RowSpan="3"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="16"
                        Panel.ZIndex="50" />

        <ContentControl Content="{Binding CornerPlayers.TopRightPlayer}"
                        ContentTemplate="{StaticResource CornerPlayerTemplate}"
                        Grid.RowSpan="3"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="16"
                        Panel.ZIndex="50" />

        <ContentControl Content="{Binding CornerPlayers.BottomLeftPlayer}"
                        ContentTemplate="{StaticResource CornerPlayerTemplate}"
                        Grid.RowSpan="3"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        Margin="16"
                        Panel.ZIndex="50" />

        <ContentControl Content="{Binding CornerPlayers.BottomRightPlayer}"
                        ContentTemplate="{StaticResource CornerPlayerTemplate}"
                        Grid.RowSpan="3"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Margin="16"
                        Panel.ZIndex="50" />
    </Grid>
</Page>
