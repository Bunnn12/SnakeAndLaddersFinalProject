<Page x:Class="SnakeAndLaddersFinalProject.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:language="clr-namespace:SnakeAndLaddersFinalProject.Properties.Langs"
      mc:Ignorable="d"
      d:DesignWidth="1280"
      d:DesignHeight="720"
      Title="{x:Static language:Lang.lblProfileTitle}"
      Background="Transparent"
      SnapsToDevicePixels="True"
      UseLayoutRounding="True"
      Loaded="PageLoaded">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

        <DropShadowEffect x:Key="ShadowSoft"
                          BlurRadius="18"
                          ShadowDepth="0"
                          Opacity="0.55" />

        <Style x:Key="RoundedTextBox" TargetType="TextBox">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Foreground" Value="#5B2722" />
            <Setter Property="Background" Value="#FFFBE0C8" />
            <Setter Property="BorderBrush" Value="#FFDA8C7A" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Padding" Value="10,6" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="0"
                                          Focusable="False" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedMultilineTextBox"
               BasedOn="{StaticResource RoundedTextBox}"
               TargetType="TextBox">
            <Setter Property="AcceptsReturn" Value="True" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
            <Setter Property="VerticalContentAlignment" Value="Top" />
            <Setter Property="Background" Value="#FFF5A8B2" />
        </Style>

        <Storyboard x:Key="ProfilePageVideoStoryboard"
                    RepeatBehavior="Forever">
            <MediaTimeline
                Source="pack://siteoforigin:,,,/Assets/Videos/MainPageVideo.mp4"
                Storyboard.TargetName="VideoBg" />
        </Storyboard>
    </Page.Resources>

    <Grid Background="Transparent">

        <MediaElement x:Name="VideoBg"
                      IsMuted="True"
                      Stretch="UniformToFill"
                      IsHitTestVisible="False"
                      Panel.ZIndex="-1"
                      LoadedBehavior="Manual"
                      UnloadedBehavior="Manual">
            <MediaElement.Triggers>
                <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                    <BeginStoryboard Storyboard="{StaticResource ProfilePageVideoStoryboard}" />
                </EventTrigger>
            </MediaElement.Triggers>
        </MediaElement>

        <Viewbox Stretch="Uniform"
                 StretchDirection="Both">
            <Grid Width="1280"
                  Height="720"
                  Background="Transparent">

                <Border HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        MaxWidth="980"
                        CornerRadius="18"
                        Padding="24"
                        Height="590"
                        Width="951">
                    <Border.Background>
                        <SolidColorBrush Color="#FF000000" Opacity="0.55" />
                    </Border.Background>
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="18"
                                          ShadowDepth="0"
                                          Opacity="0.55" />
                    </Border.Effect>

                    <Grid x:Name="rootGrid"
                          TextElement.Foreground="White">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0"
                              Margin="0,0,0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Button x:Name="btnBack"
                                    Grid.Column="0"
                                    Width="56"
                                    Height="56"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    Cursor="Hand"
                                    Click="Back"
                                    ToolTip="{x:Static language:Lang.btnBackText}">
                                <Image Source="/Assets/Images/Icons/BackIcon.png"
                                       Width="32"
                                       Height="32"
                                       Stretch="Fill"
                                       RenderOptions.BitmapScalingMode="NearestNeighbor" />
                            </Button>

                            <TextBlock Grid.Column="1"
                                       Text="{x:Static language:Lang.lblProfileTitle}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />

                            <Button x:Name="btnEditAccount"
                                    Grid.Column="2"
                                    Margin="8,6,8,6"
                                    Padding="18,8"
                                    Cursor="Hand"
                                    Click="EditProfile">
                                <Button.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#FFFA9A22" Offset="0" />
                                        <GradientStop Color="#FFF57C00" Offset="1" />
                                    </LinearGradientBrush>
                                </Button.Background>
                                <Button.BorderBrush>
                                    <SolidColorBrush Color="#FFFFC35B" />
                                </Button.BorderBrush>
                                <Button.BorderThickness>2</Button.BorderThickness>
                                <StackPanel Orientation="Horizontal"
                                            VerticalAlignment="Center">
                                    <Image Source="/Assets/Images/Icons/SettingsIcon.png"
                                           Width="20"
                                           Height="20"
                                           Margin="0,0,6,0"
                                           RenderOptions.BitmapScalingMode="NearestNeighbor" />
                                    <TextBlock Text="{x:Static language:Lang.menuEditAccountText}"
                                               FontWeight="Bold"
                                               FontSize="16" />
                                </StackPanel>
                            </Button>

                            <Button x:Name="btnMenu"
                                    Grid.Column="3"
                                    Width="36"
                                    Height="30"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    Click="MenuClick"
                                    Cursor="Hand">
                                <StackPanel Orientation="Vertical"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center">
                                    <Rectangle Height="3" Width="20" RadiusX="1.5" RadiusY="1.5" Fill="White" Margin="0,1" />
                                    <Rectangle Height="3" Width="20" RadiusX="1.5" RadiusY="1.5" Fill="White" Margin="0,1" />
                                    <Rectangle Height="3" Width="20" RadiusX="1.5" RadiusY="1.5" Fill="White" Margin="0,1" />
                                </StackPanel>

                                <Button.ContextMenu>
                                    <ContextMenu x:Name="cmAccountMenu">
                                        <MenuItem x:Name="miViewStats"
                                                  Header="{x:Static language:Lang.menuViewStatsText}"
                                                  Click="MenuViewStats" />
                                        <Separator />
                                        <MenuItem x:Name="miInstagramLinkToggle"
                                                  Header="{x:Static language:Lang.ProfileNetworkInstagramText}"
                                                  Click="MenuInstagramLinkToggle" />
                                        <MenuItem x:Name="miFacebookLinkToggle"
                                                  Header="{x:Static language:Lang.ProfileNetworkFacebookText}"
                                                  Click="MenuFacebookLinkToggle" />
                                        <MenuItem x:Name="miTwitterLinkToggle"
                                                  Header="{x:Static language:Lang.ProfileNetworkTwitterText}"
                                                  Click="MenuTwitterLinkToggle" />
                                        <Separator />
                                        <MenuItem x:Name="miDeleteAccount"
                                                  Header="{x:Static language:Lang.menuDeleteAccountText}"
                                                  Click="MenuDeleteAccount" />
                                    </ContextMenu>
                                </Button.ContextMenu>
                            </Button>
                        </Grid>

                        <Border x:Name="borderEditBanner"
                                Grid.Row="1"
                                Margin="0,4,0,4"
                                Background="#33FFEB3B"
                                BorderBrush="#66FFEB3B"
                                BorderThickness="1"
                                CornerRadius="6"
                                Visibility="Collapsed">
                            <TextBlock x:Name="txtEditBanner"
                                       Margin="12,6"
                                       Text="{x:Static language:Lang.lblProfileEditModeText}"
                                       FontWeight="SemiBold"
                                       Foreground="#FFFFF8E1" />
                        </Border>

                        <Grid Grid.Row="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0"
                                    CornerRadius="14"
                                    BorderThickness="3"
                                    BorderBrush="#FFDA8C7A"
                                    Padding="18"
                                    SnapsToDevicePixels="True">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#FFFEE2C8" Offset="0" />
                                        <GradientStop Color="#FFFBD5B5" Offset="1" />
                                    </LinearGradientBrush>
                                </Border.Background>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="280" />
                                        <ColumnDefinition Width="24" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center">
                                        <Ellipse Width="180"
                                                 Height="180"
                                                 Stroke="#FF63343B"
                                                 StrokeThickness="4">
                                            <Ellipse.Fill>
                                                <ImageBrush ImageSource="{Binding AvatarId,
                                                            Converter={StaticResource AvatarIdToPathConverter},
                                                            FallbackValue=/Assets/Images/Icons/A0013.jpg,
                                                            TargetNullValue=/Assets/Images/Icons/A0013.jpg}"
                                                            Stretch="UniformToFill" />
                                            </Ellipse.Fill>
                                        </Ellipse>

                                        <Button x:Name="btnChangeAvatar"
                                                Margin="0,24,0,0"
                                                Height="48"
                                                Width="210"
                                                HorizontalAlignment="Center"
                                                FontSize="18"
                                                FontWeight="Bold"
                                                Content="{x:Static language:Lang.btnChangeAvatarText}"
                                                Click="ChangeAvatar">
                                            <Button.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                    <GradientStop Color="#FFFFC45A" Offset="0" />
                                                    <GradientStop Color="#FFF38B3B" Offset="1" />
                                                </LinearGradientBrush>
                                            </Button.Background>
                                            <Button.BorderBrush>#FF8B4130</Button.BorderBrush>
                                            <Button.BorderThickness>3</Button.BorderThickness>
                                        </Button>
                                    </StackPanel>

                                    <Grid Grid.Column="2"
                                          VerticalAlignment="Center">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <Grid Grid.Row="0"
                                              Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="160" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{x:Static language:Lang.lblProfileUserNameCaptionText}"
                                                       VerticalAlignment="Center"
                                                       FontSize="18"
                                                       Foreground="#5B2722"
                                                       Margin="0,0,10,0" />
                                            <TextBlock x:Name="txtUsername"
                                                       Grid.Column="1"
                                                       FontSize="18"
                                                       FontWeight="SemiBold"
                                                       Foreground="#5B2722"
                                                       VerticalAlignment="Center"
                                                       Text="{Binding UserName}" />
                                        </Grid>

                                        <Grid Grid.Row="1"
                                              Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="160" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{x:Static language:Lang.txtNameOfUserText}"
                                                       VerticalAlignment="Center"
                                                       FontSize="18"
                                                       Foreground="#5B2722"
                                                       Margin="0,0,10,0" />
                                            <TextBox x:Name="txtFirstName"
                                                     Grid.Column="1"
                                                     Height="40"
                                                     Style="{StaticResource RoundedTextBox}"
                                                     IsReadOnly="True" />
                                        </Grid>

                                        <Grid Grid.Row="2"
                                              Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="160" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{x:Static language:Lang.lblProfileLastNameText}"
                                                       VerticalAlignment="Center"
                                                       FontSize="18"
                                                       Foreground="#5B2722"
                                                       Margin="0,0,10,0" />
                                            <TextBox x:Name="txtLastName"
                                                     Grid.Column="1"
                                                     Height="40"
                                                     Style="{StaticResource RoundedTextBox}"
                                                     IsReadOnly="True" />
                                        </Grid>

                                        <Grid Grid.Row="3"
                                              Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="160" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{x:Static language:Lang.lblProfileDescriptionText}"
                                                       VerticalAlignment="Top"
                                                       FontSize="18"
                                                       Foreground="#5B2722"
                                                       Margin="0,4,10,0" />
                                            <TextBox x:Name="txtDescription"
                                                     Grid.Column="1"
                                                     Height="120"
                                                     Style="{StaticResource RoundedMultilineTextBox}"
                                                     IsReadOnly="True" />
                                        </Grid>

                                        <Grid Grid.Row="4"
                                              Margin="0,0,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="160" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0"
                                                        Orientation="Horizontal"
                                                        VerticalAlignment="Center">
                                                <Image Source="/Assets/Images/Icons/CoinsIcon.png"
                                                       Width="28"
                                                       Height="28"
                                                       Margin="0,0,6,0"
                                                       RenderOptions.BitmapScalingMode="NearestNeighbor" />
                                                <TextBlock Text="{x:Static language:Lang.lblCoinsText}"
                                                           VerticalAlignment="Center"
                                                           FontSize="18"
                                                           Foreground="#5B2722" />
                                            </StackPanel>

                                            <TextBox x:Name="txtCoins"
                                                     Grid.Column="2"
                                                     Height="40"
                                                     Style="{StaticResource RoundedTextBox}"
                                                     IsReadOnly="True"
                                                     Margin="10,0,-1,0" />
                                        </Grid>

                                        <Grid Grid.Row="5"
                                              Margin="0,8,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="160" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0"
                                                       VerticalAlignment="Top"
                                                       FontSize="18"
                                                       Foreground="#5B2722"
                                                       Margin="0,4,10,0"
                                                       Text="{x:Static language:Lang.lblProfileSocialNetworksText}" />

                                            <StackPanel Grid.Column="1"
                                                        Orientation="Vertical">

                                                <StackPanel Orientation="Horizontal"
                                                            Margin="0,0,0,4">
                                                    <Image Width="24"
                                                           Height="24"
                                                           Margin="0,0,6,0"
                                                           Source="/Assets/Images/Icons/InstagramIcon.jpg" />
                                                    <TextBlock VerticalAlignment="Center"
                                                               FontSize="16"
                                                               Foreground="#5B2722">
                                                        <Hyperlink x:Name="lnkInstagramProfile"
                                                                   Click="LnkInstagramProfile">
                                                            <Run Text="{x:Static language:Lang.ProfileSocialNotLinkedText}" />
                                                        </Hyperlink>
                                                    </TextBlock>
                                                </StackPanel>

                                                <StackPanel Orientation="Horizontal"
                                                            Margin="0,0,0,4">
                                                    <Image Width="24"
                                                           Height="24"
                                                           Margin="0,0,6,0"
                                                           Source="/Assets/Images/Icons/FacebookIcon.jpg" />
                                                    <TextBlock VerticalAlignment="Center"
                                                               FontSize="16"
                                                               Foreground="#5B2722">
                                                        <Hyperlink x:Name="lnkFacebookProfile"
                                                                   Click="LnkFacebookProfile">
                                                            <Run Text="{x:Static language:Lang.ProfileSocialNotLinkedText}" />
                                                        </Hyperlink>
                                                    </TextBlock>
                                                </StackPanel>

                                                <StackPanel Orientation="Horizontal">
                                                    <Image Width="24"
                                                           Height="24"
                                                           Margin="0,0,6,0"
                                                           Source="/Assets/Images/Icons/TwitterIcon.jpg" />
                                                    <TextBlock VerticalAlignment="Center"
                                                               FontSize="16"
                                                               Foreground="#5B2722">
                                                        <Hyperlink x:Name="lnkTwitterProfile"
                                                                   Click="LnkTwitterProfile">
                                                            <Run Text="{x:Static language:Lang.ProfileSocialNotLinkedText}" />
                                                        </Hyperlink>
                                                    </TextBlock>
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Border>

                            <StackPanel Grid.Row="1"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Right"
                                        Margin="0,14,0,0">
                                <Button x:Name="btnGuardar"
                                        Content="{x:Static language:Lang.btnProfileSaveText}"
                                        Width="110"
                                        Height="40"
                                        Margin="0,0,10,0"
                                        Click="SaveChanges"
                                        IsEnabled="False"
                                        FontSize="18">
                                    <Button.Background>
                                        <SolidColorBrush Color="#FF4CAF50" />
                                    </Button.Background>
                                    <Button.BorderBrush>#FFFFFFFF</Button.BorderBrush>
                                    <Button.BorderThickness>1.5</Button.BorderThickness>
                                </Button>

                                <Button x:Name="btnCancelar"
                                        Content="{x:Static language:Lang.btnCancelText}"
                                        Width="110"
                                        Height="40"
                                        Margin="0,0,10,0"
                                        Click="Cancel"
                                        IsEnabled="False"
                                        FontSize="18">
                                    <Button.Background>
                                        <SolidColorBrush Color="#FFE57373" />
                                    </Button.Background>
                                    <Button.BorderBrush>#FFFFFFFF</Button.BorderBrush>
                                    <Button.BorderThickness>1.5</Button.BorderThickness>
                                </Button>

                                <Button x:Name="btnLogout"
                                        Content="{x:Static language:Lang.btnLogoutText}"
                                        Width="110"
                                        Height="40"
                                        Click="Logout"
                                        FontSize="18">
                                    <Button.Background>
                                        <SolidColorBrush Color="#FF9E9E9E" />
                                    </Button.Background>
                                    <Button.BorderBrush>#FFFFFFFF</Button.BorderBrush>
                                    <Button.BorderThickness>1.5</Button.BorderThickness>
                                </Button>
                            </StackPanel>

                        </Grid>

                        <Border x:Name="borderAvatarPicker"
                                Grid.Row="2"
                                Panel.ZIndex="20"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="0,24,0,0"
                                Width="460"
                                Background="#EE000000"
                                BorderBrush="#99FFFFFF"
                                BorderThickness="1"
                                CornerRadius="12"
                                Padding="14"
                                Visibility="Collapsed">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{x:Static language:Lang.lblSelectAvatarTitleText}"
                                               FontWeight="SemiBold"
                                               FontSize="18"
                                               VerticalAlignment="Center" />

                                    <Button Grid.Column="1"
                                            Width="28"
                                            Height="28"
                                            Margin="6,0,0,0"
                                            Background="#44FFFFFF"
                                            BorderBrush="#FFFFC35B"
                                            BorderThickness="1.2"
                                            Cursor="Hand"
                                            Click="CloseAvatarPicker">
                                        <TextBlock Text="✕"
                                                   FontSize="18"
                                                   FontWeight="Bold"
                                                   Foreground="#FFFFC35B"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center" />
                                    </Button>
                                </Grid>

                                <ScrollViewer Grid.Row="2"
                                              VerticalScrollBarVisibility="Auto">
                                    <ItemsControl x:Name="avatarItemsControl"
                                                  ItemsSource="{Binding AvatarOptions}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel Orientation="Horizontal"
                                                           ItemWidth="96"
                                                           ItemHeight="96"
                                                           Margin="0,4,0,0" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>

                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Button Width="90"
                                                        Height="90"
                                                        Margin="4"
                                                        Tag="{Binding}"
                                                        Click="AvatarItem"
                                                        Background="Transparent"
                                                        BorderBrush="Transparent"
                                                        Cursor="Hand"
                                                        IsEnabled="{Binding IsEnabled}">
                                                    <Border CornerRadius="10"
                                                            BorderThickness="1"
                                                            BorderBrush="#FFCCCCCC"
                                                            Padding="4"
                                                            Opacity="{Binding Opacity}">
                                                        <Image Source="{Binding AvatarCode,
                                                               Converter={StaticResource AvatarIdToPathConverter}}"
                                                               Stretch="UniformToFill"
                                                               RenderOptions.BitmapScalingMode="NearestNeighbor" />
                                                    </Border>
                                                </Button>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Grid>
                        </Border>

                    </Grid>
                </Border>

            </Grid>
        </Viewbox>
    </Grid>
</Page>