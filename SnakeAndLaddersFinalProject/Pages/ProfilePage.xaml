<Page x:Class="SnakeAndLaddersFinalProject.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="ProfilePage"
      Loaded="Page_Loaded">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Mi perfil" FontSize="20" FontWeight="SemiBold"
                   HorizontalAlignment="Center" />

        <StackPanel Grid.Row="2" Orientation="Vertical" Width="380" >
            <TextBlock Text="Nombre de usuario" Margin="0,0,0,4"/>
            <TextBox x:Name="txtUsername" IsReadOnly="True" Margin="0,0,0,8"/>

            <TextBlock Text="Nombre" Margin="0,0,0,4"/>
            <TextBox x:Name="txtFirstName" IsReadOnly="True" Margin="0,0,0,8"/>

            <TextBlock Text="Apellidos" Margin="0,0,0,4"/>
            <TextBox x:Name="txtLastName" IsReadOnly="True" Margin="0,0,0,8"/>

            <TextBlock Text="Descripción" Margin="0,0,0,4"/>
            <TextBox x:Name="txtDescription" IsReadOnly="True" Margin="0,0,0,8" TextWrapping="Wrap"/>

            <TextBlock Text="Monedas" Margin="0,0,0,4"/>
            <TextBox x:Name="txtCoins" IsReadOnly="True" Margin="0,0,0,8"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button x:Name="btnEditar"   Content="Editar"   Width="90" Margin="0,0,8,0" Click="BtnEditar_Click"/>
            <Button x:Name="btnGuardar"  Content="Guardar"  Width="90" Margin="0,0,8,0" Click="BtnGuardar_Click" IsEnabled="False"/>
            <Button x:Name="btnCancelar" Content="Cancelar" Width="90" Click="BtnCancelar_Click" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Page>
