                                                    <Button x:Name="btnDiceNegativeBuy"
                                                            Content="{x:Static language:Lang.btnBuy}"
                                                            Width="100"
                                                            HorizontalAlignment="Center"
                                                            Padding="6,2"
                                                            FontSize="18"
                                                            Click="btnDiceNegativeBuy_Click" />
                                                </StackPanel>
                                            </Grid>
                                        </Border>

                                        <!-- Dice 1-3 -->
                                        <Border BorderThickness="1"
                                                BorderBrush="Gray"
                                                Padding="8"
                                                Margin="8"
                                                Width="220"
                                                Height="240"
                                                Background="#66000000"
                                                CornerRadius="10">
                                            <Grid>
                                                <Button x:Name="btnDice123Info"
                                                        Style="{StaticResource InfoDotsButton}"
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Top"
                                                        Margin="0,0,0,4"
                                                        Click="btnDice123Info_Click" />
                                                <StackPanel VerticalAlignment="Center">
                                                    <Image x:Name="imgDice123"
                                                           Height="80"
                                                           Width="80"
                                                           Stretch="Uniform"
                                                           HorizontalAlignment="Center"
                                                           Source="/Pages/Captura de pantalla 2024-12-02 215634.png" />
                                                    <TextBlock x:Name="lblDice123TitleHeader"
                                                               Text="{x:Static language:Lang.lblDice123Title}"
                                                               FontWeight="SemiBold"
                                                               FontSize="20"
                                                               Margin="0,8,0,2"
                                                               TextAlignment="Center"
                                                               Foreground="White" />
                                                    <TextBlock x:Name="lblDice123PriceHeader"
                                                               Text="{x:Static language:Lang.lblDice123Price}"
