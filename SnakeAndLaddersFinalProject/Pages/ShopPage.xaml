                                        </Border>
                                    </UniformGrid>
                                </StackPanel>

                                <!-- ITEM CHEST -->
                                <StackPanel Margin="0,0,0,15">
                                    <TextBlock x:Name="lblItemSectionTitleHeader"
                                               Text="{x:Static language:Lang.lblItemSectionTitle}"
