                                                <StackPanel VerticalAlignment="Center">
                                                    <Image x:Name="imgDice456"
                                                           Height="80"
                                                           Width="80"
                                                           Stretch="Uniform"
                                                           HorizontalAlignment="Center"
                                                           Source="/Pages/Captura de pantalla 2024-12-02 215634.png" />
                                                    <TextBlock x:Name="lblDice456TitleHeader"
                                                               Text="{x:Static language:Lang.lblDice456Title}"
