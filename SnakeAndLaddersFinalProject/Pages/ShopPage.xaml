                                                </StackPanel>
                                            </Grid>
                                        </Border>

                                        <!-- Dice 4-6 -->
                                        <Border BorderThickness="1"
                                                BorderBrush="Gray"
                                                Padding="8"
                                                Margin="8"
                                                Width="220"
                                                Height="240"
                                                Background="#66000000"
                                                CornerRadius="10">
                                            <Grid>
                                                <Button x:Name="btnDice456Info"
                                                        Style="{StaticResource InfoDotsButton}"
