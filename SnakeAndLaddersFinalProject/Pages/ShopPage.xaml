                                                <StackPanel VerticalAlignment="Center">
                                                    <Image x:Name="imgStickerCommonChest"
                                                           Height="109"
                                                           Width="147"
                                                           Stretch="Uniform"
                                                           HorizontalAlignment="Center"
                                                           Source="/Assets/Images/Icons/CommonChestIcon.png" />
                                                    <TextBlock x:Name="lblStickerCommonTitleHeader"
                                                               Text="{x:Static language:Lang.stickerCommonTitle}"
                                                               FontWeight="SemiBold"
                                                               FontSize="20"
                                                               Margin="0,8,0,2"
                                                               TextAlignment="Center"
                                                               Foreground="White" />
                                                    <TextBlock x:Name="lblStickerCommonPriceHeader"
                                                               Text="{x:Static language:Lang.lblStickerCommonPrice}"
                                                               FontSize="18"
                                                               Margin="0,0,0,8"
                                                               TextAlignment="Center"
                                                               Foreground="White" />
                                                    <Button x:Name="btnStickerCommonBuy"
                                                            Content="{x:Static language:Lang.btnBuy}"
                                                            Width="100"
                                                            HorizontalAlignment="Center"
                                                            Padding="6,2"
                                                            FontSize="18"
                                                            Click="btnStickerCommonBuy_Click" />
                                                </StackPanel>
                                            </Grid>
                                        </Border>

                                        <!-- Epic -->
                                        <Border BorderThickness="1"
                                                BorderBrush="Gray"
                                                Padding="8"
                                                Margin="8"
                                                Width="220"
                                                Height="240"
                                                Background="#66000000"
                                                CornerRadius="10">
                                            <Grid>
                                                <Button x:Name="btnStickerEpicInfo"
                                                        Style="{StaticResource InfoDotsButton}"
