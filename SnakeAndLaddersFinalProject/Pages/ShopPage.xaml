                                            Width="220"
                                            Height="240"
                                            Background="#66000000"
                                            CornerRadius="10">
                                        <Grid>
                                            <Button x:Name="btnItemChestInfo"
                                                    Style="{StaticResource InfoDotsButton}"
                                                    HorizontalAlignment="Right"
