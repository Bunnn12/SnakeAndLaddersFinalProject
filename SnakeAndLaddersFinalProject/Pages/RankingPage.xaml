<Page x:Class="SnakeAndLaddersFinalProject.Pages.RankingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:language="clr-namespace:SnakeAndLaddersFinalProject.Properties.Langs"
      xmlns:vm="clr-namespace:SnakeAndLaddersFinalProject.ViewModels"
      mc:Ignorable="d"
      Title="RankingPage"
      d:DesignWidth="1280"
      d:DesignHeight="720"
      SnapsToDevicePixels="True"
      UseLayoutRounding="True"
      TextOptions.TextRenderingMode="Aliased"
      Background="Transparent">

    <Page.Resources>

        <!-- Fondo general -->
        <ImageBrush x:Key="RankingBackgroundBrush"
                    ImageSource="/Assets/Images/Backgrounds/RankingBackground.png"
                    Stretch="UniformToFill"
                    AlignmentX="Center"
                    AlignmentY="Center"
                    RenderOptions.BitmapScalingMode="NearestNeighbor" />

        <!-- Sombra suave -->
        <DropShadowEffect x:Key="ShadowSoft"
                          BlurRadius="10"
                          ShadowDepth="0"
                          Direction="270"
                          Opacity="0.6"
                          Color="#22000000" />



        <!-- Paleta tipo tablón -->
        <SolidColorBrush x:Key="BrushBoardBackground" Color="#F7C76B" />
        <SolidColorBrush x:Key="BrushBoardBorder" Color="#9B4C24" />
        <SolidColorBrush x:Key="BrushBoardInner" Color="#FEE1A9" />
        <SolidColorBrush x:Key="BrushBoardInnerBorder" Color="#D0893A" />

        <!-- Encabezados tabla -->
        <SolidColorBrush x:Key="BrushGridHeader" Color="#E37A2B" />
        <SolidColorBrush x:Key="BrushGridHeaderText" Color="#321309" />

        <!-- Filas -->
        <SolidColorBrush x:Key="BrushGridRowNormal" Color="#FEE7BC" />
        <SolidColorBrush x:Key="BrushGridRowAlternating" Color="#FBD9A0" />

        <!-- Texto general -->
        <SolidColorBrush x:Key="BrushHeaderText" Color="#FFFDF2" />
        <SolidColorBrush x:Key="BrushFooterText" Color="#FFFDF2" />

        <!-- Madera oscura para el banner del título -->
        <SolidColorBrush x:Key="BrushWoodDark" Color="#5C3721" />

        <!-- Scrollbar café -->
        <SolidColorBrush x:Key="BrushScrollBarTrack" Color="#F7C76B" />
        <SolidColorBrush x:Key="BrushScrollBarThumb" Color="#B56524" />
        <SolidColorBrush x:Key="BrushScrollBarBorder" Color="#7A3A12" />

        <!-- Fuente principal -->
        <FontFamily x:Key="Font.RankingMain">Bahnschrift SemiBold</FontFamily>

        <!-- Celdas -->
        <Style x:Key="CenterCellStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontFamily" Value="{StaticResource Font.RankingMain}" />
            <Setter Property="FontSize" Value="22" />
        </Style>

        <Style x:Key="LeftCellStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="12,0,0,0" />
            <Setter Property="FontFamily" Value="{StaticResource Font.RankingMain}" />
            <Setter Property="FontSize" Value="22" />
        </Style>

        <Style x:Key="RightCellStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,0,12,0" />
            <Setter Property="FontFamily" Value="{StaticResource Font.RankingMain}" />
            <Setter Property="FontSize" Value="22" />
        </Style>

        <!-- Título -->
        <Style x:Key="LblRankingTitle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource BrushHeaderText}" />
            <Setter Property="FontFamily" Value="Impact" />
            <Setter Property="FontSize" Value="48" />
            <Setter Property="TextWrapping" Value="NoWrap" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Effect" Value="{StaticResource ShadowSoft}" />
        </Style>

        <!-- Botón back -->
        <Style x:Key="BtnBackRanking" TargetType="Button">
            <Setter Property="Width" Value="80" />
            <Setter Property="Height" Value="80" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>

        <!-- ScrollBar café (aplica a todo ScrollBar de la página) -->
        <Style TargetType="ScrollBar">
            <Setter Property="Width" Value="12" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="Transparent">
                            <!-- Fondo de la pista -->
                            <Border Background="{StaticResource BrushScrollBarTrack}"
                                    CornerRadius="4">
                                <Track x:Name="PART_Track"
                                       Orientation="{TemplateBinding Orientation}"
                                       IsDirectionReversed="true"
                                       SnapsToDevicePixels="True">
                                    <Track.DecreaseRepeatButton>
                                        <!-- Botones ocultos, solo usamos el thumb -->
                                        <RepeatButton Visibility="Collapsed" />
                                    </Track.DecreaseRepeatButton>
                                    <Track.IncreaseRepeatButton>
                                        <RepeatButton Visibility="Collapsed" />
                                    </Track.IncreaseRepeatButton>
                                    <Track.Thumb>
                                        <Thumb Background="{StaticResource BrushScrollBarThumb}"
                                               BorderBrush="{StaticResource BrushScrollBarBorder}"
                                               BorderThickness="1">
                                            <Thumb.Template>
                                                <ControlTemplate TargetType="Thumb">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="4" />
                                                </ControlTemplate>
                                            </Thumb.Template>
                                        </Thumb>
                                    </Track.Thumb>
                                </Track>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Orientation" Value="Horizontal">
                                <Setter Property="Height" Value="12" />
                                <Setter Property="Width" Value="Auto" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <!-- Estilo DataGrid -->
        <Style x:Key="RankingDataGridStyle" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False" />
            <Setter Property="HeadersVisibility" Value="Column" />
            <Setter Property="CanUserAddRows" Value="False" />
            <Setter Property="CanUserDeleteRows" Value="False" />
            <Setter Property="CanUserResizeRows" Value="False" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="GridLinesVisibility" Value="Horizontal" />
            <Setter Property="RowHeaderWidth" Value="0" />
            <Setter Property="SelectionMode" Value="Single" />
            <Setter Property="SelectionUnit" Value="FullRow" />
            <Setter Property="AlternationCount" Value="2" />
            <Setter Property="FontFamily" Value="{StaticResource Font.RankingMain}" />
            <Setter Property="FontSize" Value="22" />
            <Setter Property="RowBackground" Value="{StaticResource BrushGridRowNormal}" />
            <Setter Property="AlternatingRowBackground" Value="{StaticResource BrushGridRowAlternating}" />
            <Setter Property="HorizontalGridLinesBrush" Value="#33000000" />
            <Setter Property="VerticalGridLinesBrush" Value="#00000000" />
            <Setter Property="ColumnHeaderHeight" Value="56" />
            <Setter Property="RowHeight" Value="52" />
            <Setter Property="Foreground" Value="#321309" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="Padding" Value="0" />

            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="{StaticResource BrushGridHeader}" />
                        <Setter Property="Foreground" Value="{StaticResource BrushGridHeaderText}" />
                        <Setter Property="FontFamily" Value="{StaticResource Font.RankingMain}" />
                        <Setter Property="FontSize" Value="22" />
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                        <Setter Property="BorderBrush" Value="{StaticResource BrushBoardInnerBorder}" />
                        <Setter Property="BorderThickness" Value="0,0,0,2" />
                    </Style>
                </Setter.Value>
            </Setter>

            <!-- Selección -->
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="Padding" Value="0" />
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#FFD67A2B" />
                                <Setter Property="Foreground" Value="#321309" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>

    <Grid Background="{StaticResource RankingBackgroundBrush}">

        <Viewbox Stretch="Uniform"
                 StretchDirection="Both">
            <Grid Width="1280"
                  Height="720"
                  Background="Transparent"
                  Margin="24">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- CABECERA -->
                <Grid Grid.Row="0"
                      Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Botón volver -->
                    <Button x:Name="btnBack"
                            Grid.Column="0"
                            Style="{StaticResource BtnBackRanking}"
                            Click="Back">
                        <Image Source="/Assets/Images/Icons/BackIcon.png"
                               Width="48"
                               Height="48"
                               Stretch="Fill"
                               RenderOptions.BitmapScalingMode="NearestNeighbor" />
                    </Button>

                    <!-- Banner madera título -->
                    <Border Grid.Column="1"
                            CornerRadius="10"
                            BorderBrush="{DynamicResource BrushWoodDark}"
                            BorderThickness="4"
                            Padding="40,8"
                            HorizontalAlignment="Center"
                            Effect="{StaticResource ShadowSoft}" Background="#FF59320B" Width="954">
                        <TextBlock Text="{x:Static language:Lang.lblRankingTitleText}"
                                   d:Text="Players ranking"
                                   Style="{StaticResource LblRankingTitle}"
                                   HorizontalAlignment="Center" FontFamily="{StaticResource Font.M04B}" FontWeight="Bold" FontSize="26" />
                    </Border>
                </Grid>

                <!-- TABLERO PRINCIPAL -->
                <Grid Grid.Row="1"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center">
                    <!-- Marco de madera exterior -->
                    <Border CornerRadius="0"
                            Width="880"
                            Background="{StaticResource BrushBoardBackground}"
                            BorderBrush="{StaticResource BrushBoardBorder}"
                            BorderThickness="10"
                            Padding="10"
                            Effect="{StaticResource ShadowSoft}">
                        <!-- Inner panel donde va la tabla -->
                        <Border CornerRadius="0"
                                Background="{StaticResource BrushBoardInner}"
                                BorderBrush="{StaticResource BrushBoardInnerBorder}"
                                BorderThickness="4"
                                Padding="12">
                            <DataGrid ItemsSource="{Binding Players}"
                                      Style="{StaticResource RankingDataGridStyle}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="{x:Static language:Lang.colRankingPositionHeader}"
                                                        Binding="{Binding Position}"
                                                        Width="100"
                                                        ElementStyle="{StaticResource CenterCellStyle}" />

                                    <DataGridTextColumn Header="{x:Static language:Lang.colRankingUsernameHeader}"
                                                        Binding="{Binding Username}"
                                                        Width="*"
                                                        ElementStyle="{StaticResource CenterCellStyle}" />

                                    <DataGridTextColumn Header="{x:Static language:Lang.colRankingCoinsHeader}"
                                                        Binding="{Binding Coins}"
                                                        Width="150"
                                                        ElementStyle="{StaticResource CenterCellStyle}" />

                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>
                    </Border>
                </Grid>

                <!-- PIE -->
                <TextBlock Grid.Row="2"
                           Margin="0,24,0,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontFamily="{StaticResource Font.RankingMain}"
                           FontSize="16"
                           Foreground="{StaticResource BrushFooterText}"
                           Text="{x:Static language:Lang.lblRankingFooterText}" />
            </Grid>
        </Viewbox>
    </Grid>
</Page>
