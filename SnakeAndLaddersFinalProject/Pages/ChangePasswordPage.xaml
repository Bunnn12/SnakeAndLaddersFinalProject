<Page x:Class="SnakeAndLaddersFinalProject.Pages.ChangePasswordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:language="clr-namespace:SnakeAndLaddersFinalProject.Properties.Langs"
      mc:Ignorable="d"
      Title="ChangePasswordPage"
      d:DesignWidth="1280"
      d:DesignHeight="720"
      SnapsToDevicePixels="True"
      UseLayoutRounding="True"
      TextOptions.TextRenderingMode="Aliased"
      Background="Transparent">

    <Page.Resources>

        <!-- Fondo general (mismo que Ranking / EmailVerification) -->
        <ImageBrush x:Key="RankingBackgroundBrush"
                    ImageSource="/Assets/Images/Backgrounds/RankingBackground.png"
                    Stretch="UniformToFill"
                    AlignmentX="Center"
                    AlignmentY="Center"
                    RenderOptions.BitmapScalingMode="NearestNeighbor" />

        <!-- Sombra suave -->
        <DropShadowEffect x:Key="ShadowSoft"
                          BlurRadius="10"
                          ShadowDepth="0"
                          Direction="270"
                          Opacity="0.6"
                          Color="#22000000" />

        <!-- Paleta tipo tablón -->
        <SolidColorBrush x:Key="BrushBoardBackground" Color="#F7C76B" />
        <SolidColorBrush x:Key="BrushBoardBorder" Color="#9B4C24" />
        <SolidColorBrush x:Key="BrushBoardInner" Color="#FEE1A9" />
        <SolidColorBrush x:Key="BrushBoardInnerBorder" Color="#D0893A" />

        <!-- Texto encabezados / footer -->
        <SolidColorBrush x:Key="BrushHeaderText" Color="#FFFDF2" />
        <SolidColorBrush x:Key="BrushFooterText" Color="#FFFDF2" />

        <!-- Madera oscura para banner -->
        <SolidColorBrush x:Key="BrushWoodDark" Color="#5C3721" />

        <!-- Fuente principal -->
        <FontFamily x:Key="Font.RankingMain">Bahnschrift SemiBold</FontFamily>

        <!-- Estilo título -->
        <Style x:Key="LblRankingTitle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource BrushHeaderText}" />
            <Setter Property="FontFamily" Value="Impact" />
            <Setter Property="FontSize" Value="48" />
            <Setter Property="TextWrapping" Value="NoWrap" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Effect" Value="{StaticResource ShadowSoft}" />
        </Style>

        <!-- Estilo de label interno -->
        <Style x:Key="InnerLabelStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource Font.RankingMain}" />
            <Setter Property="FontSize" Value="22" />
            <Setter Property="Foreground" Value="#321309" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Margin" Value="0,0,0,4" />
        </Style>

        <!-- Estilo base para campos -->
        <Style x:Key="InnerTextBoxStyle" TargetType="Control">
            <Setter Property="FontFamily" Value="{StaticResource Font.RankingMain}" />
            <Setter Property="FontSize" Value="22" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Padding" Value="8,4" />
        </Style>

        <!-- TextBox tipo chat -->
        <Style x:Key="InnerTextBoxChatStyle"
               TargetType="TextBox"
               BasedOn="{StaticResource InnerTextBoxStyle}">
            <Setter Property="Background" Value="#FFFFFF" />
            <Setter Property="Foreground" Value="#321309" />
            <Setter Property="BorderBrush" Value="{StaticResource BrushBoardInnerBorder}" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="14"
                                SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="8,2" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- PasswordBox tipo chat -->
        <Style x:Key="InnerPasswordBoxChatStyle"
               TargetType="PasswordBox"
               BasedOn="{StaticResource InnerTextBoxStyle}">
            <Setter Property="Background" Value="#FFFFFF" />
            <Setter Property="Foreground" Value="#321309" />
            <Setter Property="BorderBrush" Value="{StaticResource BrushBoardInnerBorder}" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="14"
                                SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="8,2" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Botón principal -->
        <Style x:Key="PrimaryActionButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="220" />
            <Setter Property="Height" Value="52" />
            <Setter Property="FontFamily" Value="{StaticResource Font.RankingMain}" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Foreground" Value="#321309" />
            <Setter Property="Background" Value="#E37A2B" />
            <Setter Property="BorderBrush" Value="#D0893A" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Effect" Value="{StaticResource ShadowSoft}" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="8,0,8,0" />
        </Style>

        <!-- Botón secundario -->
        <Style x:Key="SecondaryActionButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource PrimaryActionButtonStyle}">
            <Setter Property="Background" Value="#FBD9A0" />
            <Setter Property="BorderBrush" Value="#D0893A" />
        </Style>

        <!-- Botón back (igual que ranking) -->
        <Style x:Key="BtnBackPage" TargetType="Button">
            <Setter Property="Width" Value="80" />
            <Setter Property="Height" Value="80" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>

    </Page.Resources>

    <Grid Background="{StaticResource RankingBackgroundBrush}"
          FocusManager.FocusedElement="{Binding ElementName=txtEmail}"
          KeyboardNavigation.TabNavigation="Cycle">
        <Viewbox Stretch="Uniform"
                 StretchDirection="Both">
            <Grid Width="1280"
                  Height="720"
                  Background="Transparent"
                  Margin="24">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- CABECERA -->
                <Grid Grid.Row="0"
                      Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Botón volver -->
                    <Button x:Name="btnBack"
                            Grid.Column="0"
                            Style="{StaticResource BtnBackPage}"
                            Click="Back">
                        <Image Source="/Assets/Images/Icons/BackIcon.png"
                               Width="48"
                               Height="48"
                               Stretch="Fill"
                               RenderOptions.BitmapScalingMode="NearestNeighbor" />
                    </Button>

                    <!-- Banner madera título -->
                    <Border Grid.Column="1"
                            CornerRadius="10"
                            BorderBrush="{StaticResource BrushWoodDark}"
                            BorderThickness="4"
                            Padding="40,8"
                            HorizontalAlignment="Center"
                            Effect="{StaticResource ShadowSoft}"
                            Background="#FF59320B">
                        <TextBlock x:Name="lblChangePasswordTitle"
                                   Text="{x:Static language:Lang.lblChangePasswordTitleText}"
                                   d:Text="Change password"
                                   Style="{StaticResource LblRankingTitle}"
                                   HorizontalAlignment="Center"
                                   FontFamily="{StaticResource Font.M04B}"
                                   FontWeight="Bold"
                                   FontSize="36" />
                    </Border>
                </Grid>

                <!-- CONTENIDO PRINCIPAL -->
                <Grid Grid.Row="1"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center">
                    <!-- Marco de madera exterior -->
                    <Border CornerRadius="0"
                            Width="720"
                            Background="{StaticResource BrushBoardBackground}"
                            BorderBrush="{StaticResource BrushBoardBorder}"
                            BorderThickness="10"
                            Padding="10"
                            Effect="{StaticResource ShadowSoft}"
                            Margin="0,0,0,-97">
                        <!-- Inner panel -->
                        <Border CornerRadius="0"
                                Background="{StaticResource BrushBoardInner}"
                                BorderBrush="{StaticResource BrushBoardInnerBorder}"
                                BorderThickness="4"
                                Padding="32"
                                Margin="0,0,-10,-10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <!-- instrucción + reglas -->
                                    <RowDefinition Height="24" />
                                    <RowDefinition Height="Auto" />
                                    <!-- email -->
                                    <RowDefinition Height="12" />
                                    <RowDefinition Height="Auto" />
                                    <!-- new -->
                                    <RowDefinition Height="12" />
                                    <RowDefinition Height="Auto" />
                                    <!-- confirm -->
                                    <RowDefinition Height="12" />
                                    <RowDefinition Height="Auto" />
                                    <!-- code -->
                                    <RowDefinition Height="24" />
                                    <RowDefinition Height="Auto" />
                                    <!-- botones -->
                                </Grid.RowDefinitions>

                                <!-- Mensaje de instrucción + reglas de password -->
                                <TextBlock x:Name="lblInstruction"
                                           Grid.Row="0"
                                           Style="{StaticResource InnerLabelStyle}"
                                           HorizontalAlignment="Center"
                                           TextAlignment="Center">
                                    <Run Text="{x:Static language:Lang.lblChangePasswordInstructionText}" />
                                    <LineBreak/>
                                    <Run Text="Password must be at least 8 characters and include uppercase, lowercase and at least one special character." />
                                </TextBlock>

                                <!-- Email -->
                                <StackPanel Grid.Row="2"
                                            Orientation="Vertical">
                                    <TextBlock x:Name="lblEmail"
                                               Text="{x:Static language:Lang.txtRegEmailText}"
                                               Style="{StaticResource InnerLabelStyle}" />
                                    <TextBox x:Name="txtEmail"
                                             Height="40"
                                             MaxLength="200"
                                             Style="{StaticResource InnerTextBoxChatStyle}" />
                                </StackPanel>

                                <!-- New password -->
                                <StackPanel Grid.Row="4"
                                            Orientation="Vertical">
                                    <TextBlock x:Name="lblNewPassword"
                                               Text="{x:Static language:Lang.lblChangePasswordNewPasswordText}"
                                               d:Text="New password"
                                               Style="{StaticResource InnerLabelStyle}" />
                                    <PasswordBox x:Name="pwdNewPassword"
                                                 Height="40"
                                                 MaxLength="510"
                                                 Style="{StaticResource InnerPasswordBoxChatStyle}" />
                                </StackPanel>

                                <!-- Confirm password -->
                                <StackPanel Grid.Row="6"
                                            Orientation="Vertical">
                                    <TextBlock x:Name="lblConfirmPassword"
                                               Text="{x:Static language:Lang.lblChangePasswordConfirmPasswordText}"
                                               d:Text="Confirm new password"
                                               Style="{StaticResource InnerLabelStyle}" />
                                    <PasswordBox x:Name="pwdConfirmPassword"
                                                 Height="40"
                                                 MaxLength="510"
                                                 Style="{StaticResource InnerPasswordBoxChatStyle}" />
                                </StackPanel>

                                <!-- Verification code -->
                                <StackPanel Grid.Row="8"
                                            Orientation="Vertical">
                                    <TextBlock x:Name="lblVerificationCode"
                                               Text="{x:Static language:Lang.lblChangePasswordCodeText}"
                                               d:Text="Verification code"
                                               Style="{StaticResource InnerLabelStyle}" />
                                    <TextBox x:Name="txtVerificationCode"
                                             Height="40"
                                             MaxLength="6"
                                             Style="{StaticResource InnerTextBoxChatStyle}"
                                             PreviewTextInput="VerificationCodePreviewTextInput"
                                             TextChanged="VerificationCodeTextChanged"
                                             DataObject.Pasting="VerificationCodeOnPaste" />
                                </StackPanel>

                                <!-- Botones -->
                                <StackPanel Grid.Row="10"
                                            Orientation="Horizontal"
                                            HorizontalAlignment="Center">
                                    <Button x:Name="btnSendCode"
                                            Content="{x:Static language:Lang.btnSendCodeText}"
                                            Style="{StaticResource SecondaryActionButtonStyle}"
                                            Click="SendCode" />
                                    <Button x:Name="btnChangePassword"
                                            Content="{x:Static language:Lang.btnChangePasswordText}"
                                            Style="{StaticResource PrimaryActionButtonStyle}"
                                            Click="ChangePassword" />
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Border>
                </Grid>

                <!-- PIE -->
                <TextBlock Grid.Row="2"
                           Margin="0,84,0,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontFamily="{StaticResource Font.RankingMain}"
                           FontSize="22"
                           Foreground="{StaticResource BrushFooterText}"
                           Text="{x:Static language:Lang.lblChangePasswordFooterText}"
                           d:Text="Your new password must meet the security requirements" />
            </Grid>
        </Viewbox>
    </Grid>
</Page>
