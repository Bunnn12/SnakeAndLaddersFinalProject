<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ===== Estilo base: Btn.PixelFlat ===== -->
    <Style TargetType="Button" x:Key="Btn.PixelFlat">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Cursor" Value="Arrow"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ===== Recursos compartidos para BtnFlat (mismos tonos del lobby) ===== -->
    <SolidColorBrush x:Key="BrushBlancoSuave" Color="#FFF8F0"/>
    <SolidColorBrush x:Key="BrushAmarillo"    Color="#F2C230"/>
    <SolidColorBrush x:Key="BrushVerde"       Color="#2E7D32"/>
    <SolidColorBrush x:Key="BrushNaranja"     Color="#F28C28"/>

    <DropShadowEffect x:Key="ShadowSoft" BlurRadius="8" ShadowDepth="0"
                      Direction="270" Opacity="0.35" Color="#000000"/>

    <!-- Imagen base para los botones planos -->
    <ImageBrush x:Key="IB.BtnFlat"
                ImageSource="/Assets/Images/BotonImg.png"
                Stretch="Fill"
                AlignmentX="Center" AlignmentY="Center"
                RenderOptions.BitmapScalingMode="NearestNeighbor"
                ViewboxUnits="RelativeToBoundingBox"
                Viewbox="0.083,0.083,0.834,0.834"/>

    <!-- ===== BtnFlat: el que pide tu SignUpPage ===== -->
    <Style x:Key="BtnFlat" TargetType="Button">
        <!-- Fuente igual que Inventory (Consolas) -->
        <Setter Property="FontFamily" Value="Consolas"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Foreground" Value="{StaticResource BrushBlancoSuave}"/>
        <Setter Property="Background" Value="{StaticResource IB.BtnFlat}"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="16,14"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <!-- Sombra suave -->
                        <Border CornerRadius="12" Background="Transparent"
                                Effect="{StaticResource ShadowSoft}"/>
                        <!-- Fondo con la imagen -->
                        <Border x:Name="Bg" CornerRadius="12"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter x:Name="ContentSite"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              TextElement.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="{StaticResource BrushAmarillo}"/>
                            <Setter TargetName="ContentSite" Property="TextElement.Foreground"
                                    Value="{StaticResource BrushAmarillo}"/>
                        </Trigger>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter Property="Foreground" Value="{StaticResource BrushVerde}"/>
                            <Setter TargetName="ContentSite" Property="TextElement.Foreground"
                                    Value="{StaticResource BrushVerde}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Bg" Property="Opacity" Value="0.9"/>
                            <Setter Property="Foreground" Value="{StaticResource BrushNaranja}"/>
                            <Setter TargetName="ContentSite" Property="TextElement.Foreground"
                                    Value="{StaticResource BrushNaranja}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.6"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ===== BtnInventory.Simple: hostea el Content tal cual (tu <Image>) ===== -->
    <Style x:Key="BtnIcon" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <!-- ToolTip base opcional -->
        <Setter Property="ToolTipService.InitialShowDelay" Value="200"/>
        <Setter Property="ToolTipService.ShowDuration" Value="6000"/>
        <Setter Property="ToolTipService.Placement" Value="Top"/>
        <Setter Property="ToolTipService.VerticalOffset" Value="-4"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid x:Name="Root" SnapsToDevicePixels="True" UseLayoutRounding="True">
                        <!-- Efecto de escala para hover/press -->
                        <Grid.RenderTransform>
                            <ScaleTransform x:Name="rtScale" ScaleX="1" ScaleY="1"/>
                        </Grid.RenderTransform>

                        <!-- Sombra suave (usa tu ShadowSoft existente) -->
                        <Border CornerRadius="10" Background="Transparent"
                            Effect="{StaticResource ShadowSoft}"/>

                        <!-- Overlay de estado -->
                        <Border x:Name="StateOverlay" CornerRadius="10"
                            Background="#FFFFFF" Opacity="0"/>

                        <!-- Aquí NO reemplazamos el contenido: va tu <Image/> tal cual -->
                        <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>

                        <!-- Visual States -->
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal"/>
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="rtScale"
                                                     Storyboard.TargetProperty="ScaleX"
                                                     To="1.06" Duration="0:0:0.12">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="rtScale"
                                                     Storyboard.TargetProperty="ScaleY"
                                                     To="1.06" Duration="0:0:0.12">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="StateOverlay"
                                                     Storyboard.TargetProperty="Opacity"
                                                     To="0.13" Duration="0:0:0.12"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="rtScale"
                                                     Storyboard.TargetProperty="ScaleX"
                                                     To="0.96" Duration="0:0:0.08">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="rtScale"
                                                     Storyboard.TargetProperty="ScaleY"
                                                     To="0.96" Duration="0:0:0.08">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="StateOverlay"
                                                     Storyboard.TargetProperty="Opacity"
                                                     To="0.18" Duration="0:0:0.08"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Disabled">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="Root"
                                                     Storyboard.TargetProperty="Opacity"
                                                     To="0.55" Duration="0:0:0"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>

                    <!-- Focus: borde sutil -->
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter TargetName="StateOverlay" Property="BorderBrush" 
                                Value="{StaticResource BrushAmarillo}"/>
                            <Setter TargetName="StateOverlay" Property="BorderThickness" Value="1"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <!-- ===== Estilo de ToolTip (pixel-friendly) ===== -->
    <Style x:Key="PixelToolTip" TargetType="ToolTip">
        <Setter Property="Background" Value="#1C1C1C"/>
        <Setter Property="Foreground" Value="{StaticResource BrushBlancoSuave}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BrushAmarillo}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="6,4"/>
        <Setter Property="FontFamily" Value="Consolas"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToolTip">
                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="6"
                        Effect="{StaticResource ShadowSoft}">
                        <ContentPresenter Margin="{TemplateBinding Padding}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>



</ResourceDictionary>
