<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ===== Estilo base: Btn.PixelFlat ===== -->
    <Style TargetType="Button" x:Key="Btn.PixelFlat">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Cursor" Value="Arrow"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ===== Recursos compartidos para BtnFlat (mismos tonos del lobby) ===== -->
    <SolidColorBrush x:Key="BrushBlancoSuave" Color="#FFF8F0"/>
    <SolidColorBrush x:Key="BrushAmarillo"    Color="#F2C230"/>
    <SolidColorBrush x:Key="BrushVerde"       Color="#2E7D32"/>
    <SolidColorBrush x:Key="BrushNaranja"     Color="#F28C28"/>

    <DropShadowEffect x:Key="ShadowSoft" BlurRadius="8" ShadowDepth="0"
                      Direction="270" Opacity="0.35" Color="#000000"/>

    <!-- Imagen base para los botones planos -->
    <ImageBrush x:Key="IB.BtnFlat"
                ImageSource="/Assets/Images/BotonImg.png"
                Stretch="Fill"
                AlignmentX="Center" AlignmentY="Center"
                RenderOptions.BitmapScalingMode="NearestNeighbor"
                ViewboxUnits="RelativeToBoundingBox"
                Viewbox="0.083,0.083,0.834,0.834"/>

    <!-- ===== BtnFlat: el que pide tu SignUpPage ===== -->
    <Style x:Key="BtnFlat" TargetType="Button">
        <!-- Fuente igual que Inventory (Consolas) -->
        <Setter Property="FontFamily" Value="Consolas"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Foreground" Value="{StaticResource BrushBlancoSuave}"/>
        <Setter Property="Background" Value="{StaticResource IB.BtnFlat}"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="16,14"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <!-- Sombra suave -->
                        <Border CornerRadius="12" Background="Transparent"
                                Effect="{StaticResource ShadowSoft}"/>
                        <!-- Fondo con la imagen -->
                        <Border x:Name="Bg" CornerRadius="12"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter x:Name="ContentSite"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              TextElement.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="{StaticResource BrushAmarillo}"/>
                            <Setter TargetName="ContentSite" Property="TextElement.Foreground"
                                    Value="{StaticResource BrushAmarillo}"/>
                        </Trigger>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter Property="Foreground" Value="{StaticResource BrushVerde}"/>
                            <Setter TargetName="ContentSite" Property="TextElement.Foreground"
                                    Value="{StaticResource BrushVerde}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Bg" Property="Opacity" Value="0.9"/>
                            <Setter Property="Foreground" Value="{StaticResource BrushNaranja}"/>
                            <Setter TargetName="ContentSite" Property="TextElement.Foreground"
                                    Value="{StaticResource BrushNaranja}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.6"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
