<Window x:Class="SnakeAndLaddersFinalProject.Windows.SocialProfileLinkWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:language="clr-namespace:SnakeAndLaddersFinalProject.Properties.Langs"
        Title="{x:Static language:Lang.SocialProfileLinkGenericTitle}"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Width="430"
        SizeToContent="Height"
        Background="#FF1E1E1E"
        WindowStyle="SingleBorderWindow"
        ShowInTaskbar="False">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock x:Name="lblTitle"
                   Grid.Row="0"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="White"
                   Text="{x:Static language:Lang.SocialProfileLinkGenericTitle}" />

        <TextBlock Grid.Row="1"
                   Margin="0,8,0,16"
                   TextWrapping="Wrap"
                   Foreground="White"
                   Text="{x:Static language:Lang.SocialProfileLinkInstructionsText}" />

        <StackPanel Grid.Row="2"
                    Orientation="Vertical">
            <TextBlock x:Name="lblUserCaption"
                       Margin="0,0,0,4"
                       Foreground="White"
                       Text="{x:Static language:Lang.SocialProfileLinkGenericCaption}" />
            <TextBox x:Name="txtProfileLink"
                     Height="30" />
        </StackPanel>

        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Width="90"
                    Height="30"
                    Margin="0,0,8,0"
                    Content="{x:Static language:Lang.btnAcceptText}"
                    Click="Accept" />
            <Button Width="90"
                    Height="30"
                    Content="{x:Static language:Lang.btnCancelText}"
                    Click="Cancel" />
        </StackPanel>
    </Grid>
</Window>
