<Window x:Class="SnakeAndLaddersFinalProject.Windows.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:language="clr-namespace:SnakeAndLaddersFinalProject.Properties.Langs"
        mc:Ignorable="d"
        Title="Chat"
        Height="240"
        Width="410"
        WindowStartupLocation="Manual"
        Loaded="ChatWindow_Loaded"
        Unloaded="WindowUnloaded">

    <Window.Resources>
        <!-- tus recursos tal cual -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style x:Key="ChatItemContainerStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0,6"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsMine}" Value="True">
                    <Setter Property="HorizontalContentAlignment" Value="Right"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsMine}" Value="False">
                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <DataTemplate x:Key="ChatBubbleTemplate">
            <Border MaxWidth="560"
                    Padding="10"
                    CornerRadius="10">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="#F4E1C1"/>
                        <Setter Property="Margin" Value="12,0,0,0"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsMine}" Value="True">
                                <Setter Property="Background" Value="#D7B899"/>
                                <Setter Property="Margin" Value="0,0,12,0"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>

                <StackPanel>
                    <DockPanel Margin="0,0,0,2">
                        <TextBlock Text="{Binding Header}"
                                   FontWeight="SemiBold"
                                   Foreground="#2B2117"
                                   VerticalAlignment="Center"/>

                        <Image Width="24"
                               Height="24"
                               Margin="6,0,0,0"
                               DockPanel.Dock="Right"
                               Source="{Binding AvatarId,
                                                Converter={StaticResource AvatarIdToPathConverter}}"
                               Visibility="{Binding HasAvatar,
                                                    Converter={StaticResource BooleanToVisibilityConverter}}"
                               Stretch="UniformToFill"/>
                    </DockPanel>

                    <TextBlock Text="{Binding Text}"
                               TextWrapping="Wrap"
                               Margin="0,2,0,0"
                               Foreground="#2B2117"/>

                    <TextBlock Text="{Binding SentAt, StringFormat=t}"
                               HorizontalAlignment="Right"
                               Opacity="0.7"
                               FontSize="11"
                               Margin="0,6,0,0"
                               Foreground="#2B2117"/>
                </StackPanel>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <!-- Layout centrado y compacto PERO escalado -->
    <Grid RenderTransformOrigin="0,0">
        <Grid.LayoutTransform>
            <!-- Ajusta 0.8 a 0.7 / 0.9 según qué tan mini lo quieras -->
            <ScaleTransform ScaleX="0.8" ScaleY="0.8" />
        </Grid.LayoutTransform>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="1" Grid.RowSpan="3" Margin="16" MaxWidth="820" MinWidth="480">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       x:Name="lblChatTitle"
                       Text="{x:Static language:Lang.chatTittle}"
                       FontSize="18"
                       FontWeight="Bold"
                       TextAlignment="Center"
                       Margin="0,0,0,8"/>

            <Border Grid.Row="1" BorderThickness="1" Padding="8">
                <ListBox x:Name="lvMessages"
                         ItemsSource="{Binding Messages}"
                         ItemContainerStyle="{StaticResource ChatItemContainerStyle}"
                         ItemTemplate="{StaticResource ChatBubbleTemplate}"
                         BorderThickness="0"
                         ScrollViewer.CanContentScroll="True"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         VirtualizingPanel.IsVirtualizing="True"
                         VirtualizingPanel.ScrollUnit="Pixel"/>
            </Border>

            <Grid Grid.Row="2" Margin="0,8,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="btnStickers"
                        Grid.Column="0"
                        Content="{x:Static language:Lang.lblStickersText}"
                        Command="{Binding OpenStickersCommand}"
                        MinWidth="84"
                        Padding="10,8"/>

                <TextBox x:Name="taMessage"
                         Grid.Column="2"
                         Text="{Binding NewMessage, UpdateSourceTrigger=PropertyChanged}"
                         AcceptsReturn="False"
                         TextWrapping="Wrap"
                         MaxLength="500"
                         MinHeight="36"
                         Loaded="TaMessage_Loaded"
                         ToolTip="Enter para enviar; Shift+Enter para salto de línea.">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter"
                                    Modifiers="Control"
                                    Command="{Binding SendMessageCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>

                <Button x:Name="btnSend"
                        Grid.Column="4"
                        Content="{x:Static language:Lang.btnSendText}"
                        Command="{Binding SendMessageCommand}"
                        MinWidth="84"
                        Padding="10,8"
                        IsDefault="True">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="IsEnabled" Value="True"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding NewMessage}" Value="">
                                    <Setter Property="IsEnabled" Value="False"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Window>
