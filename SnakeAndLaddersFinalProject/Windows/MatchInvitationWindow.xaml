<Window x:Class="SnakeAndLaddersFinalProject.Windows.MatchInvitationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:language="clr-namespace:SnakeAndLaddersFinalProject.Properties.Langs"
        mc:Ignorable="d"
        Title="{x:Static language:Lang.btnInviteFriendsText}"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        Width="430"
        Height="260"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        d:DesignHeight="260"
        d:DesignWidth="430">

    <Window.Resources>
        <Style x:Key="InvitePanelStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFF9F0" />
            <Setter Property="BorderBrush" Value="#D3A772" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="MaxWidth" Value="400" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="6"
                                      ShadowDepth="2"
                                      Opacity="0.55"
                                      Direction="270" />
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="InviteButtonPrimary" TargetType="Button">
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#FFFDF9" />
            <Setter Property="Background" Value="#FFA857" />
            <Setter Property="BorderBrush" Value="#E18A3A" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Padding" Value="6,4" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFB96E" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#E58C3D" />
                                <Setter Property="BorderBrush" Value="#C26D24" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.45" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="InviteDataGridRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="#FFFFFF" />
            <Style.Triggers>
                <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                    <Setter Property="Background" Value="#FFF7EC" />
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FFE2B8" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="0">
        <Border Style="{StaticResource InvitePanelStyle}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                MinWidth="360"
                MinHeight="170">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="6" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="8" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Header (zona para arrastrar la ventana) -->
                <DockPanel Grid.Row="0"
                           Margin="0,0,0,4"
                           MouseLeftButtonDown="Header_MouseLeftButtonDown">
                    <Button Width="22"
                            Height="22"
                            Padding="0"
                            Margin="4,0,0,0"
                            DockPanel.Dock="Right"
                            Style="{StaticResource InviteButtonPrimary}"
                            Background="#E57373"
                            BorderBrush="#C62828"
                            Content="✕"
                            Click="Close_Click" />

                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="{x:Static language:Lang.btnInviteFriendsText}"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="#3B2718" />
                        <TextBlock Margin="0,2,0,0"
                                   FontSize="12"
                                   Foreground="#3B2718">
                            <Run Text="Code: " />
                            <Run Text="{Binding GameCode, Mode=OneWay}"
                                 FontWeight="Bold" />
                        </TextBlock>
                    </StackPanel>
                </DockPanel>

                <!-- Friends list -->
                <Border Grid.Row="2"
                        Background="#E6F5EA"
                        CornerRadius="6"
                        BorderThickness="1.5"
                        BorderBrush="#9BC8A6"
                        Padding="4">
                    <DataGrid ItemsSource="{Binding Friends}"
                              SelectedItem="{Binding SelectedFriend, Mode=TwoWay}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              HeadersVisibility="Column"
                              AlternationCount="2"
                              RowStyle="{StaticResource InviteDataGridRowStyle}"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserResizeRows="False"
                              CanUserSortColumns="False"
                              GridLinesVisibility="None"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              MaxHeight="140"
                              ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="{x:Static language:Lang.lblProfileUserNameCaptionText}"
                                                Binding="{Binding FriendUserName}"
                                                Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>

                <!-- Bottom bar + grip de resize -->
                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="1"
                            Width="130"
                            Margin="0,0,4,0"
                            Content="{x:Static language:Lang.btnSendInvitationText}"
                            IsDefault="True"
                            Style="{StaticResource InviteButtonPrimary}"
                            Command="{Binding SendInvitationCommand}" />

                    <ResizeGrip Grid.Column="2"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Margin="0,0,0,0" />
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
