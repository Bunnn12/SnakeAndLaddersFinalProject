<Window x:Class="SnakeAndLaddersFinalProject.Windows.OtherReportCommentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:language="clr-namespace:SnakeAndLaddersFinalProject.Properties.Langs"
        Title="{x:Static language:Lang.OtherReasonWindowTitle}"
        Height="220"
        Width="360"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        Background="#331B26"
        AllowsTransparency="True">

    <Border Margin="12"
            CornerRadius="6"
            BorderThickness="2"
            BorderBrush="#FFB84A"
            Background="#441F33">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="8"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Text="{x:Static language:Lang.OtherReasonDescriptionLabel}"
                       Foreground="White"
                       FontWeight="Bold"
                       Margin="0,0,0,4"/>

            <TextBox x:Name="txtComment"
                     Grid.Row="2"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     MaxLength="250"/>

            <StackPanel Grid.Row="4"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button x:Name="btnOk"
                        Width="90"
                        Margin="0,0,8,0"
                        Content="{x:Static language:Lang.btnAcceptText}"
                        Click="BtnOk_Click"/>
                <Button x:Name="btnCancel"
                        Width="90"
                        Content="{x:Static language:Lang.btnCancelText}"
                        Click="BtnCancel_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
