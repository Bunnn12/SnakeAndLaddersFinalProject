<Window x:Class="SnakeAndLaddersFinalProject.Windows.StickerPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Stickers"
        Width="330"
        Height="195"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        Background="#FFF9F0">

    <Border Margin="8"
            Padding="8"
            Background="#FFF9F0"
            BorderBrush="#D3A772"
            BorderThickness="2"
            CornerRadius="8">
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      CanContentScroll="True">
            <ItemsControl x:Name="icStickers">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="0" Columns="5" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Margin="4"
                                Padding="4"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Click="SelectSticker"
                                Cursor="Hand">
                            <StackPanel>
                                <Image Width="48"
                                       Height="48"
                                       Stretch="Uniform"
                                       Source="{Binding ImagePath}" />
                            </StackPanel>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Border>
</Window>
