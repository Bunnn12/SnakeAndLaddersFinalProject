<UserControl x:Class="SnakeAndLaddersFinalProject.Controls.InventorySlotsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="InventorySlotsRoot">
    <!-- DataContext esperado: InventoryViewModel -->
    <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Center">

        <!-- Slots de ITEMS (1–3) -->
        <StackPanel Orientation="Horizontal"
                    Margin="0,0,24,0">

            <!-- SLOT 1 ITEM -->
            <Button Width="64"
                    Height="48"
                    Margin="4"
                    Command="{Binding SetItemSlot1Command}"
                    Background="Transparent"
                    BorderBrush="#F5F1C5"
                    BorderThickness="2"
                    ToolTip="{Binding Slot1Item.Name}">
                <Grid>
                    <Image Source="{Binding Slot1Item.IconPath}"
                           Stretch="Uniform"
                           Margin="4" />
                    <TextBlock Text="{Binding Slot1Item.Quantity, StringFormat=x{0}}"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Bottom"
                               Margin="2"
                               Foreground="#F5F1C5"
                               FontSize="12"
                               FontWeight="Bold" />
                </Grid>
            </Button>

            <!-- SLOT 2 ITEM -->
            <Button Width="64"
                    Height="48"
                    Margin="4"
                    Command="{Binding SetItemSlot2Command}"
                    Background="Transparent"
                    BorderBrush="#F5F1C5"
                    BorderThickness="2"
                    ToolTip="{Binding Slot2Item.Name}">
                <Grid>
                    <Image Source="{Binding Slot2Item.IconPath}"
                           Stretch="Uniform"
                           Margin="4" />
                    <TextBlock Text="{Binding Slot2Item.Quantity, StringFormat=x{0}}"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Bottom"
                               Margin="2"
                               Foreground="#F5F1C5"
                               FontSize="12"
                               FontWeight="Bold" />
                </Grid>
            </Button>

            <!-- SLOT 3 ITEM -->
            <Button Width="64"
                    Height="48"
                    Margin="4"
                    Command="{Binding SetItemSlot3Command}"
                    Background="Transparent"
                    BorderBrush="#F5F1C5"
                    BorderThickness="2"
                    ToolTip="{Binding Slot3Item.Name}">
                <Grid>
                    <Image Source="{Binding Slot3Item.IconPath}"
                           Stretch="Uniform"
                           Margin="4" />
                    <TextBlock Text="{Binding Slot3Item.Quantity, StringFormat=x{0}}"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Bottom"
                               Margin="2"
                               Foreground="#F5F1C5"
                               FontSize="12"
                               FontWeight="Bold" />
                </Grid>
            </Button>
        </StackPanel>

        <!-- Slots de DADOS (1–2) -->
        <StackPanel Orientation="Horizontal">

            <!-- SLOT 1 DADO -->
            <Button Width="64"
                    Height="48"
                    Margin="4"
                    Command="{Binding SetDiceSlot1Command}"
                    Background="Transparent"
                    BorderBrush="#F5F1C5"
                    BorderThickness="2"
                    ToolTip="{Binding Slot1Dice.Name}">
                <Grid>
                    <Image Source="{Binding Slot1Dice.IconPath}"
                           Stretch="Uniform"
                           Margin="4" />
                    <TextBlock Text="{Binding Slot1Dice.Quantity, StringFormat=x{0}}"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Bottom"
                               Margin="2"
                               Foreground="#F5F1C5"
                               FontSize="12"
                               FontWeight="Bold" />
                </Grid>
            </Button>

            <!-- SLOT 2 DADO -->
            <Button Width="64"
                    Height="48"
                    Margin="4"
                    Command="{Binding SetDiceSlot2Command}"
                    Background="Transparent"
                    BorderBrush="#F5F1C5"
                    BorderThickness="2"
                    ToolTip="{Binding Slot2Dice.Name}">
                <Grid>
                    <Image Source="{Binding Slot2Dice.IconPath}"
                           Stretch="Uniform"
                           Margin="4" />
                    <TextBlock Text="{Binding Slot2Dice.Quantity, StringFormat=x{0}}"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Bottom"
                               Margin="2"
                               Foreground="#F5F1C5"
                               FontSize="12"
                               FontWeight="Bold" />
                </Grid>
            </Button>
        </StackPanel>
    </StackPanel>
</UserControl>
