<Window x:Class="SnakeAndLaddersFinalProject.DialogBasicWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dialog"
        Width="460" Height="260"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        SnapsToDevicePixels="True"
        UseLayoutRounding="True"
        TextOptions.TextRenderingMode="Aliased"
        TextOptions.TextFormattingMode="Display">

    <Window.Resources>
        <!-- Fondo: recorte leve para evitar halos -->
        <ImageBrush x:Key="DialogBackplateBrush"
                    ImageSource="/Assets/Images/Backgrounds/DialogBackground.png"
                    Stretch="UniformToFill"
                    AlignmentX="Center" AlignmentY="Center"
                    ViewboxUnits="RelativeToBoundingBox"
                    Viewbox="0.02,0.02,0.96,0.96"
                    RenderOptions.BitmapScalingMode="NearestNeighbor"/>

        <!-- Oculta cualquier Image sin Source -->
        <Style TargetType="Image">
            <Setter Property="Visibility" Value="Visible"/>
            <Style.Triggers>
                <Trigger Property="Source" Value="{x:Null}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Botón base sin adorner de foco -->
        <Style x:Key="DialogButton" TargetType="Button">
            <Setter Property="Width" Value="96"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Background" Value="#33000000"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#55FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        </Style>

        <!-- Título -->
        <Style x:Key="TitleText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>

        <!-- Texto del mensaje -->
        <Style x:Key="MessageText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </Window.Resources>

    <!-- Contenedor con esquinas y clip -->
    <Border CornerRadius="18"
            ClipToBounds="True"
            Background="{StaticResource DialogBackplateBrush}"
            RenderOptions.BitmapScalingMode="NearestNeighbor">

        <!-- Padding interno uniforme -->
        <Grid Margin="62,26,41,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="*"/>
                <!-- Content -->
                <RowDefinition Height="Auto"/>
                <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- ===== Header: título a la izquierda y botón cerrar a la derecha ===== -->
            <Grid Grid.Row="0" Margin="2,18,2,40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Style="{StaticResource TitleText}"
                           Text="{Binding DialogTitle, RelativeSource={RelativeSource AncestorType=Window}}"
                           Margin="34,10,46,0" VerticalAlignment="Top"/>

                <Button
                        Content="✕"
                        Width="28" Height="28"
                        Padding="0"
                        Background="#66000000"
                        Foreground="White"
                        BorderBrush="#22FFFFFF"
                        BorderThickness="1"
                        Cursor="Hand"
                        FocusVisualStyle="{x:Null}"
                        Click="OnCloseClick" Margin="306,3,19,3"/>
            </Grid>

            <!-- ===== Content: icono (opcional) + mensaje con scroll si se excede ===== -->
            <Grid Grid.Row="1" Margin="42,0,29,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0"
                       Source="{Binding IconSource, RelativeSource={RelativeSource AncestorType=Window}}"
                       Width="40" Height="40"
                       Stretch="Uniform"
                       VerticalAlignment="Top"
                       Margin="0,2,0,0"/>

                <ScrollViewer Grid.Column="2"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled" Margin="37,0,33,0">
                    <TextBlock Style="{StaticResource MessageText}"
                               Text="{Binding MessageText, RelativeSource={RelativeSource AncestorType=Window}}" Width="342"/>
                </ScrollViewer>
            </Grid>

            <!-- ===== Footer: botones alineados a la derecha ===== -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,10,0,0">
                <Button x:Name="BtnOk"
                        Content="OK"
                        Style="{StaticResource DialogButton}"
                        Visibility="Collapsed"
                        Click="OnOkClick"/>
                <Button x:Name="BtnYes"
                        Content="Yes"
                        Style="{StaticResource DialogButton}"
                        Margin="8,0,0,0"
                        Visibility="Collapsed"
                        Click="OnYesClick"/>
                <Button x:Name="BtnNo"
                        Content="No"
                        Style="{StaticResource DialogButton}"
                        Margin="8,0,0,0"
                        Visibility="Collapsed"
                        Click="OnNoClick"/>
                <Button x:Name="BtnCancel"
                        Content="Cancel"
                        Style="{StaticResource DialogButton}"
                        Margin="8,0,0,0"
                        Visibility="Collapsed"
                        Click="OnCancelClick"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
