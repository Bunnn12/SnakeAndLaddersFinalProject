<Window x:Class="SnakeAndLaddersFinalProject.DialogBasicWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dialog"
        Width="439" Height="248"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        SnapsToDevicePixels="True"
        UseLayoutRounding="True"
        TextOptions.TextRenderingMode="Aliased"
        TextOptions.TextFormattingMode="Display">

    <Window.Resources>
        <!-- Recorta 2% por lado para ocultar halos/bordes blancos del PNG -->
        <ImageBrush x:Key="DialogBackplateBrush"
                    ImageSource="/Assets/Images/Backgrounds/DialogBackground.png"
                    Stretch="Uniform"
                    AlignmentX="Center" AlignmentY="Center"
                    ViewboxUnits="RelativeToBoundingBox"
                    Viewbox="0.02,0.02,0.96,0.96"
                    RenderOptions.BitmapScalingMode="NearestNeighbor"/>
    </Window.Resources>

    <!-- El Border define la silueta y recorta el contenido (adiós borde blanco) -->
    <Border CornerRadius="18"
            ClipToBounds="True"
            BorderThickness="0"
            Background="{StaticResource DialogBackplateBrush}"
            RenderOptions.BitmapScalingMode="NearestNeighbor" Margin="0,0,132,103">

        <Grid Margin="16">
            <Frame x:Name="MainFrame"
                   NavigationUIVisibility="Hidden"
                   Background="Transparent"/>
        </Grid>
    </Border>
</Window>
